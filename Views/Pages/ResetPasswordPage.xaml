<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.ResetPasswordPage"
             Title="Reset Password">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="16" Padding="24">
                <Label Text="Reset your password" FontSize="24" />

                <Entry Placeholder="Verification Code" Text="{Binding Code}" Keyboard="Numeric" />
                <Entry Placeholder="New Password" Text="{Binding NewPassword}" IsPassword="True" />
                <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True" />

                <Button Text="Submit" Command="{Binding SubmitResetCommand}" />
                <Button Text="Back" Command="{Binding GoBackCommand}" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

