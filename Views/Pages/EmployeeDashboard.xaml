<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.EmployeeDashboard"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#C1A892">

    <Grid ColumnDefinitions="200, *" RowDefinitions="*">
        <!-- Sidebar Navigation -->
        <views:NavigationBar Grid.Column="0"/>

        <!-- Main Content -->
        <VerticalStackLayout Grid.Column="1" Padding="20" Spacing="20">

            <!-- Top Bar -->
            <Grid ColumnDefinitions="*, Auto, Auto" VerticalOptions="Center" ColumnSpacing="25">
                <Label Text="Home" FontSize="32" FontAttributes="Bold" FontFamily="MontserratBlack" VerticalOptions="Center" TextColor="#3E2723"/>
                <ImageButton Grid.Column="1" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                <Grid Grid.Column="2" WidthRequest="40" HeightRequest="40">
                    <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                           WidthRequest="40" 
                           HeightRequest="40" 
                           Aspect="AspectFill" 
                           ZIndex="1" />
                    <ImageButton Source="usericon.png" 
                                 WidthRequest="40" 
                                 HeightRequest="40" 
                                 BackgroundColor="Transparent"
                                 ZIndex="0"
                                 Clicked="OnProfileClicked"/>
                </Grid>
            </Grid>

            <!-- Dashboard Grid -->
            <Grid ColumnDefinitions="*,0.6*" RowDefinitions="Auto" ColumnSpacing="15" RowSpacing="15">

                <!-- Left Side: Top Cards -->
                <Grid Grid.Column="0" ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">

                    <!-- Total Orders Today -->
                    <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="White" CornerRadius="25" Padding="20" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                            <Label Text="Total Orders Today" FontAttributes="Bold" HorizontalOptions="Center" FontSize="18" TextColor="#5B4F45"/>
                            <Label Text="{Binding TotalOrdersToday}" FontSize="36"  HorizontalOptions="Center" FontAttributes="Bold" TextColor="#3E2723"/>
                            <Label Text="{Binding OrdersTrend}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Total Sales Today -->
                    <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="White" CornerRadius="25" Padding="20" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                            <Label Text="Total Sales Today" FontAttributes="Bold" HorizontalOptions="Center" FontSize="18" TextColor="#5B4F45"/>
                            <Label Text="{Binding TotalSalesToday, StringFormat='â‚±{0:F2}'}" FontSize="36" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#2E7D32"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Most Bought Today -->
                    <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="White" CornerRadius="25" Padding="20" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                            <Label Text="Most Bought Today" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                            <Label Text="{Binding MostBoughtToday}" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#3E2723"/>
                            <Label Text="{Binding MostBoughtTrend}" FontSize="14" HorizontalOptions="Center" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Trending Today -->
                    <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="White" CornerRadius="25" Padding="20" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                            <Label Text="Trending Today" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                            <Label Text="{Binding TrendingToday}" FontSize="32" FontAttributes="Bold" TextColor="#6A1B9A"/>
                            <Label Text="{Binding TrendingPercent}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>

                </Grid>

                <!-- Right Side: Inventory Alert -->
                <Frame Grid.Column="1" CornerRadius="25" Padding="20" BackgroundColor="White" HasShadow="True" Grid.RowSpan="2" VerticalOptions="Start">
                    <VerticalStackLayout>
                        <Label Text="Inventory Alert" FontAttributes="Bold" FontSize="20" TextColor="#5B4F45"/>
                        <Frame CornerRadius="20" Padding="10" BackgroundColor="#F9F9F9" Margin="5">
                            <CollectionView ItemsSource="{Binding InventoryAlerts}" Margin="0,10,0,0" HeightRequest="120">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="White" CornerRadius="10" Padding="8" Margin="0,2" HasShadow="True">
                                            <Label Text="{Binding .}" 
                                                   TextColor="{Binding ., Converter={StaticResource StockColorConverter}}"
                                                   FontSize="12" 
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="FillAndExpand"/>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Frame>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="12" Margin="0,5,0,0">
                            <Button Text="Request Restock" CornerRadius="20" BackgroundColor="#897564" TextColor="White" WidthRequest="150" HeightRequest="35"/>
                            <Label Text="See More" TextColor="#5B4F45" VerticalOptions="Center"/>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

            <!-- Recent Actions + Today's Sales Report -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="300" ColumnSpacing="15">
                <!-- Recent Orders -->
                <Frame Grid.Column="0" CornerRadius="25" Padding="20" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Recent Orders" FontAttributes="Bold" FontSize="20" TextColor="#5B4F45"/>
                        <ScrollView Orientation="Horizontal" Margin="0,10,0,0">
                            <CollectionView ItemsSource="{Binding RecentOrders}" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="#FAFAFA" CornerRadius="24" Padding="16" Margin="6" WidthRequest="170" HeightRequest="190" HasShadow="True">
                                            <VerticalStackLayout Spacing="10">
                                                <Frame CornerRadius="35" Padding="0" BackgroundColor="White" WidthRequest="70" HeightRequest="70" HorizontalOptions="Center" IsClippedToBounds="True">
                                                    <Image Source="{Binding ProductImage}" Aspect="AspectFill" WidthRequest="70" HeightRequest="70"/>
                                                </Frame>
                                                <Label Text="{Binding OrderDisplay}" FontSize="13" FontAttributes="Bold" TextColor="#5B4F45" HorizontalOptions="Center"/>
                                                <Label Text="{Binding Status}" FontSize="11" TextColor="{Binding StatusColor}" HorizontalOptions="Center"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Today's Sales Report -->
                <Frame Grid.Column="1" CornerRadius="25" Padding="20" BackgroundColor="White" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Today's Sales Report" FontAttributes="Bold" FontSize="20" TextColor="#5B4F45"/>
                        <Label Text="Top 5 Selling Products" FontSize="14" TextColor="Gray" Margin="0,5,0,10"/>

                        <!-- Bar Chart for Top Selling Products -->
                        <CollectionView ItemsSource="{Binding TopSellingProductsToday}" HeightRequest="150" ItemsLayout="HorizontalList">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <VerticalStackLayout HorizontalOptions="Center" WidthRequest="90" VerticalOptions="End" Spacing="6">
                                        <Grid HeightRequest="120" VerticalOptions="End" RowDefinitions="*,Auto">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <BoxView VerticalOptions="End" HeightRequest="{Binding ScaledCount}" WidthRequest="45" Color="#4CAF50" CornerRadius="8"/>
                                                <Label Text="{Binding Count}" FontSize="10" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"/>
                                            </Grid>
                                            <Label Grid.Row="1" Text="{Binding Name}" FontSize="9" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center" MaxLines="2"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Product List -->
                        <CollectionView ItemsSource="{Binding TopSellingProductsToday}" HeightRequest="80" Margin="0,10,0,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" Padding="5">
                                        <Label Text="{Binding Name}" FontSize="12" VerticalOptions="Center"/>
                                        <Label Text="{Binding Count, StringFormat='{0} sold'}" FontSize="12" TextColor="Gray" Grid.Column="1" VerticalOptions="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

        </VerticalStackLayout>

        <!-- Popups -->
        <views:Settings BindingContext="{Binding .}" Grid.ColumnSpan="2"/>
        <otherViews:ManagePOSOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditProductPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup.EditProductPopupVM}" Grid.ColumnSpan="2" ZIndex="1900"/>
        <otherViews:ManageInventoryOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditInventoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=EditInventoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:AddItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2"/>
        <otherViews:UpdateInventoryDetails BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:AddItemToPOS BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup}" Grid.ColumnSpan="2"/>
        <otherViews:ConnectPOSItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1100"/>
        <otherViews:InputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200"/>
        <otherViews:PreviewPOSItem BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1300"/>
        <otherViews:AddonsSelectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.AddonsPopup}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:CartPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=POSVM.CartPopup}" Grid.ColumnSpan="2"/>
        <otherViews:HistoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=HistoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:PaymentPopup x:Name="PaymentPopupControl" Grid.ColumnSpan="2"/>
        <!-- Removed OrderCompletePopup here; it should only appear on POS -->
        <otherViews:OrderConfirmedPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=OrderConfirmedPopup}" Grid.ColumnSpan="2" ZIndex="2000"/>
        <otherViews:SuccessCardPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=SuccessCardPopup}" Grid.ColumnSpan="2" ZIndex="1200"/>
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
        <otherViews:PasswordResetPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=PasswordResetPopup}" Grid.ColumnSpan="2" ZIndex="1700"/>

    </Grid>
</ContentPage>