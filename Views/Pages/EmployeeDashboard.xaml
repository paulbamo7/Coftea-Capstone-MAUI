<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.EmployeeDashboard"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#D6BCA8">
   
    <Grid ColumnDefinitions="200, *" RowDefinitions="*">
        <!-- Sidebar Navigation -->
        <views:NavigationBar Grid.Column="0"/>

        <!-- Main Content -->
        <VerticalStackLayout Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Top Bar -->
                <Grid ColumnDefinitions="*, Auto, Auto, Auto" VerticalOptions="Center" ColumnSpacing="25">
                    <Label Text="Home" FontSize="32" FontAttributes="Bold" VerticalOptions="Center"/>
                    <SearchBar Placeholder="Search for something" Grid.Column="1" WidthRequest="300"/>
                    <ImageButton Source="settings.png" Grid.Column="2" WidthRequest="30" HeightRequest="30" Command="{Binding ShowSettingsPopupCommand}" />
                    <ImageButton Source="usericon.png" Grid.Column="3" WidthRequest="40" HeightRequest="40"/>
                </Grid>

                <!-- Top Metrics -->
                <Grid ColumnDefinitions="*,*,*" HeightRequest="300">
                    <Frame CornerRadius="20" Padding="20" BackgroundColor="#baa593" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="Total Sales Today:" FontAttributes="Bold" FontSize="24"/>
                            <Label Text="{Binding TotalSales, StringFormat='{}{0:C}'}" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,25,0,0"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="20" Padding="20" BackgroundColor="#baa593" Margin="5" Grid.Column="1">
                        <VerticalStackLayout>
                            <Label Text="Total Orders:" FontAttributes="Bold" FontSize="24"/>
                            <Label Text="{Binding TotalOrder}" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,25,0,0"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="20" Padding="20" BackgroundColor="#F0F0F0" Margin="5" Grid.Column="2" Grid.RowSpan="3">
                        <VerticalStackLayout>
                            <Label Text="Inventory Alert" FontAttributes="Bold" FontSize="24"/>
                            <Frame CornerRadius="20" Padding="10" BackgroundColor="White" Margin="5">
                                <CollectionView ItemsSource="{Binding InventoryAlerts}" Margin="0,10,0,0">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding .}" TextColor="{Binding ., Converter={StaticResource StockColorConverter}}" />
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </Frame>
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                                <Button Text="Request Restock" CornerRadius="20" BackgroundColor="#897564" WidthRequest="150" HeightRequest="40"/>
                                <Label Text="See More" TextColor="#000000" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Recent Actions + Today's Sales Report -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="300" Margin="0,10,0,0">
                    <!-- List of Recent Actions -->
                    <Frame Grid.Column="0" CornerRadius="20" Padding="10" BackgroundColor="White" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="List of Recent Actions" FontAttributes="Bold"/>
                            <CollectionView ItemsSource="{Binding RecentActions}" Margin="0,10,0,0">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="#f5f5f5" Padding="10">
                                            <Label Text="{Binding .}" />
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Today's Sales Report -->
                    <Frame Grid.Column="1" CornerRadius="20" Padding="10" BackgroundColor="White" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="Today's Sales Report" FontAttributes="Bold"/>
                            <BoxView HeightRequest="150" Color="#eee"/>
                            <!-- Placeholder for chart -->
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </VerticalStackLayout>
        </VerticalStackLayout>
        
        <!-- Settings Popup -->
        <views:Settings BindingContext="{Binding Source={x:Static Application.Current}, Path=SettingsPopup}" Grid.ColumnSpan="2"/>
        
        <!-- Manage POS Options Popup -->
        <otherViews:ManagePOSOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup}" Grid.ColumnSpan="2"/>
        <otherViews:EditProductPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup.EditProductPopupVM}" Grid.ColumnSpan="2"/>
        
        <!-- Manage Inventory Options Popup -->
        <otherViews:ManageInventoryOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:AddItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>