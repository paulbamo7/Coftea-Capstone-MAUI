<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.PurchaseOrderHistoryPage"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel.Pages"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             BackgroundColor="#D6BCA8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToColorConverter x:Key="StringToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:PurchaseOrderHistoryPageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation -->
        <views:NavigationBar x:Name="Sidebar" Grid.Column="0"/>

        <!-- Main Content -->
        <Grid Grid.Column="1" Padding="20" RowDefinitions="Auto,*">
            <VerticalStackLayout Padding="0" Spacing="20">
                <!-- Top Bar -->
                <Grid ColumnDefinitions="*, Auto, Auto" VerticalOptions="Center" ColumnSpacing="15">
                    <Label Text="Purchase Order History" FontSize="32" FontAttributes="Bold" FontFamily="MontserratBlack" TextColor="#5B4F45" VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="1" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                    <Grid Grid.Column="2" WidthRequest="40" HeightRequest="40">
                        <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                               WidthRequest="40" 
                               HeightRequest="40" 
                               Aspect="AspectFill" 
                               ZIndex="1" />
                        <ImageButton Source="usericon.png" 
                                     WidthRequest="40" 
                                     HeightRequest="40" 
                                     BackgroundColor="Transparent"
                                     Clicked="OnProfileClicked"
                                     ZIndex="0"/>
                    </Grid>
                </Grid>

                <!-- Fixed Frame with Scrollable Content -->
                <Frame BackgroundColor="#7E6D5F" CornerRadius="15" Padding="20" HasShadow="False" HeightRequest="660">
                    <Grid RowDefinitions="Auto,*,Auto,Auto">
                        
                        <!-- Search & Filter (Fixed at top) -->
                        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" RowSpacing="16" Margin="0,0,0,15">
                            <Label Grid.Row="0"
                                   Text="{Binding TotalOrders, StringFormat='Total Orders: {0}'}"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   FontFamily="Montserrat-Black"
                                   TextColor="White"/>
                            
                            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="15">
                                <Border Stroke="#8B7355" 
                                        StrokeShape="RoundRectangle 15" 
                                        StrokeThickness="2" 
                                        HeightRequest="45" 
                                        BackgroundColor="White"
                                        Grid.Column="0">
                                    <Entry Placeholder="Search by PO#, user, supplier, or items..." 
                                           Text="{Binding SearchText, Mode=TwoWay}" 
                                           PlaceholderColor="#8B7355" 
                                           TextColor="#5B4F45"
                                           BackgroundColor="Transparent"
                                           Margin="15,0"/>
                                </Border>
                                
                                <Picker Grid.Column="1"
                                        ItemsSource="{Binding StatusFilters}"
                                        SelectedItem="{Binding SelectedStatusFilter, Mode=TwoWay}"
                                        BackgroundColor="White"
                                        TextColor="#5B4F45"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        WidthRequest="150"
                                        HeightRequest="45"
                                        Title="Filter Status"/>
                            </Grid>
                        </Grid>

                        <!-- Scrollable Purchase Orders List -->
                        <ScrollView Grid.Row="1" Orientation="Vertical">
                            <CollectionView ItemsSource="{Binding PurchaseOrders}">
                                <CollectionView.EmptyView>
                                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                                        <Label Text="No purchase orders found."
                                               TextColor="White"
                                               FontSize="16"
                                               HorizontalTextAlignment="Center"/>
                                    </VerticalStackLayout>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="White"
                                               CornerRadius="10"
                                               Padding="15"
                                               Margin="0,0,0,12"
                                               HasShadow="True">
                                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="15">
                                                <!-- PO Number -->
                                                <Label Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding PurchaseOrderId, StringFormat='PO #{0}'}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#5B4F45"
                                                       VerticalOptions="Center"/>
                                                
                                                <!-- Status Badge -->
                                                <Frame Grid.Row="0" Grid.Column="1"
                                                       BackgroundColor="{Binding StatusColor}"
                                                       CornerRadius="8"
                                                       Padding="10,5"
                                                       HorizontalOptions="Start"
                                                       HasShadow="False">
                                                    <Label Text="{Binding Status}"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="White"/>
                                                </Frame>

                                                <!-- Date -->
                                                <Label Grid.Row="0" Grid.Column="2"
                                                       Text="{Binding FormattedDate}"
                                                       FontSize="14"
                                                       TextColor="#8B7355"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="End"/>

                                                <!-- View Details Button -->
                                                <Button Grid.Row="0" Grid.Column="3"
                                                        Text="View Details"
                                                        BackgroundColor="#BDAEA2"
                                                        TextColor="#5B4F45"
                                                        BorderColor="#8B7355"
                                                        BorderWidth="2"
                                                        CornerRadius="8"
                                                        FontSize="12"
                                                        FontAttributes="Bold"
                                                        HeightRequest="35"
                                                        Padding="12,0"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PurchaseOrderHistoryPageViewModel}}, Path=ViewOrderDetailsCommand}"
                                                        CommandParameter="{Binding .}"/>

                                                <!-- Requested By & Supplier -->
                                                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Spacing="4">
                                                    <Label FontSize="13" TextColor="#666">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="Requested by: " FontAttributes="None"/>
                                                                <Span Text="{Binding RequestedBy}" FontAttributes="Bold" TextColor="#5B4F45"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                    <Label FontSize="13" TextColor="#666">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="Supplier: " FontAttributes="None"/>
                                                                <Span Text="{Binding SupplierName}" FontAttributes="Bold" TextColor="#5B4F45"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                </VerticalStackLayout>

                                                <!-- Items Preview -->
                                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                                       Text="{Binding ItemsPreview}"
                                                       FontSize="12"
                                                       TextColor="#666"
                                                       LineBreakMode="TailTruncation"
                                                       MaxLines="2"/>

                                                <!-- Export PDF Button -->
                                                <Button Grid.Row="2" Grid.Column="3"
                                                        Text="ðŸ“„ PDF"
                                                        BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                        CornerRadius="8"
                                                        FontSize="12"
                                                        FontAttributes="Bold"
                                                        HeightRequest="35"
                                                        Padding="12,0"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PurchaseOrderHistoryPageViewModel}}, Path=ExportPDFCommand}"
                                                        CommandParameter="{Binding .}"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>

                        <!-- Navigation Buttons Frame -->
                        <Frame Grid.Row="2" 
                               BackgroundColor="#5B4F45" 
                               CornerRadius="10" 
                               Padding="8" 
                               HasShadow="False"
                               Margin="0,15,0,0"
                               HorizontalOptions="Center">
                            <Grid ColumnDefinitions="Auto,*" 
                                  VerticalOptions="Center">
                            
                                <!-- Create Purchase Order and Manage Purchase Order Buttons - Left -->
                                <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="8" HorizontalOptions="Start">
                                    <Button Text="ðŸ“‹ CREATE PURCHASE ORDER" 
                                            BackgroundColor="#28a745" 
                                            TextColor="White" 
                                            FontSize="13" 
                                            FontAttributes="Bold"
                                            CornerRadius="20"
                                            BorderColor="#8B7355"
                                            BorderWidth="2"
                                            Padding="12,8"
                                            HeightRequest="40"
                                            Command="{Binding CreatePurchaseOrderCommand}"
                                            IsVisible="{Binding Source={x:Static Application.Current}, Path=CurrentUser.IsAdmin}"/>
                                    
                                    <Button Text="ðŸ“¦ MANAGE PURCHASE ORDER" 
                                            BackgroundColor="#4A90E2" 
                                            TextColor="White" 
                                            FontSize="13" 
                                            FontAttributes="Bold"
                                            CornerRadius="20"
                                            BorderColor="#3D7AC4"
                                            BorderWidth="2"
                                            Padding="12,8"
                                            HeightRequest="40"
                                            Command="{Binding ShowPurchaseOrdersCommand}"
                                            IsVisible="{Binding Source={x:Static Application.Current}, Path=CurrentUser.IsAdmin}"/>
                                </StackLayout>
                            </Grid>
                        </Frame>

                        <!-- Pagination (Fixed at bottom) -->
                        <Grid Grid.Row="3" ColumnDefinitions="Auto,*,Auto" Padding="10" Margin="0,12,0,0" ColumnSpacing="15">
                            <!-- Back to Inventory Button -->
                            <Button Grid.Column="0"
                                    Text="â—€ Back to Inventory"
                                    BackgroundColor="#BDAEA2"
                                    TextColor="#5B4F45"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="18"
                                    BorderColor="#8B7355"
                                    BorderWidth="2"
                                    Padding="18,8"
                                    HeightRequest="40"
                                    VerticalOptions="Center"
                                    Command="{Binding GoBackToInventoryCommand}"/>
                            
                            <!-- Pagination Controls -->
                            <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
                                <Button Text="â® Return to Page 1"
                                        BackgroundColor="#E0D6CC"
                                        TextColor="#5B4F45"
                                        CornerRadius="8"
                                        HeightRequest="36"
                                        Padding="12,8"
                                        Command="{Binding GoToFirstPageCommand}"
                                        IsVisible="{Binding HasMultiplePages}"/>
                                
                                <Button Text="â—€ Prev"
                                        BackgroundColor="#E0D6CC"
                                        TextColor="#5B4F45"
                                        CornerRadius="8"
                                        HeightRequest="36"
                                        WidthRequest="80"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding HasPreviousPage}"/>

                                <Label FontSize="14"
                                       TextColor="White"
                                       VerticalTextAlignment="Center">
                                    <Label.Text>
                                        <MultiBinding StringFormat="Page {0} of {1}">
                                            <Binding Path="CurrentPage"/>
                                            <Binding Path="TotalPages"/>
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>

                                <Label Text="{Binding TotalOrders, StringFormat='â€¢ {0} orders'}"
                                       FontSize="14"
                                       TextColor="#E0D6CC"
                                       VerticalTextAlignment="Center"
                                       Margin="10,0,0,0"/>

                                <Button Text="Next â–¶"
                                        BackgroundColor="#E0D6CC"
                                        TextColor="#5B4F45"
                                        CornerRadius="8"
                                        HeightRequest="36"
                                        WidthRequest="80"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding HasNextPage}"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </Grid>

        <!-- All Global Popups -->
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
        
        <!-- Order Details Popup -->
        <Grid IsVisible="{Binding IsDetailsPopupVisible}"
              BackgroundColor="#80000000"
              InputTransparent="False"
              Grid.ColumnSpan="2"
              ZIndex="2000"
              Padding="20">
            <BoxView BackgroundColor="#80000000" InputTransparent="False">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseDetailsPopupCommand}" />
                </BoxView.GestureRecognizers>
            </BoxView>
            
            <Frame BackgroundColor="White" 
                   CornerRadius="20" 
                   Padding="0" 
                   WidthRequest="800" 
                   HeightRequest="600"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"
                   HasShadow="True"
                   InputTransparent="False">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Grid Grid.Row="0" BackgroundColor="#7E6D5F" Padding="15" ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               VerticalOptions="Center">
                            <Label.Text>
                                <MultiBinding StringFormat="Purchase Order #{0}">
                                    <Binding Path="SelectedOrderDetails.PurchaseOrderId"/>
                                </MultiBinding>
                            </Label.Text>
                        </Label>
                        <ImageButton Grid.Column="1"
                                     Source="close_icon.png" 
                                     WidthRequest="30" 
                                     HeightRequest="30"
                                     HorizontalOptions="End" 
                                     VerticalOptions="Center"
                                     Command="{Binding CloseDetailsPopupCommand}"
                                     BackgroundColor="Transparent"/>
                    </Grid>
                    
                    <!-- Content -->
                    <ScrollView Grid.Row="1" Padding="20">
                        <VerticalStackLayout Spacing="15">
                            <!-- Order Info -->
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="15">
                                <Label Grid.Row="0" Grid.Column="0" Text="Status:" FontSize="14" FontAttributes="Bold" TextColor="#5B4F45"/>
                                <Frame Grid.Row="0" Grid.Column="1"
                                       BackgroundColor="{Binding SelectedOrderDetails.StatusColor, Converter={StaticResource StringToColorConverter}}"
                                       CornerRadius="8"
                                       Padding="10,5"
                                       HorizontalOptions="Start"
                                       HasShadow="False">
                                    <Label Text="{Binding SelectedOrderDetails.Status}"
                                           FontSize="12"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"/>
                                </Frame>
                                
                                <Label Grid.Row="1" Grid.Column="0" Text="Date:" FontSize="14" FontAttributes="Bold" TextColor="#5B4F45"/>
                                <Label Grid.Row="1" Grid.Column="1" 
                                       FontSize="14" 
                                       TextColor="#333"
                                       VerticalOptions="Center">
                                    <Label.Text>
                                        <Binding Path="SelectedOrderDetails.OrderDate" StringFormat="{}{0:MMM dd, yyyy}"/>
                                    </Label.Text>
                                </Label>
                                
                                <Label Grid.Row="2" Grid.Column="0" Text="Requested By:" FontSize="14" FontAttributes="Bold" TextColor="#5B4F45"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding SelectedOrderDetails.RequestedBy}" FontSize="14" TextColor="#333" VerticalOptions="Center"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Text="Supplier:" FontSize="14" FontAttributes="Bold" TextColor="#5B4F45"/>
                                <Label Grid.Row="3" Grid.Column="1" Text="{Binding SelectedOrderDetails.SupplierName}" FontSize="14" TextColor="#333" VerticalOptions="Center"/>
                            </Grid>
                            
                            <!-- Items List -->
                            <Label Text="Items:" FontSize="16" FontAttributes="Bold" TextColor="#5B4F45" Margin="0,10,0,5"/>
                            <CollectionView ItemsSource="{Binding OrderDetailItems}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="#F5F5F5"
                                               CornerRadius="8"
                                               Padding="12"
                                               Margin="0,0,0,8"
                                               HasShadow="False">
                                            <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                                <Label Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding ItemName}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#5B4F45"/>
                                                <Label Grid.Row="0" Grid.Column="1"
                                                       FontSize="12"
                                                       TextColor="#666"
                                                       HorizontalOptions="End">
                                                    <Label.Text>
                                                        <MultiBinding StringFormat="Requested: {0} {1}">
                                                            <Binding Path="RequestedQuantity"/>
                                                            <Binding Path="UnitOfMeasurement"/>
                                                        </MultiBinding>
                                                    </Label.Text>
                                                </Label>
                                                <Label Grid.Row="0" Grid.Column="2"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="#4CAF50"
                                                       HorizontalOptions="End">
                                                    <Label.Text>
                                                        <MultiBinding StringFormat="Approved: {0} {1}">
                                                            <Binding Path="ApprovedQuantity"/>
                                                            <Binding Path="UnitOfMeasurement"/>
                                                        </MultiBinding>
                                                    </Label.Text>
                                                </Label>
                                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                       Text="{Binding ItemCategory}"
                                                       FontSize="12"
                                                       TextColor="#999"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </ScrollView>
                    
                    <!-- Footer -->
                    <Grid Grid.Row="2" BackgroundColor="#F5F5F5" Padding="15" ColumnDefinitions="*,Auto">
                        <Button Grid.Column="1"
                                Text="Close" 
                                BackgroundColor="#BDAEA2"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="40"
                                WidthRequest="120"
                                HorizontalOptions="End"
                                Command="{Binding CloseDetailsPopupCommand}"/>
                    </Grid>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>

