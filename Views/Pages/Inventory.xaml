<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.Inventory"
             xmlns:view="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
             Title="Inventory"
             BackgroundColor="#D6BCA8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="200, *" RowDefinitions="*">
        <!-- Sidebar Navigation -->
        <view:NavigationBar Grid.Column="0"/>

        <!-- Main Content -->
        <Grid Grid.Column="1" Padding="15" RowDefinitions="Auto,*">

            <VerticalStackLayout Padding="0" Spacing="12">

                <!-- Top Bar -->
                <Grid ColumnDefinitions="*, Auto, Auto, Auto" VerticalOptions="Center" ColumnSpacing="20">
                    <Label Text="Inventory" FontSize="26" FontAttributes="Bold" FontFamily="MontserratBlack" VerticalOptions="Center" TextColor="Black"/>
                    
                    <!-- Connectivity Status Indicator -->
                    <otherViews:ConnectivityStatusIndicator Grid.Column="1" VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="2" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                    <Grid Grid.Column="3" WidthRequest="40" HeightRequest="40">
                        <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                               WidthRequest="40" 
                               HeightRequest="40" 
                               Aspect="AspectFill" 
                               ZIndex="1" />
                        <ImageButton Source="usericon.png" 
                                     WidthRequest="40" 
                                     HeightRequest="40" 
                                     BackgroundColor="Transparent"
                                     Clicked="OnProfileClicked"
                                     ZIndex="0"/>
                    </Grid>
                </Grid>

                <!-- Brownish Frame (Main Panel) -->
                <Frame BackgroundColor="#7E6D5F" CornerRadius="15" Padding="15" HasShadow="False" HeightRequest="580">
                    <Grid RowDefinitions="*,Auto,Auto">
                        <ScrollView Grid.Row="0">
                        <VerticalStackLayout Spacing="10">

                        <!-- Fixed Top Controls (Category Buttons, Sort By) -->
                        <Grid ColumnDefinitions="*, Auto" VerticalOptions="Start">
                            <!-- Left: Category Buttons and Refresh -->
                            <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center" HorizontalOptions="Start">
                                <!-- Refresh Button -->
                                <Border BackgroundColor="#F0E6D8"
                                        Stroke="#D4C4B0"
                                        StrokeThickness="1"
                                        StrokeShape="RoundRectangle 18"
                                        Padding="16,10"
                                        HeightRequest="38">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding RefreshDataCommand}"/>
                                    </Border.GestureRecognizers>
                                        <Label Text="Refresh" 
                                               FontSize="13" 
                                               FontFamily="OpenSansSemibold"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45" 
                                               VerticalOptions="Center"
                                           VerticalTextAlignment="Center"
                                           HorizontalOptions="Center"/>
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="3"/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Row="0" Text="All" 
                                            TextColor="Black" 
                                            FontAttributes="Bold" 
                                            BackgroundColor="#FFEAD6" 
                                            WidthRequest="100" 
                                            HeightRequest="40" 
                                            CornerRadius="7" 
                                            Command="{Binding FilterByCategoryCommand}" 
                                            CommandParameter="All">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="All">
                                                <Setter Property="BackgroundColor" Value="#D4A574" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                    <BoxView Grid.Row="1" HeightRequest="3" BackgroundColor="#D4A574" CornerRadius="1.5">
                                        <BoxView.Triggers>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="All">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="Ingredients">
                                                <Setter Property="IsVisible" Value="False" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="Supplies">
                                                <Setter Property="IsVisible" Value="False" />
                                            </DataTrigger>
                                        </BoxView.Triggers>
                                    </BoxView>
                                </Grid>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="3"/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Row="0" Text="Ingredients" 
                                            TextColor="Black" 
                                            FontAttributes="Bold" 
                                            FontSize="13"
                                            BackgroundColor="#FFEAD6" 
                                            WidthRequest="135" 
                                            HeightRequest="40" 
                                            CornerRadius="7" 
                                            Command="{Binding FilterByCategoryCommand}" 
                                            CommandParameter="Ingredients">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Ingredients">
                                                <Setter Property="BackgroundColor" Value="#D4A574" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                    <BoxView Grid.Row="1" HeightRequest="3" BackgroundColor="#D4A574" CornerRadius="1.5">
                                        <BoxView.Triggers>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="Ingredients">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="All">
                                                <Setter Property="IsVisible" Value="False" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="Supplies">
                                                <Setter Property="IsVisible" Value="False" />
                                            </DataTrigger>
                                        </BoxView.Triggers>
                                    </BoxView>
                                </Grid>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="3"/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Row="0" Text="Supplies" 
                                            TextColor="Black" 
                                            FontAttributes="Bold" 
                                            BackgroundColor="#FFEAD6" 
                                            WidthRequest="120" 
                                            HeightRequest="40" 
                                            CornerRadius="7" 
                                            Command="{Binding FilterByCategoryCommand}" 
                                            CommandParameter="Supplies">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Supplies">
                                                <Setter Property="BackgroundColor" Value="#D4A574" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                    <BoxView Grid.Row="1" HeightRequest="3" BackgroundColor="#D4A574" CornerRadius="1.5">
                                        <BoxView.Triggers>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="Supplies">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="All">
                                                <Setter Property="IsVisible" Value="False" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="BoxView" Binding="{Binding SelectedCategory}" Value="Ingredients">
                                                <Setter Property="IsVisible" Value="False" />
                                            </DataTrigger>
                                        </BoxView.Triggers>
                                    </BoxView>
                                </Grid>
                                <!-- Search by name -->
                                <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center" Padding="10,0,0,0">
                                    <Label Text="Search:" VerticalOptions="Center" TextColor="White"/>
                                    <Entry Grid.Column="1"
                                           WidthRequest="220"
                                           BackgroundColor="Transparent"
                                           TextColor="White"
                                           PlaceholderColor="White"
                                           ClearButtonVisibility="WhileEditing"
                                           Placeholder="Type item name..."
                                           Text="{Binding SearchText}"/>
                                </Grid>
                            </StackLayout>

                            <!-- Right: Sort By -->
                            <Frame Grid.Column="1"
                                   CornerRadius="10" 
                                   BackgroundColor="White" 
                                   Padding="0" 
                                   WidthRequest="200" 
                                   HeightRequest="40"
                                   HorizontalOptions="End">
                                <Picker Title="Sort By"
                                        VerticalOptions="Center"
                                        Margin="0"                               
                                        BackgroundColor="Transparent"
                                        TextColor="Black"
                                        TitleColor="#666666"
                                        FontSize="14"
                                        SelectedIndex="{Binding SelectedSortIndex}"
                                        SelectedIndexChanged="OnSortChanged">
                                    <Picker.Items>
                                        <x:String>Name (A-Z)</x:String>
                                        <x:String>Name (Z-A)</x:String>
                                        <x:String>Stock (Low to High)</x:String>
                                        <x:String>Stock (High to Low)</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Frame>
                        </Grid>

                        <!-- Inventory Content with fixed header and scrollable items -->
                        <Grid RowDefinitions="Auto,*">

                            <!-- Loading Indicator -->
                            <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Start" IsVisible="{Binding IsLoading}">
                                <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />
                                <Label Text="{Binding StatusMessage}" TextColor="Black" FontSize="14" HorizontalOptions="Center" />
                            </VerticalStackLayout>

                            <!-- Fixed Header Row -->
                            <Frame Grid.Row="0" BackgroundColor="White" Padding="8" IsVisible="{Binding IsLoading, Converter={StaticResource InvertBoolConverter}}">
                                <Grid ColumnDefinitions="1*, 1*, 2*">
                                    <Label Text="ITEMS" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black"/>
                                    <Label Text="CATEGORY" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" TextColor="Black"/>
                                    <Label Text="STOCKS" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2" TextColor="Black"/>
                                </Grid>
                            </Frame>

                            <!-- Inventory CollectionView: only this scrolls -->
                            <CollectionView Grid.Row="1" x:Name="InventoryCollectionView" 
                                            ItemsSource="{Binding PaginatedInventoryItems}"
                                            ItemsLayout="VerticalList" 
                                            BackgroundColor="Transparent" 
                                            Margin="0,6,0,0"
                                            ItemSizingStrategy="MeasureFirstItem"
                                            IsVisible="{Binding IsLoading, Converter={StaticResource InvertBoolConverter}}">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="10"
                                               Margin="0,4,0,4"
                                               CornerRadius="10"
                                               BackgroundColor="White"
                                               BorderColor="#E5D2C1">
                                            <Frame.Triggers>
                                                <DataTrigger TargetType="Frame"
                                                             Binding="{Binding IsExpanded}"
                                                             Value="True">
                                                    <Setter Property="BackgroundColor" Value="#F7EFE6" />
                                                    <Setter Property="BorderColor" Value="#D4A574" />
                                                </DataTrigger>
                                            </Frame.Triggers>
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleInventoryItemCommand}"
                                                                      CommandParameter="{Binding .}" />
                                            </Frame.GestureRecognizers>

                                            <Grid RowDefinitions="Auto,Auto">
                                                <Grid Grid.Row="0"
                                                      ColumnDefinitions="Auto,*,1*,2*"
                                                      ColumnSpacing="12"
                                                      VerticalOptions="Center">
                                                    <HorizontalStackLayout Grid.Column="0"
                                                                            Spacing="10"
                                                                            VerticalOptions="Center">
                                                        <Frame WidthRequest="48"
                                                               HeightRequest="48"
                                                               CornerRadius="8"
                                                               Padding="0"
                                                               BackgroundColor="#EFEFEF"
                                                               HasShadow="False">
                                                            <Image Source="{Binding ImageSource}"
                                                                   Aspect="AspectFill" />
                                                        </Frame>
                                                    </HorizontalStackLayout>

                                                    <VerticalStackLayout Grid.Column="1"
                                                                          Spacing="2"
                                                                          VerticalOptions="Center">
                                                        <Label Text="{Binding itemName}"
                                                               FontAttributes="Bold"
                                                               FontSize="15"
                                                               TextColor="#3C3C3C" />
                                                    </VerticalStackLayout>

                                                    <Label Grid.Column="2"
                                                           Text="{Binding itemCategory}"
                                                           FontSize="13"
                                                           TextColor="#7A6B5E"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center" />

                                                    <VerticalStackLayout Grid.Column="3"
                                                                          Spacing="4"
                                                                          HorizontalOptions="End"
                                                                          VerticalOptions="Center">
                                                        <Frame BackgroundColor="White"
                                                               CornerRadius="10"
                                                               Padding="8"
                                                               HasShadow="True">
                                                            <Label FormattedText="{Binding NewStockDisplayFormatted}"
                                                                   FontSize="13"
                                                                   HorizontalOptions="Start"
                                                                   VerticalOptions="Center"
                                                                   LineBreakMode="WordWrap"
                                                                   MaxLines="2" />
                                                        </Frame>
                                                    </VerticalStackLayout>
                                                </Grid>

                                                <Border Grid.Row="1"
                                                        BackgroundColor="#FFFFFF"
                                                        Stroke="#E5D2C1"
                                                        Margin="0,12,0,0"
                                                        Padding="12"
                                                        IsVisible="{Binding IsExpanded}">
                                                    <Border.StrokeShape>
                                                        <shapes:RoundRectangle CornerRadius="10" />
                                                    </Border.StrokeShape>
                                                    <VerticalStackLayout Spacing="10">
                                                        <Label Text="{Binding NewStockDisplay}"
                                                               FontSize="12"
                                                               TextColor="#3C3C3C"
                                                               LineBreakMode="WordWrap" />
                                                        <Label Text="Description:"
                                                               FontSize="12"
                                                               FontAttributes="Bold"
                                                               TextColor="#5B4F45"
                                                               IsVisible="{Binding itemDescription, Converter={StaticResource StringToBoolConverter}}"
                                                               Margin="0,4,0,0"/>
                                                        <Label Text="{Binding itemDescription}"
                                                               FontSize="12"
                                                               TextColor="#5B4F45"
                                                               LineBreakMode="WordWrap"
                                                               IsVisible="{Binding itemDescription, Converter={StaticResource StringToBoolConverter}}"
                                                               Margin="0,0,0,4"/>
                                                        <HorizontalStackLayout Spacing="10">
                                                            <Button Text="Edit Item"
                                                                    BackgroundColor="#5B4F45"
                                                                    TextColor="White"
                                                                    FontSize="13"
                                                                    FontAttributes="Bold"
                                                                    WidthRequest="110"
                                                                    HeightRequest="36"
                                                                    CornerRadius="18"
                                                                    Padding="0"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditInventoryItemCommand}"
                                                                    CommandParameter="{Binding .}" />
                                                            <Button Text="Close"
                                                                    BackgroundColor="#BDAEA2"
                                                                    TextColor="#5B4F45"
                                                                    FontSize="13"
                                                                    WidthRequest="110"
                                                                    HeightRequest="36"
                                                                    CornerRadius="18"
                                                                    Padding="0"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleInventoryItemCommand}"
                                                                    CommandParameter="{Binding .}" />
                                                        </HorizontalStackLayout>
                                                    </VerticalStackLayout>
                                                </Border>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                        </VerticalStackLayout>
                        </ScrollView>
                        
                        <!-- Navigation Buttons Frame -->
                        <Frame Grid.Row="1" 
                               BackgroundColor="#5B4F45" 
                               CornerRadius="10" 
                               Padding="8" 
                               HasShadow="False"
                               Margin="0,15,0,0"
                               HorizontalOptions="Center">
                            <Grid ColumnDefinitions="Auto,*" 
                                  VerticalOptions="Center">
                            
                                <!-- Manage Inventory and Add Menu Buttons - Left -->
                                <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="8" HorizontalOptions="Start">
                                    <Button Text="ðŸ“¦ MANAGE INVENTORY" 
                                            BackgroundColor="#BDAEA2" 
                                            TextColor="#5B4F45" 
                                            FontSize="13" 
                                            FontAttributes="Bold"
                                            CornerRadius="20"
                                            BorderColor="#8B7355"
                                            BorderWidth="2"
                                            Padding="12,8"
                                            HeightRequest="40"
                                            Command="{Binding ManageInventoryCommand}"
                                            IsVisible="{Binding Source={x:Static Application.Current}, Path=CurrentUser.IsAdmin}"/>
                                    
                                    <!-- Manage POS Menu Button (users with POS access can use this) -->
                                    <Button Text="ðŸ½ï¸ MANAGE POS MENU" 
                                            BackgroundColor="#5B4F45" 
                                            TextColor="White" 
                                            FontSize="13" 
                                            FontAttributes="Bold"
                                            CornerRadius="20"
                                            BorderColor="#8B7355"
                                            BorderWidth="2"
                                            Padding="12,8"
                                            HeightRequest="40"
                                            Command="{Binding ManagePOSCommand}"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                        
                        <!-- Pagination Controls -->
                        <Frame Grid.Row="2" 
                               BackgroundColor="#E0E0E0" 
                               CornerRadius="10,10,0,0" 
                               Padding="12" 
                               HasShadow="False"
                               Margin="0,12,0,0">
                            <HorizontalStackLayout HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   Spacing="12">
                                <Button Text="PREV"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        TextColor="#5B4F45"
                                        BackgroundColor="#D0D0D0"
                                        BorderColor="Transparent"
                                        BorderWidth="0"
                                        CornerRadius="8"
                                        Padding="12,6"
                                        HeightRequest="32"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding HasPreviousPage}"/>
                                
                                <Label FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       VerticalOptions="Center"
                                       VerticalTextAlignment="Center"
                                       Margin="10,0">
                                    <Label.Text>
                                        <Binding StringFormat="Page {0}" Path="CurrentPage"/>
                                    </Label.Text>
                                </Label>
                                
                                <Button Text="NEXT"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        TextColor="#5B4F45"
                                        BackgroundColor="#BDAEA2"
                                        BorderColor="Transparent"
                                        BorderWidth="0"
                                        CornerRadius="8"
                                        Padding="12,6"
                                        HeightRequest="32"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding HasNextPage}"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </Grid>

        <!-- Popups -->
        <otherViews:ManagePOSOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditProductPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup.EditProductPopupVM}" Grid.ColumnSpan="2" ZIndex="1900"/>
        <otherViews:ManageInventoryOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditInventoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=EditInventoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:AddItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2"/>
        <otherViews:UpdateInventoryDetails x:Name="UpdateInventoryDetailsControl" BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:AddItemToPOS BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup}" Grid.ColumnSpan="2"/>
        <otherViews:ConnectPOSItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1100"/>
        <otherViews:InputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200" IsVisible="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.IsInputIngredientsAmountUsedVisible}"/>
        <otherViews:UpdateInputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200" IsVisible="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.IsUpdateInputIngredientsAmountUsedVisible}"/>
        <otherViews:PreviewPOSItem BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1300"/>
        <otherViews:AddonsSelectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.AddonsPopup}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:CartPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=POSVM.CartPopup}" Grid.ColumnSpan="2"/>
        <otherViews:HistoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=HistoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:PaymentPopup x:Name="PaymentPopupControl" Grid.ColumnSpan="2"/>
        <!-- Removed OrderCompletePopup here; it should only appear on POS -->
        <otherViews:OrderConfirmedPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=OrderConfirmedPopup}" Grid.ColumnSpan="2" ZIndex="2000"/>
        <otherViews:SuccessCardPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=SuccessCardPopup}" Grid.ColumnSpan="2" ZIndex="1200"/>
        <otherViews:NotificationPopup x:Name="NotificationPopupControl" BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="2500"/>
        <otherViews:ProfilePopup x:Name="ProfilePopupControl" BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="2600"/>
        <otherViews:PasswordResetPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=PasswordResetPopup}" Grid.ColumnSpan="2" ZIndex="2700"/>
        <otherViews:ActivityLogPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ActivityLogPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:PurchaseOrderApprovalPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=PurchaseOrderApprovalPopup}" Grid.ColumnSpan="2" ZIndex="1850"/>
        <otherViews:CreatePurchaseOrderPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=CreatePurchaseOrderPopup}" Grid.ColumnSpan="2" ZIndex="1850"/>
        <otherViews:RetryConnectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=RetryConnectionPopup}" Grid.ColumnSpan="2" ZIndex="2800"/>
    </Grid>
</ContentPage>
