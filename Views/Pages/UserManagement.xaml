<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.UserManagement"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel"
             xmlns:controls="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             BackgroundColor="#D6BCA8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:UserManagementPageViewModel />
    </ContentPage.BindingContext>


    <Grid RowDefinitions="*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Sidebar Navigation -->
        <views:NavigationBar x:Name="Sidebar" Grid.Column="0"/>

        <!-- Main Content -->
        <Grid Grid.Column="1" Padding="20" RowDefinitions="Auto,*">

            <VerticalStackLayout Padding="0" Spacing="20">

                <!-- Top Bar -->
                <Grid ColumnDefinitions="*, Auto, Auto, Auto" VerticalOptions="Center" ColumnSpacing="25">
                    <Label Text="User Management" FontSize="32" FontAttributes="Bold" FontFamily="MontserratBlack" TextColor="#5B4F45" VerticalOptions="Center"/>
                    <ImageButton Grid.Column="2" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                    <Grid Grid.Column="3" WidthRequest="40" HeightRequest="40">
                        <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                               WidthRequest="40" 
                               HeightRequest="40" 
                               Aspect="AspectFill" 
                               ZIndex="1" />
                        <ImageButton Source="usericon.png" 
                                     WidthRequest="40" 
                                     HeightRequest="40" 
                                     BackgroundColor="Transparent"
                                     Clicked="OnProfileClicked"
                                     ZIndex="0"/>
                    </Grid>
                </Grid>

                <!-- Fixed Frame with Scrollable Content -->
                <Frame BackgroundColor="#7E6D5F" CornerRadius="15" Padding="20" HasShadow="False" HeightRequest="660">
                    <Grid RowDefinitions="Auto,*,Auto">
                        
                        <!-- Search & Sort (Fixed at top) -->
                        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" RowSpacing="16" Margin="0,0,0,15">
                            <Label Grid.Row="0"
                                   Text="{Binding Users.Count, StringFormat='Users: {0}'}"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   FontFamily="Montserrat-Black"
                                   TextColor="White"/>
                            
                            <FlexLayout Grid.Row="1" 
                                       Direction="Row" 
                                       Wrap="Wrap" 
                                       AlignItems="Center" 
                                       JustifyContent="SpaceBetween" 
                                       AlignContent="Start">
                                <HorizontalStackLayout Spacing="15" HorizontalOptions="End">
                                    <Border Stroke="#8B7355" 
                                            StrokeShape="RoundRectangle 15" 
                                            StrokeThickness="2" 
                                            HeightRequest="45" 
                                            BackgroundColor="White"
                                            WidthRequest="250">
                                        <Entry Placeholder="Search" 
                                               Text="{Binding SearchText, Mode=TwoWay}" 
                                               PlaceholderColor="#8B7355" 
                                               TextColor="#5B4F45"
                                               BackgroundColor="Transparent"
                                               Margin="15,0"/>
                                    </Border>
                                    <Button Text="⚙ Sort By" 
                                            Command="{Binding SortByCommand}" 
                                            BackgroundColor="#BDAEA2" 
                                            TextColor="#5B4F45" 
                                            BorderColor="#8B7355"
                                            BorderWidth="2"
                                            CornerRadius="20"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            WidthRequest="120"
                                            HeightRequest="45"/>
                                </HorizontalStackLayout>
                            </FlexLayout>
                        </Grid>

                        <!-- Scrollable Users Table -->
                        <ScrollView Grid.Row="1" Orientation="Vertical">
                            <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="True">
                                <VerticalStackLayout Spacing="0">
                                    <!-- Table Header -->
                                    <Grid ColumnDefinitions="2*,3*,2*" BackgroundColor="#BDAEA2" Padding="10">
                                        <Label Text="Username" FontAttributes="Bold" FontSize="16" FontFamily="OpenSansSemibold" TextColor="#5B4F45"/>
                                        <Label Text="Access" Grid.Column="1" FontAttributes="Bold" FontSize="16" FontFamily="OpenSansSemibold" TextColor="#5B4F45"/>
                                        <Label Text="Last Active" Grid.Column="2" FontAttributes="Bold" FontSize="16" FontFamily="OpenSansSemibold" TextColor="#5B4F45" HorizontalTextAlignment="Center"/>
                                    </Grid>

                                    <!-- Users List -->
                                    <CollectionView ItemsSource="{Binding FilteredUsers}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <VerticalStackLayout Spacing="0">
                                                    <Grid ColumnDefinitions="2*,3*,2*,Auto" Padding="10" RowSpacing="0">
                                                        <Label Text="{Binding Username}" FontSize="16" FontFamily="OpenSansSemibold" VerticalOptions="Center" TextColor="#5B4F45"/>

                                                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                                                            <!-- Show access toggles only for non-admin users -->
                                                            <VerticalStackLayout IsVisible="{Binding IsAdmin, Converter={StaticResource InvertBoolConverter}}" Spacing="8">
                                                                <!-- Inventory Access -->
                                                                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                                                                    <Label Text="Inventory Access:" FontSize="13" FontFamily="OpenSans-Regular" TextColor="#8B7355" VerticalOptions="Center"/>
                                                                    <Switch IsToggled="{Binding CanAccessInventory}"/>
                                                                </HorizontalStackLayout>
                                                                
                                                                <!-- Manage POS Access -->
                                                                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                                                                    <Label Text="Manage POS Access:" FontSize="13" FontFamily="OpenSans-Regular" TextColor="#8B7355" VerticalOptions="Center"/>
                                                                    <Switch IsToggled="{Binding CanAccessPOS}"/>
                                                                </HorizontalStackLayout>
                                                                
                                                                <!-- Sales Report Access -->
                                                                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                                                                    <Label Text="Sales Report Access:" FontSize="13" FontFamily="OpenSans-Regular" TextColor="#8B7355" VerticalOptions="Center"/>
                                                                    <Switch IsToggled="{Binding CanAccessSalesReport}"/>
                                                                </HorizontalStackLayout>
                                                            </VerticalStackLayout>
                                                        </VerticalStackLayout>

                                                        <Label Grid.Column="2" Text="{Binding LastActive}" FontSize="15" FontFamily="OpenSans-Regular" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#8B7355"/>

                                                        <!-- Rightmost: Row menu (uses ActionSheet for compatibility) -->
                                                        <Grid Grid.Column="3" HorizontalOptions="End" VerticalOptions="Center">
                                                            <Button Text="⋮" 
                                                                    FontSize="18"
                                                                    FontAttributes="Bold"
                                                                    BackgroundColor="#BDAEA2" 
                                                                    TextColor="#5B4F45" 
                                                                    BorderColor="#8B7355"
                                                                    BorderWidth="1"
                                                                    WidthRequest="40" 
                                                                    HeightRequest="35" 
                                                                    CornerRadius="8" 
                                                                    Padding="0"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:UserManagementPageViewModel}}, Path=OpenRowMenuCommand}"
                                                                    CommandParameter="{Binding .}"/>
                                                        </Grid>
                                                    </Grid>
                                                    
                                                    <!-- Separator line between users -->
                                                    <BoxView HeightRequest="1" BackgroundColor="#B39A7C" Margin="15,5,15,5" CornerRadius="0"/>
                                                </VerticalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Frame>
                        </ScrollView>

                        <!-- Pagination + Action Buttons (Fixed at bottom) -->
                        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto" Padding="10" Margin="0,15,0,0">
                            <!-- Pagination controls -->
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <Button Text="⏮ Return to Page 1"
                                        BackgroundColor="#E0D6CC"
                                        TextColor="#5B4F45"
                                        CornerRadius="8"
                                        HeightRequest="36"
                                        Padding="12,8"
                                        Command="{Binding GoToFirstPageCommand}"
                                        IsVisible="{Binding HasMultiplePages}"/>
                                
                                <Button Text="◀ Prev"
                                        BackgroundColor="#E0D6CC"
                                        TextColor="#5B4F45"
                                        CornerRadius="8"
                                        HeightRequest="36"
                                        WidthRequest="80"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding HasPreviousPage}"/>

                                <Label FontSize="14"
                                       TextColor="White"
                                       VerticalTextAlignment="Center">
                                    <Label.Text>
                                        <MultiBinding StringFormat="Page {0} of {1}">
                                            <Binding Path="CurrentPage"/>
                                            <Binding Path="TotalPages"/>
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>

                                <Label Text="{Binding TotalUsers, StringFormat='• {0} users'}"
                                       FontSize="14"
                                       TextColor="#E0D6CC"
                                       VerticalTextAlignment="Center"
                                       Margin="10,0,0,0"/>

                                <Button Text="Next ▶"
                                        BackgroundColor="#E0D6CC"
                                        TextColor="#5B4F45"
                                        CornerRadius="8"
                                        HeightRequest="36"
                                        WidthRequest="80"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding HasNextPage}"/>
                            </HorizontalStackLayout>

                            <!-- Action Buttons -->
                            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" Padding="0" Spacing="15">
                                <Button Text="Add User" 
                                        BackgroundColor="#BDAEA2" 
                                        TextColor="#5B4F45" 
                                        BorderColor="#8B7355"
                                        BorderWidth="2"
                                        CornerRadius="20"
                                        FontSize="15"
                                        FontAttributes="Bold"
                                        Command="{Binding AddUserCommand}" 
                                        WidthRequest="140"
                                        HeightRequest="45"/>
                                <Button Text="Delete User" 
                                        BackgroundColor="#5B4F45" 
                                        TextColor="White" 
                                        CornerRadius="20"
                                        FontSize="15"
                                        FontAttributes="Bold"
                                        Command="{Binding DeleteUserCommand}" 
                                        WidthRequest="140"
                                        HeightRequest="45"/>
                            </HorizontalStackLayout>

                            <!-- Spacer to align buttons to the right -->
                            <BoxView Grid.Column="2" WidthRequest="1" Opacity="0"/>
                        </Grid>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </Grid>

        <!-- User Approval Popup Overlay - Inside main grid -->
        <controls:UserApprovalPopup Grid.ColumnSpan="2" Grid.RowSpan="1" BindingContext="{Binding UserApprovalPopup}"/>
        
        <!-- User Profile Popup Overlay -->
        <controls:UserProfilePopup Grid.ColumnSpan="2" Grid.RowSpan="1" BindingContext="{Binding UserProfilePopup}"/>
        
        <!-- Delete User Popup Overlay -->
        <controls:DeleteUserPopup Grid.ColumnSpan="2" Grid.RowSpan="1" BindingContext="{Binding DeleteUserPopup}"/>
        
        <!-- All Global Popups -->
        <otherViews:ManagePOSOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditProductPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup.EditProductPopupVM}" Grid.ColumnSpan="2" ZIndex="1900"/>
        <otherViews:ManageInventoryOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditInventoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=EditInventoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:AddItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2"/>
        <otherViews:UpdateInventoryDetails BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:AddItemToPOS BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup}" Grid.ColumnSpan="2"/>
        <otherViews:ConnectPOSItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1100"/>
        <otherViews:InputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200" IsVisible="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.IsInputIngredientsAmountUsedVisible}"/>
        <otherViews:UpdateInputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200" IsVisible="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.IsUpdateInputIngredientsAmountUsedVisible}"/>
        <otherViews:PreviewPOSItem BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1300"/>
        <otherViews:AddonsSelectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.AddonsPopup}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:CartPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=POSVM.CartPopup}" Grid.ColumnSpan="2"/>
        <otherViews:HistoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=HistoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:PaymentPopup x:Name="PaymentPopupControl" Grid.ColumnSpan="2"/>
        <!-- Removed OrderCompletePopup here; it should only appear on POS -->
        <otherViews:OrderConfirmedPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=OrderConfirmedPopup}" Grid.ColumnSpan="2" ZIndex="2000"/>
        <otherViews:SuccessCardPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=SuccessCardPopup}" Grid.ColumnSpan="2" ZIndex="1200"/>
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
        <otherViews:PasswordResetPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=PasswordResetPopup}" Grid.ColumnSpan="2" ZIndex="1700"/>
        <otherViews:RetryConnectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=RetryConnectionPopup}" Grid.ColumnSpan="2" ZIndex="2800"/>
    </Grid>
</ContentPage>
