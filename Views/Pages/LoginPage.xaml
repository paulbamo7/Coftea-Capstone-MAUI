<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.LoginPage"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             NavigationPage.HasNavigationBar="False"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:LoginPageViewModel />
    </ContentPage.BindingContext>

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#C1A892" Offset="0.25" />
            <GradientStop Color="#5B4F45" Offset="0.85" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Main Grid containing all content -->
    <Grid RowDefinitions="*,Auto,*"
          ColumnDefinitions="*"
          Padding="20">

        <ScrollView Grid.Row="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">

            <Frame BackgroundColor="#C0BBB6"
                   CornerRadius="15"
                   Padding="25"
                   HasShadow="False"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   WidthRequest="{OnPlatform Default=350, Android=320, iOS=320, WinUI=420}"
                   MinimumWidthRequest="300"
                   MaximumWidthRequest="520"
                   MinimumHeightRequest="580"
                   MaximumHeightRequest="720">

                <VerticalStackLayout Spacing="15"
                                     VerticalOptions="Center"
                                     HorizontalOptions="FillAndExpand">

                    <!-- Logo -->
                    <Image Source="coftea_logo.png"
                           HeightRequest="200"
                           MaximumWidthRequest="300"
                           HorizontalOptions="Center" />

                    <!-- Email -->
                    <Label Text="Email:"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />
                    <Entry Text="{Binding Email}"
                           Placeholder="Enter Email"
                           PlaceholderColor="Black"
                           BackgroundColor="Transparent"
                           HeightRequest="40" />

                    <!-- Password -->
                    <Label Text="Password:"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />
                    <Grid>
                        <Entry x:Name="LoginPasswordEntry"
                               Text="{Binding Password}"
                               Placeholder="Enter Password"
                               PlaceholderColor="Black"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               HeightRequest="40" />
                        <ImageButton Source="show.png"
                                    WidthRequest="24"
                                    HeightRequest="24"
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    Clicked="OnToggleLoginPasswordVisibility" />
                    </Grid>

                    <!-- Remember Me -->
                    <HorizontalStackLayout Spacing="8"
                                           VerticalOptions="Center">
                        <CheckBox IsChecked="{Binding RememberMe}" />
                        <Label Text="Remember Me"
                               TextColor="Black"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Register -->
                    <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                        <Label Text="No Account? Register Now!"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="12"
                               TextColor="Black"
                               Padding="5">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </VerticalStackLayout>

                    <!-- Login Button -->
                    <Button Text="Login"
                            BackgroundColor="#5B4F45"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            HorizontalOptions="Center"
                            Command="{Binding LoginCommand}" />

                    <!-- Forgot Password -->
                    <Label Text="Forgot Password?"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           FontSize="12"
                           Padding="10,5,10,0"
                           TextColor="Black">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>
        </ScrollView>
        
        <!-- Password Reset Popup -->
        <otherViews:PasswordResetPopup BindingContext="{Binding PasswordResetPopup}" />
        
        <!-- Retry Connection Popup - Overlay at root level -->
        <otherViews:RetryConnectionPopup x:Name="RetryConnectionPopup" 
                                         Grid.RowSpan="3" 
                                         Grid.ColumnSpan="1" />
    </Grid>
</ContentPage>
