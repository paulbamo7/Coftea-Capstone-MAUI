<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.AboutPage"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#D6BCA8">

    <Grid ColumnDefinitions="200,*" RowDefinitions="*">
        <views:NavigationBar Grid.Column="0" />

        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <!-- Top Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="*, Auto, Auto" Padding="30,25,30,20" ColumnSpacing="25">
                <BoxView Grid.ColumnSpan="3" Opacity="0"/>
                <ImageButton Grid.Column="1" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                <Grid Grid.Column="2" WidthRequest="40" HeightRequest="40">
                    <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                           WidthRequest="40" 
                           HeightRequest="40" 
                           Aspect="AspectFill" 
                           ZIndex="1" />
                    <ImageButton Source="usericon.png" 
                                 WidthRequest="40" 
                                 HeightRequest="40" 
                                 BackgroundColor="Transparent"
                                 Clicked="OnProfileClicked"
                                 ZIndex="0"/>
                </Grid>
            </Grid>

        <ScrollView Grid.Row="1" Padding="0">
            <VerticalStackLayout Spacing="24" Padding="30,20,30,40">
                <!-- Header Section -->
                <Grid ColumnDefinitions="*, Auto" Padding="0">
                    <VerticalStackLayout Spacing="6" Grid.Column="0" VerticalOptions="Center">
                        <Label Text="About Coftea"
                               FontSize="34"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A" />
                        <Label Text="For Team Members"
                               FontSize="15"
                               TextColor="#6B5A4F"
                               Opacity="0.9" />
                    </VerticalStackLayout>

                    <Frame Grid.Column="1"
                           CornerRadius="18"
                           Padding="16,14"
                           BackgroundColor="White"
                           HasShadow="True"
                           BorderColor="#D4C4B0"
                           VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                            <Image Source="coftea_logo.png"
                                   WidthRequest="42"
                                   HeightRequest="42"
                                   Aspect="AspectFill" />
                            <VerticalStackLayout Spacing="3">
                                <Label Text="Coftea CafÃ©"
                                       FontAttributes="Bold"
                                       FontSize="15"
                                       TextColor="#4A3F35" />
                                <Label Text="Version 1.0.0"
                                       FontSize="12"
                                       TextColor="#7A6B5F"
                                       Opacity="0.85" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <!-- What is Coftea Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="What is Coftea?"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A"
                               Margin="0" />
                        
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Coftea is a coffee-tea hybrid that combines single-origin coffee beans with premium tea leaves. Each serving contains ~120&#160;mg of natural caffeine and L-theanine from tea, giving smooth, jitter-free energy."
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap" />
                            
                            <Label Text="We were founded in 2023 after our founder accidentally brewed coffee and tea together and realized it was the perfect drink."
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap" />
                            
                            <Label Text="Customers love us because we taste amazing hot or iced, brew in 3 minutes, and solve the 'coffee crash vs weak tea' problem."
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                        
                        <Frame BackgroundColor="#F0E6D8"
                               BorderColor="#D4C4B0"
                               CornerRadius="12"
                               Padding="12"
                               Margin="0,4,0,0">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="Our Core Promise"
                                       FontAttributes="Bold"
                                       FontSize="13"
                                       TextColor="#4A3F35" />
                                <Label Text="Great taste + calm, long-lasting focus."
                                       FontSize="12"
                                       TextColor="#4A3F35"
                                       FontAttributes="Bold" />
                            </VerticalStackLayout>
                        </Frame>
                        
                        <Frame BackgroundColor="#E8DCC8"
                               BorderColor="#C8B8A4"
                               CornerRadius="12"
                               Padding="12"
                               Margin="0,4,0,0">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="ðŸ’¡ Fun Fact to Share with Guests"
                                       FontAttributes="Bold"
                                       FontSize="13"
                                       TextColor="#4A3F35" />
                                <Label Text="'It's what would happen if coffee and tea had a very productive baby.'"
                                       FontSize="12"
                                       TextColor="#6B5A4F"
                                       LineHeight="17"
                                       LineBreakMode="WordWrap" />
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Quick Reference Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="24"
                       Padding="28"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Quick Reference"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A" />

                        <Frame CornerRadius="18"
                               BackgroundColor="#E8DCC8"
                               BorderColor="#C8B8A4"
                               Padding="20"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="14">
                                <Label Text="Key Points to Remember"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="#4A3F35"
                                       Margin="0" />
                                
                                <VerticalStackLayout Spacing="12">
                                    <HorizontalStackLayout Spacing="12">
                                        <Label Text="â€¢"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45"
                                               VerticalOptions="Start" />
                                        <Label Text="Coffee-tea hybrid with ~120 mg caffeine + L-theanine"
                                               FontSize="15"
                                               TextColor="#4A3F35"
                                               LineBreakMode="WordWrap"
                                               VerticalOptions="Start"
                                               HorizontalOptions="FillAndExpand" />
                                    </HorizontalStackLayout>
                                    
                                    <HorizontalStackLayout Spacing="12">
                                        <Label Text="â€¢"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45"
                                               VerticalOptions="Start" />
                                        <Label Text="Smooth, jitter-free energy"
                                               FontSize="15"
                                               TextColor="#4A3F35"
                                               LineBreakMode="WordWrap"
                                               VerticalOptions="Start"
                                               HorizontalOptions="FillAndExpand" />
                                    </HorizontalStackLayout>
                                    
                                    <HorizontalStackLayout Spacing="12">
                                        <Label Text="â€¢"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45"
                                               VerticalOptions="Start" />
                                        <Label Text="Tastes great hot or iced"
                                               FontSize="15"
                                               TextColor="#4A3F35"
                                               LineBreakMode="WordWrap"
                                               VerticalOptions="Start"
                                               HorizontalOptions="FillAndExpand" />
                                    </HorizontalStackLayout>
                                    
                                    <HorizontalStackLayout Spacing="12">
                                        <Label Text="â€¢"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45"
                                               VerticalOptions="Start" />
                                        <Label Text="Brews in 3 minutes"
                                               FontSize="15"
                                               TextColor="#4A3F35"
                                               LineBreakMode="WordWrap"
                                               VerticalOptions="Start"
                                               HorizontalOptions="FillAndExpand" />
                                    </HorizontalStackLayout>
                                    
                                    <HorizontalStackLayout Spacing="12">
                                        <Label Text="â€¢"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45"
                                               VerticalOptions="Start" />
                                        <Label Text="Solves the coffee crash problem"
                                               FontSize="15"
                                               TextColor="#4A3F35"
                                               LineBreakMode="WordWrap"
                                               VerticalOptions="Start"
                                               HorizontalOptions="FillAndExpand" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        </Grid>
        
        <!-- Global Popups -->
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
    </Grid>
</ContentPage>

