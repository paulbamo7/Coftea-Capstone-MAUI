<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.AboutPage"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#C1A892">

    <Grid ColumnDefinitions="200,*" RowDefinitions="*">
        <views:NavigationBar Grid.Column="0" />

        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <!-- Top Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="*, Auto, Auto" Padding="30,25,30,10" ColumnSpacing="25">
                <BoxView Grid.ColumnSpan="3" Opacity="0"/>
                <ImageButton Grid.Column="1" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                <Grid Grid.Column="2" WidthRequest="40" HeightRequest="40">
                    <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                           WidthRequest="40" 
                           HeightRequest="40" 
                           Aspect="AspectFill" 
                           ZIndex="1" />
                    <ImageButton Source="usericon.png" 
                                 WidthRequest="40" 
                                 HeightRequest="40" 
                                 BackgroundColor="Transparent"
                                 Clicked="OnProfileClicked"
                                 ZIndex="0"/>
                </Grid>
            </Grid>

        <ScrollView Grid.Row="1" Padding="0">
            <Grid RowDefinitions="Auto, *" BackgroundColor="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Padding="30,25,30,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <VerticalStackLayout Spacing="6" Grid.Column="0">
                        <Label Text="About Coftea POS"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="#3E2723" />
                        <Label Text="A handcrafted café management experience for Coftea."
                               FontSize="16"
                               TextColor="#5B4F45" />
                    </VerticalStackLayout>

                    <Frame Grid.Column="1"
                           CornerRadius="18"
                           Padding="12"
                           BackgroundColor="#F9F3EC"
                           HasShadow="False"
                           BorderColor="#E0C9B0"
                           VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image Source="coftea_logo.png"
                                   WidthRequest="48"
                                   HeightRequest="48"
                                   Aspect="AspectFill" />
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Coftea Café"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#5B4F45" />
                                <Label Text="Version 1.0.0"
                                       FontSize="12"
                                       TextColor="#7A5E4B" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <VerticalStackLayout Grid.Row="1"
                                     Padding="30,0,30,30"
                                     Spacing="18">

                    <!-- System Overview -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="story_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="System Overview"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>
                            <Label Text="Coftea POS is a cross-platform point-of-sale solution tailored for Coftea Café. It unifies sales processing, inventory tracking, and operational reporting so every shift—from opening prep to closing reconciliation—runs with clear, up-to-date information."
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            <Grid ColumnDefinitions="*,*"
                                  ColumnSpacing="14"
                                  Margin="0,6,0,0">
                                <Frame BackgroundColor="#F9F3EC"
                                       BorderColor="#E0C9B0"
                                       CornerRadius="18"
                                       Padding="16">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="What it does"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45" />
                                        <Label Text="Orchestrates daily orders, synchronizes recipe deductions, and centralizes records for audits, marketing, and supply planning."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                                <Frame BackgroundColor="#F9F3EC"
                                       BorderColor="#E0C9B0"
                                       CornerRadius="18"
                                       Padding="16">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Capstone context"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45" />
                                        <Label Text="Guided by IT faculty mentors, the project captures real café workflows and feedback, then turns them into maintainable software modules."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Key Features -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="16">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="features_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Key Features"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>

                            <Grid ColumnDefinitions="*,*"
                                  RowSpacing="18"
                                  ColumnSpacing="18">

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Point of Sale"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Streamlines order entry, size and addon selection, and supports cash or GCash settlements with printable receipts."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Inventory Management"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Tracks ingredient usage per transaction, flags low stocks, and records manual adjustments for accountability."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Processing Queue"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Groups in-progress drinks by product, highlights priority orders, and supports kitchen coordination after checkout."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Sales Reporting"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Generates daily, weekly, and monthly breakdowns with category filters and export-ready summaries for management."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Project Developers -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="16">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="team_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Project Developers"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>

                            <Grid ColumnDefinitions="*,*,*"
                                  ColumnSpacing="12"
                                  RowSpacing="14"
                                  Margin="0,4,0,0">
                                <Frame BackgroundColor="#FBF6F0"
                                       CornerRadius="16"
                                       Padding="16"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Project Lead"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#5B4F45" />
                                        <Label Text="Oversees requirements analysis, aligns stakeholder feedback, and keeps development milestones on track."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#FBF6F0"
                                       CornerRadius="16"
                                       Padding="16"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Backend &amp; Data"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#5B4F45" />
                                        <Label Text="Designs the database schema, transactional logic, and integration services for inventory and reports."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#FBF6F0"
                                       CornerRadius="16"
                                       Padding="16"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="UI &amp; Quality Assurance"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#5B4F45" />
                                        <Label Text="Shapes the MAUI experience, conducts usability sessions with baristas, and verifies stability across devices."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Project Information -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="features_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Project Information"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>
                            <Label Text="Developed as a capstone requirement for the Bachelor of Science in Information Technology program at [School Name]."
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            <Grid ColumnDefinitions="Auto,*"
                                  RowSpacing="6"
                                  ColumnSpacing="10"
                                  Margin="0,4,0,0">
                                <Label Text="Academic Year:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Text="2025 – 2026"
                                       TextColor="#3E2723" />
                                <Label Grid.Row="1"
                                       Text="Adviser:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Grid.Row="1"
                                       Text="[Adviser Name]"
                                       TextColor="#3E2723" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Mission -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="story_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Our Mission"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>
                            <Label Text="Empower small beverage businesses with intuitive technology that keeps teams focused on great service while the system handles accuracy, transparency, and growth insights."
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Contact / Support -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="support_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Need Help or Have Ideas?"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>
                            <Label Text="We are continuously iterating. If you encounter bugs, would love a new report, or want to refine the order flow, get in touch:"
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            <Grid ColumnDefinitions="Auto,*"
                                  ColumnSpacing="10">
                                <Label Text="Email:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Text="support@coftea.app"
                                       TextColor="#3E2723" />
                                <Label Grid.Row="1" Text="Messenger:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Grid.Row="1"
                                       Text="@coftea-pos"
                                       TextColor="#3E2723" />
                                <Label Grid.Row="2" Text="Admin Desk:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Grid.Row="2"
                                       Text="Look for the Coftea Solutions binder in HQ."
                                       TextColor="#3E2723" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <Label Text="© Coftea Café — Serving stories and drinks since 2020."
                           FontSize="14"
                           TextColor="#3E2723"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
        </Grid>
        
        <!-- Global Popups -->
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
    </Grid>
</ContentPage>

