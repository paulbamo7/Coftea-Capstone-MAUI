<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.AboutPage"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#C1A892">

    <Grid ColumnDefinitions="200,*" RowDefinitions="*">
        <views:NavigationBar Grid.Column="0" />

        <ScrollView Grid.Column="1" Padding="0">
            <Grid RowDefinitions="Auto, *" BackgroundColor="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Padding="30,25,30,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <VerticalStackLayout Spacing="6" Grid.Column="0">
                        <Label Text="About Coftea POS"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="#3E2723" />
                        <Label Text="A handcrafted café management experience for Coftea."
                               FontSize="16"
                               TextColor="#5B4F45" />
                    </VerticalStackLayout>

                    <Frame Grid.Column="1"
                           CornerRadius="18"
                           Padding="12"
                           BackgroundColor="#F9F3EC"
                           HasShadow="False"
                           BorderColor="#E0C9B0"
                           VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image Source="coftea_logo.png"
                                   WidthRequest="48"
                                   HeightRequest="48"
                                   Aspect="AspectFill" />
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Coftea Café"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#5B4F45" />
                                <Label Text="Version 1.0.0"
                                       FontSize="12"
                                       TextColor="#7A5E4B" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <VerticalStackLayout Grid.Row="1"
                                     Padding="30,0,30,30"
                                     Spacing="18">

                    <!-- Story Card -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="story_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Our Story"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>
                            <Label Text="Coftea POS is the all-in-one platform crafted for the day-to-day flow of Coftea Café. From brewing schedules to nightly cash-outs, we built the system around the actual steps your team takes behind the counter."
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            <Grid ColumnDefinitions="*,*"
                                  ColumnSpacing="14"
                                  Margin="0,6,0,0">
                                <Frame BackgroundColor="#F9F3EC"
                                       BorderColor="#E0C9B0"
                                       CornerRadius="18"
                                       Padding="16">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Why it matters"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45" />
                                        <Label Text="Coftea launched POS after outgrowing paper logs and spreadsheets. Everything now syncs across POS, inventory, purchase orders, and sales reports."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                                <Frame BackgroundColor="#F9F3EC"
                                       BorderColor="#E0C9B0"
                                       CornerRadius="18"
                                       Padding="16">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Built by students"
                                               FontAttributes="Bold"
                                               TextColor="#5B4F45" />
                                        <Label Text="This capstone is led by the Coftea development team, guided by mentors and IT faculty. Every module evolved from feedback in the actual café operations."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Key Features -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="16">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="features_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Key Capabilities"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>

                            <Grid ColumnDefinitions="*,*"
                                  RowSpacing="18"
                                  ColumnSpacing="18">

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Point-of-Sale"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Rapid item selection with café-friendly screens, QR payment support, and automatic deduction of inventory per recipe."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Inventory Pulse"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Real-time stock forecasts, alerts for low cups or syrup, and activity logs that trace each deduction from POS or manual adjustments."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Purchase Order Flow"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Raise, approve, and receive supplier orders without leaving the system. Attach notes, unit costs, and print-ready PO summaries."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Insights for Growth"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="Dashboard cards highlight top drinks, peak hours, and staff performance so the team can adjust menus and staffing with confidence."
                                               FontSize="13"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Team Section -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="16">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="team_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Meet the Capstone Crew"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>

                            <Grid ColumnDefinitions="*,*,*"
                                  ColumnSpacing="12"
                                  RowSpacing="14"
                                  Margin="0,4,0,0">
                                <Frame BackgroundColor="#FBF6F0"
                                       CornerRadius="16"
                                       Padding="16"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Project Lead"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#5B4F45" />
                                        <Label Text="Strategizes navigation, oversees POS workflow, and keeps user feedback at the center of every sprint."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#FBF6F0"
                                       CornerRadius="16"
                                       Padding="16"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Backend &amp; Data"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#5B4F45" />
                                        <Label Text="Designs the database schema, business rules, and reporting pipeline that powers the café decisions."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>

                                <Frame BackgroundColor="#FBF6F0"
                                       CornerRadius="16"
                                       Padding="16"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="UI Craft &amp; QA"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#5B4F45" />
                                        <Label Text="Shapes the MAUI experience, runs usability tests with baristas, and ensures every release feels smooth on tablet or desktop."
                                               FontSize="13"
                                               TextColor="#6B5344"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Contact / Support -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="support_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Need Help or Have Ideas?"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>
                            <Label Text="We are continuously iterating. If you encounter bugs, would love a new report, or want to refine the order flow, get in touch:"
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            <Grid ColumnDefinitions="Auto,*"
                                  ColumnSpacing="10">
                                <Label Text="Email:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Text="support@coftea.app"
                                       TextColor="#3E2723" />
                                <Label Grid.Row="1" Text="Messenger:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Grid.Row="1"
                                       Text="@coftea-pos"
                                       TextColor="#3E2723" />
                                <Label Grid.Row="2" Text="Admin Desk:"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                                <Label Grid.Row="2"
                                       Text="Look for the Coftea Solutions binder in HQ."
                                       TextColor="#3E2723" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <Label Text="© Coftea Café — Serving stories and drinks since 2020."
                           FontSize="14"
                           TextColor="#3E2723"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>

