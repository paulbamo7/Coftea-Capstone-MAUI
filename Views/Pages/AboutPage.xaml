<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.AboutPage"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#D6BCA8">

    <Grid ColumnDefinitions="200,*" RowDefinitions="*">
        <views:NavigationBar Grid.Column="0" />

        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <!-- Top Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="*, Auto, Auto" Padding="30,25,30,20" ColumnSpacing="25">
                <BoxView Grid.ColumnSpan="3" Opacity="0"/>
                <ImageButton Grid.Column="1" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                <Grid Grid.Column="2" WidthRequest="40" HeightRequest="40">
                    <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                           WidthRequest="40" 
                           HeightRequest="40" 
                           Aspect="AspectFill" 
                           ZIndex="1" />
                    <ImageButton Source="usericon.png" 
                                 WidthRequest="40" 
                                 HeightRequest="40" 
                                 BackgroundColor="Transparent"
                                 Clicked="OnProfileClicked"
                                 ZIndex="0"/>
                </Grid>
            </Grid>

        <ScrollView Grid.Row="1" Padding="0">
            <VerticalStackLayout Spacing="24" Padding="30,20,30,40">
                <!-- Header Section -->
                <Grid ColumnDefinitions="*, Auto" Padding="0">
                    <VerticalStackLayout Spacing="6" Grid.Column="0" VerticalOptions="Center">
                        <Label Text="About Coftea"
                               FontSize="34"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A" />
                        <Label Text="For Team Members"
                               FontSize="15"
                               TextColor="#6B5A4F"
                               Opacity="0.9" />
                    </VerticalStackLayout>

                    <Frame Grid.Column="1"
                           CornerRadius="18"
                           Padding="16,14"
                           BackgroundColor="White"
                           HasShadow="True"
                           BorderColor="#D4C4B0"
                           VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                            <Image Source="coftea_logo.png"
                                   WidthRequest="42"
                                   HeightRequest="42"
                                   Aspect="AspectFill" />
                            <VerticalStackLayout Spacing="3">
                                <Label Text="Coftea CafÃ©"
                                       FontAttributes="Bold"
                                       FontSize="15"
                                       TextColor="#4A3F35" />
                                <Label Text="Version 1.0.0"
                                       FontSize="12"
                                       TextColor="#7A6B5F"
                                       Opacity="0.85" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <!-- About Coftea Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="About Coftea"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A"
                               Margin="0" />
                        
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Coftea is a beverage shop offering a wide variety of drinks, including fruit teas, milk teas, frappes, and hot or cold coffee options such as lattes and Americanos."
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- System Overview Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="About This System"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A"
                               Margin="0" />
                        
                        <Label Text="This internal system is designed to support daily store operations by helping staff manage:"
                               FontSize="13"
                               TextColor="#4A3F35"
                               LineHeight="19"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Point of Sale Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ”¸ Point of Sale (POS)"
                               FontSize="17"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A"
                               Margin="0" />
                        
                        <VerticalStackLayout Spacing="6">
                            <Label Text="â€¢ Processing customer orders"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Handling payments (Cash, GCash, Bank)"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Automatically tracking ingredient usage"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Generating order records and receipts"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Inventory Management Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ”¸ Inventory Management"
                               FontSize="17"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A"
                               Margin="0" />
                        
                        <VerticalStackLayout Spacing="6">
                            <Label Text="â€¢ Monitoring stock levels in real time"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Tracking ingredient deductions per order"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Viewing low-stock alerts"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Printing purchase orders for suppliers"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Confirming or rejecting delivered supplies"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Sales Reporting Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ”¸ Sales Reporting"
                               FontSize="17"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A"
                               Margin="0" />
                        
                        <VerticalStackLayout Spacing="6">
                            <Label Text="â€¢ Viewing daily, weekly, and monthly sales summaries"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Tracking payment methods and top-selling products"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Exporting PDF reports for review or documentation"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- User Access Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ”¸ User Access"
                               FontSize="17"
                               FontAttributes="Bold"
                               TextColor="#2E1F1A"
                               Margin="0" />
                        
                        <VerticalStackLayout Spacing="6">
                            <Label Text="â€¢ Managing staff accounts"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                            
                            <Label Text="â€¢ Assigning roles and access permissions"
                                   FontSize="13"
                                   TextColor="#4A3F35"
                                   LineHeight="19"
                                   LineBreakMode="WordWrap"
                                   Margin="12,0,0,0" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Benefits Card -->
                <Frame BackgroundColor="#F0E6D8"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="False"
                       BorderColor="#D4C4B0">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="System Benefits"
                               FontSize="17"
                               FontAttributes="Bold"
                               TextColor="#4A3F35"
                               Margin="0" />
                        
                        <Label Text="This system helps Coftea staff work faster, avoid manual errors, and maintain accurate records of sales and inventory. It serves as a unified platform for operations, ensuring efficiency and consistency in daily store activities."
                               FontSize="13"
                               TextColor="#4A3F35"
                               LineHeight="19"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        </Grid>
        
        <!-- Global Popups -->
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
    </Grid>
</ContentPage>

