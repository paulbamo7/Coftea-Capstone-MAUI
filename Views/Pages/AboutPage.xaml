<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.AboutPage"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#C1A892">

    <Grid ColumnDefinitions="200,*" RowDefinitions="*">
        <views:NavigationBar Grid.Column="0" />

        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <!-- Top Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="*, Auto, Auto" Padding="30,25,30,10" ColumnSpacing="25">
                <BoxView Grid.ColumnSpan="3" Opacity="0"/>
                <ImageButton Grid.Column="1" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                <Grid Grid.Column="2" WidthRequest="40" HeightRequest="40">
                    <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                           WidthRequest="40" 
                           HeightRequest="40" 
                           Aspect="AspectFill" 
                           ZIndex="1" />
                    <ImageButton Source="usericon.png" 
                                 WidthRequest="40" 
                                 HeightRequest="40" 
                                 BackgroundColor="Transparent"
                                 Clicked="OnProfileClicked"
                                 ZIndex="0"/>
                </Grid>
            </Grid>

        <ScrollView Grid.Row="1" Padding="0">
            <Grid RowDefinitions="Auto, *" BackgroundColor="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Padding="30,25,30,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <VerticalStackLayout Spacing="6" Grid.Column="0">
                        <Label Text="About Coftea"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="#3E2723" />
                        <Label Text="For Team Members"
                               FontSize="16"
                               TextColor="#5B4F45" />
                    </VerticalStackLayout>

                    <Frame Grid.Column="1"
                           CornerRadius="18"
                           Padding="12"
                           BackgroundColor="#F9F3EC"
                           HasShadow="False"
                           BorderColor="#E0C9B0"
                           VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image Source="coftea_logo.png"
                                   WidthRequest="48"
                                   HeightRequest="48"
                                   Aspect="AspectFill" />
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Coftea CafÃ©"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#5B4F45" />
                                <Label Text="Version 1.0.0"
                                       FontSize="12"
                                       TextColor="#7A5E4B" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <VerticalStackLayout Grid.Row="1"
                                     Padding="30,0,30,30"
                                     Spacing="18">

                    <!-- About Coftea for Team Members -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="16">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="story_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="What is Coftea?"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>
                            
                            <Label Text="Coftea is a coffee-tea hybrid that combines single-origin coffee beans with premium tea leaves. Each serving has ~120 mg of natural caffeine plus L-theanine from tea, giving smooth, jitter-free energy."
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            
                            <Label Text="We were founded in 2023 after our founder accidentally brewed coffee and tea together and realized it was the perfect drink."
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            
                            <Label Text="Customers love us because we taste amazing hot or iced, brew in 3 minutes, and solve the 'coffee crash vs weak tea' problem."
                                   FontSize="15"
                                   TextColor="#4B3A2F"
                                   LineBreakMode="WordWrap" />
                            
                            <Frame BackgroundColor="#F9F3EC"
                                   BorderColor="#E0C9B0"
                                   CornerRadius="18"
                                   Padding="18"
                                   Margin="0,8,0,0">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Our Core Promise"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           TextColor="#5B4F45" />
                                    <Label Text="Great taste + calm, long-lasting focus."
                                           FontSize="16"
                                           TextColor="#4B3A2F"
                                           FontAttributes="Bold" />
                                </VerticalStackLayout>
                            </Frame>
                            
                            <Frame BackgroundColor="#F1E2D6"
                                   BorderColor="#D4C4B0"
                                   CornerRadius="16"
                                   Padding="16"
                                   Margin="0,8,0,0">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="ðŸ’¡ Fun Fact to Share with Guests"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="#5B4F45" />
                                    <Label Text="'It's what would happen if coffee and tea had a very productive baby.'"
                                           FontSize="14"
                                           TextColor="#6B5344"
                                           LineBreakMode="WordWrap" />
                                </VerticalStackLayout>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Quick Reference for Staff -->
                    <Frame BackgroundColor="White"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           BorderColor="#E5D2C1">
                        <VerticalStackLayout Spacing="16">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="features_icon.png" WidthRequest="28" HeightRequest="28" />
                                <Label Text="Quick Reference"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5B4F45" />
                            </HorizontalStackLayout>

                            <Grid ColumnDefinitions="*"
                                  RowSpacing="12"
                                  Margin="0,4,0,0">
                                <Frame CornerRadius="16"
                                       BackgroundColor="#F1E2D6"
                                       Padding="18"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="6">
                                        <Label Text="Key Points to Remember"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#5B4F45" />
                                        <Label Text="â€¢ Coffee-tea hybrid with ~120 mg caffeine + L-theanine&#x0a;â€¢ Smooth, jitter-free energy&#x0a;â€¢ Tastes great hot or iced&#x0a;â€¢ Brews in 3 minutes&#x0a;â€¢ Solves the coffee crash problem"
                                               FontSize="14"
                                               TextColor="#4B3A2F"
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
        </Grid>
        
        <!-- Global Popups -->
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
    </Grid>
</ContentPage>

