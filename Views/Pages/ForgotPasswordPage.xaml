<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.ForgotPasswordPage"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             NavigationPage.HasNavigationBar="False"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:ForgotPasswordPageViewModel />
    </ContentPage.BindingContext>

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#C1A892" Offset="0.25" />
            <GradientStop Color="#5B4F45" Offset="0.85" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Grid that adapts -->
    <Grid RowDefinitions="*,Auto,*"
          ColumnDefinitions="*"
          Padding="20">

        <ScrollView Grid.Row="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">

            <Frame BackgroundColor="#C0BBB6"
                   CornerRadius="15"
                   Padding="25"
                   HasShadow="False"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   WidthRequest="{OnPlatform Default=350, Android=350, iOS=350, WinUI=420}"  
                   MinimumWidthRequest="420"
                   MaximumWidthRequest="500"
                   MinimumHeightRequest="500"
                   MaximumHeightRequest="600">

                <VerticalStackLayout Spacing="15"
                                     VerticalOptions="Center"
                                     HorizontalOptions="FillAndExpand">

                    <!-- Back Button -->
                    <HorizontalStackLayout HorizontalOptions="Start" Spacing="10">
                        <ImageButton Source="close.png" 
                                     WidthRequest="30" 
                                     HeightRequest="30"
                                     BackgroundColor="Transparent"
                                     Command="{Binding GoBackCommand}" />
                        <Label Text="Forgot Password" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               VerticalOptions="Center"
                               TextColor="Black" />
                    </HorizontalStackLayout>

                    <!-- Instructions -->
                    <Label Text="Enter your email address and we'll send you a password reset link."
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,20" />

                    <!-- Email -->
                    <Label Text="Email Address:" FontAttributes="Bold" 
                           HorizontalOptions="Start"
                           TextColor="Black" />
                    
                    <Entry Text="{Binding Email}" Placeholder="Enter your email address" PlaceholderColor="Gray" 
                           TextColor="Black"
                           BackgroundColor="White"
                           HeightRequest="40" Keyboard="Email" />

                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}" FontSize="12" TextColor="Red" 
                           IsVisible="{Binding HasError}" HorizontalOptions="Center" />

                    <!-- Success Message -->
                    <Label Text="{Binding SuccessMessage}"
                           FontSize="12"
                           TextColor="Green"
                           IsVisible="{Binding HasSuccess}"
                           HorizontalOptions="Center" />

                    <!-- Send Reset Link Button -->
                    <Button Text="Send Reset Link"
                            BackgroundColor="#5B4F45"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            HorizontalOptions="Center"
                            Command="{Binding SendResetLinkCommand}"
                            IsEnabled="{Binding IsNotLoading}" />

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                       IsVisible="{Binding IsLoading}"
                                       Color="#5B4F45"
                                       HorizontalOptions="Center" />

                    <!-- Back to Login -->
                    <Label Text="Remember your password? Back to Login"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           FontSize="12"
                           Padding="5"
                           TextColor="Black">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>
        </ScrollView>

        <!-- Retry Connection Popup -->
        <otherViews:RetryConnectionPopup x:Name="RetryConnectionPopup" />
    </Grid>
</ContentPage>
