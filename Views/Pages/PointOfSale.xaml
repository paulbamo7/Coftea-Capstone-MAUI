                                                                                        <Frame.GestureRecognizers>
                                                                                            <TapGestureRecognizer Command="{Binding DecreaseAddonQtyCommand}" />
                                                                                        </Frame.GestureRecognizers>
                                                                                        <Label Text="âˆ’" TextColor="White" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                                                                                    </Frame>
                                                                                    <Frame Grid.Column="1" BackgroundColor="#E7E3DE" CornerRadius="5" Padding="4,2" HasShadow="False" WidthRequest="24" HeightRequest="20">
                                                                                        <Label Text="{Binding AddonQuantity}" TextColor="Black" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                                                                                    </Frame>
                                                                                    <Frame Grid.Column="2" BackgroundColor="#C5AD98" CornerRadius="5" Padding="3" HasShadow="False" WidthRequest="20" HeightRequest="20">
                                                                                        <Frame.GestureRecognizers>
                                                                                            <TapGestureRecognizer Command="{Binding IncreaseAddonQtyCommand}" />
                                                                                        </Frame.GestureRecognizers>
                                                                                        <Label Text="+" TextColor="White" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                                                                                    </Frame>
                                                                                    <Label Grid.Column="4" Text="{Binding AddonTotalPrice, StringFormat='â‚±{0:F0}'}" TextColor="#666" FontSize="10" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="End" />
                                                                                </Grid>
                                                                            </Grid>
                                                                        </Frame>
                                                                    </DataTemplate>
                                                                </CollectionView.ItemTemplate>
                                                            </CollectionView>
                                                        </ScrollView>
                                                    </Frame>
                                                </VerticalStackLayout>
                                            </VerticalStackLayout>

                                        </VerticalStackLayout>

                                        <!-- Size Summary -->
                                        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="25,25,0,0">
                                            <Label TextColor="Black" Text="{Binding SelectedProduct.SmallQuantity, StringFormat='Small: {0} pcs'}" 
                                                   IsVisible="{Binding IsSmallSizeVisibleInCart}" 
                                                   LineBreakMode="NoWrap"
                                                   Margin="0,0,3,0"/>
                                            <Label TextColor="Black" Text="{Binding SelectedProduct.MediumQuantity, StringFormat='Medium: {0} pcs'}" 
                                                   IsVisible="{Binding IsMediumSizeVisibleInCart}"
                                                   LineBreakMode="NoWrap"
                                                   Margin="3,0,3,0"/>
                                            <Label TextColor="Black" Text="{Binding SelectedProduct.LargeQuantity, StringFormat='Large: {0} pcs'}" 
                                                   IsVisible="{Binding IsLargeSizeVisibleInCart}"
                                                   LineBreakMode="NoWrap"
                                                   Margin="3,0,0,0"/>
                                        </HorizontalStackLayout>
                                        <!-- Add-ons Summary -->
                                        <VerticalStackLayout Spacing="8" Margin="25,6,0,0" HorizontalOptions="Start">
                                            <Label TextColor="Black" Text="{Binding SmallAddonsDisplay}" 
                                                   FontSize="13" FontFamily="MontserratBlack"
                                                   LineBreakMode="NoWrap"
                                                   IsVisible="{Binding SmallAddonsDisplay, Converter={StaticResource StringToBoolConverter}}" />
                                            <Label TextColor="Black" Text="{Binding MediumAddonsDisplay}" 
                                                   FontSize="13" FontFamily="MontserratBlack"
                                                   LineBreakMode="NoWrap"
                                                   IsVisible="{Binding MediumAddonsDisplay, Converter={StaticResource StringToBoolConverter}}" />
