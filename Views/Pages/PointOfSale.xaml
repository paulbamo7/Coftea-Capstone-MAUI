<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.PointOfSale"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel"
             xmlns:view="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             Shell.NavBarIsVisible="False"      
             Shell.TabBarIsVisible="False"
             x:Name="POS"
             BackgroundColor="#D6BCA8">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:RadioButtonItemSize x:Key="RadioButtonItemSize"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:NotificationIconConverter x:Key="NotificationIconConverter"/>
            <converters:NotificationTextIconConverter x:Key="NotificationTextIconConverter"/>
            <converters:NotificationColorConverter x:Key="NotificationColorConverter"/>
            <converters:IsPositiveConverter x:Key="IsPositiveConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <view:NavigationBar x:Name="Sidebar" Grid.Column="0" />

        <!-- Main Content -->
        <Grid Grid.Column="1" Padding="20" RowDefinitions="Auto, Auto, *">

            <!-- Top Bar -->
            <Grid ColumnDefinitions="*, Auto, Auto, Auto" VerticalOptions="Center" ColumnSpacing="15" Grid.Row="0">
                <Label Text="Point Of Sale" FontSize="28" FontAttributes="Bold" FontFamily="MontserratBlack" VerticalOptions="Center" TextColor="Black"/>
                <Label x:Name="TimerLabel" Grid.Column="1" VerticalOptions="Center" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                <!-- Notification with badge -->
                <Grid Grid.Column="2">
                    <ImageButton Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Command="{Binding ShowNotificationBellCommand}"/>
                    <Frame Padding="0" BackgroundColor="#D9534F" CornerRadius="10" HasShadow="False"
                           HorizontalOptions="End" VerticalOptions="Start" TranslationX="10" TranslationY="-8"
                           IsVisible="{Binding NotificationPopup.NotificationCount, Converter={StaticResource IsPositiveConverter}}">
                        <Label Text="{Binding NotificationPopup.NotificationCount}" FontSize="10" TextColor="White" Margin="4,0"/>
                    </Frame>
                </Grid>
                <Grid Grid.Column="3" WidthRequest="35" HeightRequest="35">
                    <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                           WidthRequest="35" 
                           HeightRequest="35" 
                           Aspect="AspectFill" 
                           ZIndex="1" />
                    <ImageButton Source="usericon.png" 
                                 WidthRequest="35" 
                                 HeightRequest="35" 
                                 BackgroundColor="Transparent"
                                 ZIndex="0"
                                 Command="{Binding ShowProfileCommand}"/>
                </Grid>
            </Grid>

            <!-- Menu Categories + History/Cart -->
            <Grid Grid.Row="1" ColumnDefinitions="*, Auto" VerticalOptions="Center" Margin="70,10,0,0">
                <!-- Categories -->
                <ScrollView Orientation="Horizontal" HorizontalOptions="Center">
                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="25,0,0,0">
                        <Button Text="Frappe" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14" 
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"  
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Frappe">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Frappe">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Fruit/Soda" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Fruit/Soda">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Fruit/Soda">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Milktea" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Milktea">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Milktea">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Coffee" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14" 
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40" 
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Coffee">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Coffee">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackLayout>
                </ScrollView>

                <!-- History + Cart (far right) -->
                <StackLayout Orientation="Horizontal" Grid.Column="1" Spacing="20" HorizontalOptions="End" VerticalOptions="Center">
                    <Image Source="historyicon.png" WidthRequest="40" HeightRequest="40">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowHistoryCommand}" />
                        </Image.GestureRecognizers>
                    </Image>
                    <!-- Cart icon with badge -->
                    <Grid>
                        <Image Source="carticon.png" WidthRequest="40" HeightRequest="40">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CartCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Frame Padding="0" BackgroundColor="#D9534F" CornerRadius="10" HasShadow="False"
                               HorizontalOptions="End" VerticalOptions="Start" TranslationX="10" TranslationY="-8"
                               IsVisible="{Binding CartCount, Converter={StaticResource IsPositiveConverter}}">
                            <Label Text="{Binding CartCount}" FontSize="10" TextColor="White" Margin="4,0"/>
                        </Frame>
                    </Grid>
                </StackLayout>
            </Grid>

            <!-- Subcategories for Fruit/Soda - Left Side -->
            <StackLayout Orientation="Horizontal" Grid.Row="1"  HorizontalOptions="Start" Spacing="10"
                                   IsVisible="{Binding IsFruitSodaSubcategoryVisible}" Padding="0,10,0,0">
                <Button Text="Fruit" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                        BackgroundColor="#FFEAD6" WidthRequest="100" HeightRequest="40" 
                        Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Fruit">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Fruit">
                            <Setter Property="BackgroundColor" Value="#D4A574" />
                            <Setter Property="TextColor" Value="#2b2b2b" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
                <Button Text="Soda" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                        BackgroundColor="#FFEAD6" WidthRequest="100" HeightRequest="40" 
                        Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Soda">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Soda">
                            <Setter Property="BackgroundColor" Value="#D4A574" />
                            <Setter Property="TextColor" Value="#2b2b2b" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
            </StackLayout>

            <!-- Subcategories for Coffee - Left Side -->
            <StackLayout Orientation="Horizontal" Grid.Row="1"  HorizontalOptions="Start" Spacing="10"
                                   IsVisible="{Binding IsCoffeeSubcategoryVisible}" Padding="0,10,0,0">
                <Button Text="Americano" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                        BackgroundColor="#FFEAD6" WidthRequest="100" HeightRequest="40" 
                        Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Americano">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Americano">
                            <Setter Property="BackgroundColor" Value="#D4A574" />
                            <Setter Property="TextColor" Value="#2b2b2b" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
                <Button Text="Latte" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                        BackgroundColor="#FFEAD6" WidthRequest="100" HeightRequest="40" 
                        Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Latte">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Latte">
                            <Setter Property="BackgroundColor" Value="#D4A574" />
                            <Setter Property="TextColor" Value="#2b2b2b" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
            </StackLayout>

            <!-- Products + Cart -->
            <Grid RowDefinitions="*" ColumnSpacing="15" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition x:Name="CartColumn" Width="2*" />
                </Grid.ColumnDefinitions>
                <!-- Products -->
                <Border Grid.Column="0" StrokeShape="RoundRectangle 20" BackgroundColor="White" Margin="0,15,0,0"
                        VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Grid>
                        <!-- Loading Indicator - Centered -->
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding IsLoading}">
                            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" 
                                             Color="#5B4F45" WidthRequest="50" HeightRequest="50" />
                            <Label Text="Loading products..." FontSize="16" TextColor="Black" 
                                   HorizontalOptions="Center" Margin="0,10,0,0" />
                        </VerticalStackLayout>
                        
                        <!-- Products Collection -->
                        <CollectionView x:Name="ProductsCollectionView" ItemsSource="{Binding FilteredProducts}" IsVisible="{Binding IsLoading, Converter={StaticResource InvertBoolConverter}}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout x:Name="ProductsGridLayout" Orientation="Vertical" Span="3" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#D9C3B0" CornerRadius="20" Margin="10" Padding="5" VerticalOptions="Fill" HorizontalOptions="Fill">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectProductCommand, Source={x:Reference POS}}" 
                                                             CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                    <Grid>
                                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                            <Frame CornerRadius="20" Padding="0" HeightRequest="120" WidthRequest="120">
                                                <!-- Bind to ImageSource property -->
                                                <Image Source="{Binding ImageSource}" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectProductCommand, Source={x:Reference POS}}" 
                                                                             CommandParameter="{Binding .}" />
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Frame>
                                            <Frame CornerRadius="15" BackgroundColor="White" Padding="5,2" Margin="0,5,0,0" HasShadow="False" HorizontalOptions="Center">
                                                <Label Text="{Binding ProductName}" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                                            </Frame>
                                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                                <!-- Small price only visible for Coffee category -->
                                                <Label Text="{Binding SmallPrice, StringFormat='₱{0:F2}'}" FontSize="13" TextColor="Black" IsVisible="False">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding Category}" Value="Coffee">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Label Text="  |  " FontSize="13" TextColor="Black" IsVisible="False">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding Category}" Value="Coffee">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Label Text="{Binding MediumPrice, StringFormat='₱{0:F2}'}" FontSize="13" TextColor="Black"/>
                                                <Label Text="  |  " FontSize="13" TextColor="Black"/>
                                                <Label Text="{Binding LargePrice, StringFormat='₱{0:F2}'}" FontSize="13" TextColor="Black"/>
                                            </StackLayout>
                                        </VerticalStackLayout>
                                        
                                        <!-- Low Stock Overlay -->
                                        <Frame BackgroundColor="#80FF0000" CornerRadius="20" IsVisible="{Binding IsLowStock}" 
                                               VerticalOptions="Fill" HorizontalOptions="Fill">
                                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                                                <Label Text="UNAVAILABLE" FontSize="12" FontAttributes="Bold" TextColor="White" 
                                                       HorizontalOptions="Center"/>
                                                <Label Text="Insufficient inventory" FontSize="10" TextColor="White" 
                                                       HorizontalOptions="Center"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Border>

                <!-- Cart -->
                <Grid Grid.Column="1" RowDefinitions="*,Auto" Margin="0,15,0,0">
                    <Frame CornerRadius="20" BackgroundColor="White" 
                           VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <Grid RowDefinitions="Auto, *">

                            <!-- Cart Content -->
                            <Grid Grid.Row="1">
                                <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                    <VerticalStackLayout IsVisible="{Binding SelectedProduct, Converter={StaticResource NullToBoolConverter}}" Spacing="10" Padding="10">
                                <Frame CornerRadius="20" Padding="0" HeightRequest="120" WidthRequest="120" HorizontalOptions="Center">
                                    <!-- Bind to computed ImageSource property -->
                                    <Image Source="{Binding SelectedProduct.ImageSource}" Aspect="AspectFill" />
                                </Frame>

                                <Label Text="{Binding SelectedProduct.ProductName, StringFormat='Product Name: {0}'}"
                                   FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" TextColor="Black"/>
                                <Label Text="Add-ons" FontAttributes="Bold" FontSize="18" HorizontalOptions="Start" TextColor="Black" Margin="0,0,0,6"/>
                                <!-- Add-ons list: compact 2-column grid layout (non-scrollable, expands to fit content) -->
                                <FlexLayout BindableLayout.ItemsSource="{Binding SelectedProduct.InventoryItems}" 
                                            Wrap="Wrap"
                                            JustifyContent="Start"
                                            AlignItems="Start"
                                            Margin="0,0,0,0">
                                    <BindableLayout.EmptyViewTemplate>
                                        <DataTemplate>
                                            <Label Text="No add-ons available for this product" 
                                                   TextColor="Gray" 
                                                   FontSize="14" 
                                                   HorizontalTextAlignment="Center"
                                                   Margin="0,5,0,15"
                                                   WidthRequest="300"/>
                                        </DataTemplate>
                                    </BindableLayout.EmptyViewTemplate>
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Frame Padding="6" Margin="3" BackgroundColor="White" CornerRadius="10" HasShadow="False" BorderColor="#E0E0E0" WidthRequest="140" HeightRequest="80">
                                                <Grid RowDefinitions="Auto,Auto" RowSpacing="4">
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding ToggleSelectedCommand}" />
                                                    </Grid.GestureRecognizers>

                                                    <!-- Top Row: Checkbox and Name -->
                                                    <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="4">
                                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                                 Color="#2B2B2B"
                                                                 BackgroundColor="Transparent"
                                                                 WidthRequest="18"
                                                                 HeightRequest="18"
                                                                 VerticalOptions="Center" />
                                                        <Label Text="{Binding itemName}" 
                                                               TextColor="Black" 
                                                               FontSize="12" 
                                                               FontAttributes="Bold"
                                                               LineBreakMode="TailTruncation"
                                                               VerticalOptions="Center"
                                                               HorizontalOptions="StartAndExpand" />
                                                    </StackLayout>

                                                    <!-- Bottom Row: Controls and Price -->
                                                    <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto,Auto,*,Auto" ColumnSpacing="4">
                                                        <!-- Decrease Button -->
                                                        <Frame Grid.Column="0" 
                                                               BackgroundColor="#C5AD98" 
                                                               CornerRadius="6" 
                                                               Padding="4" 
                                                               HasShadow="False"
                                                               WidthRequest="24"
                                                               HeightRequest="24">
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding DecreaseAddonQtyCommand}" CommandParameter="{Binding .}" />
                                                            </Frame.GestureRecognizers>
                                                            <Label Text="−" 
                                                                   TextColor="White" 
                                                                   FontSize="12" 
                                                                   FontAttributes="Bold"
                                                                   HorizontalOptions="Center" 
                                                                   VerticalOptions="Center" />
                                                        </Frame>

                                                        <!-- Quantity Display -->
                                                        <Frame Grid.Column="1" 
                                                               BackgroundColor="#E7E3DE" 
                                                               CornerRadius="6"
                                                               Padding="6,2" 
                                                               HasShadow="False"
                                                               WidthRequest="28"
                                                               HeightRequest="24">
                                                            <Label Text="{Binding AddonQuantity}" 
                                                                   TextColor="Black" 
                                                                   FontSize="11" 
                                                                   FontAttributes="Bold"
                                                                   HorizontalOptions="Center" 
                                                                   VerticalOptions="Center" />
                                                        </Frame>

                                                        <!-- Increase Button -->
                                                        <Frame Grid.Column="2" 
                                                               BackgroundColor="#C5AD98" 
                                                               CornerRadius="6" 
                                                               Padding="4" 
                                                               HasShadow="False"
                                                               WidthRequest="24"
                                                               HeightRequest="24">
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding IncreaseAddonQtyCommand}" CommandParameter="{Binding .}" />
                                                            </Frame.GestureRecognizers>
                                                            <Label Text="+" 
                                                                   TextColor="White" 
                                                                   FontSize="12" 
                                                                   FontAttributes="Bold"
                                                                   HorizontalOptions="Center" 
                                                                   VerticalOptions="Center" />
                                                        </Frame>

                                                        <!-- Price -->
                                                        <Label Grid.Column="4" 
                                                               Text="{Binding AddonTotalPrice, StringFormat='₱{0:F0}'}" 
                                                               TextColor="#666" 
                                                               FontSize="11"
                                                               FontAttributes="Bold"
                                                               VerticalOptions="Center"
                                                               HorizontalOptions="End" />
                                                    </Grid>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </FlexLayout>

                                <!-- Select Size Section -->
                                <Label Text="Select Size:" TextColor="Black" FontSize="20" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,25,0,0"/>

                                <Grid Margin="25,0,0,0" RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- Small -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Medium -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Large -->
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="28"/>
                                        <ColumnDefinition Width="36"/>
                                        <ColumnDefinition Width="28"/>
                                    </Grid.ColumnDefinitions>

                                        <!-- Small Size -->
                                        <Label Text="Small:" TextColor="Black" Grid.Row="0" Grid.Column="0" VerticalOptions="Center" IsVisible="{Binding IsSmallSizeVisibleInCart}"/>
                                        <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#C5AD98" CornerRadius="8" Padding="6,2" HasShadow="False" IsVisible="{Binding IsSmallSizeVisibleInCart}">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding DecreaseSmallQtyCommand}"/>
                                            </Frame.GestureRecognizers>
                                            <ImageButton Source="down.png" WidthRequest="15" HeightRequest="15" BackgroundColor="Transparent" Command="{Binding DecreaseSmallQtyCommand}"/>
                                        </Frame>
                                        <Frame Grid.Row="0" Grid.Column="2" BackgroundColor="#E7E3DE" Padding="8,2" HasShadow="False" IsVisible="{Binding IsSmallSizeVisibleInCart}">
                                            <Label Text="{Binding SelectedProduct.SmallQuantity}" TextColor="Black" FontSize="12" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Frame>
                                        <Frame Grid.Row="0" Grid.Column="3" BackgroundColor="#C5AD98" CornerRadius="8" Padding="6,2" HasShadow="False" IsVisible="{Binding IsSmallSizeVisibleInCart}">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding IncreaseSmallQtyCommand}"/>
                                            </Frame.GestureRecognizers>
                                            <ImageButton Source="up.png" WidthRequest="15" HeightRequest="15" BackgroundColor="Transparent" Command="{Binding IncreaseSmallQtyCommand}"/>
                                        </Frame>

                                        <!-- Medium Size -->
                                        <Label Text="Medium:" TextColor="Black" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" IsVisible="{Binding IsMediumSizeVisibleInCart}"/>
                                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#C5AD98" CornerRadius="8" Padding="6,2" HasShadow="False" IsVisible="{Binding IsMediumSizeVisibleInCart}">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding DecreaseMediumQtyCommand}"/>
                                            </Frame.GestureRecognizers>
                                            <ImageButton Source="down.png" WidthRequest="15" HeightRequest="15" BackgroundColor="Transparent" Command="{Binding DecreaseMediumQtyCommand}"/>
                                        </Frame>
                                        <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="#E7E3DE" Padding="8,2" HasShadow="False" IsVisible="{Binding IsMediumSizeVisibleInCart}">
                                            <Label Text="{Binding SelectedProduct.MediumQuantity}" TextColor="Black" FontSize="12" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Frame>
                                        <Frame Grid.Row="1" Grid.Column="3" BackgroundColor="#C5AD98" CornerRadius="8" Padding="6,2" HasShadow="False" IsVisible="{Binding IsMediumSizeVisibleInCart}">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding IncreaseMediumQtyCommand}"/>
                                            </Frame.GestureRecognizers>
                                            <ImageButton Source="up.png" WidthRequest="10" HeightRequest="10" BackgroundColor="Transparent" Command="{Binding IncreaseMediumQtyCommand}"/>
                                        </Frame>

                                        <!-- Large Size -->
                                        <Label Text="Large:" TextColor="Black" Grid.Row="2" Grid.Column="0" VerticalOptions="Center" IsVisible="{Binding IsLargeSizeVisibleInCart}"/>
                                        <Frame Grid.Row="2" Grid.Column="1" BackgroundColor="#C5AD98" CornerRadius="8" Padding="6,2" HasShadow="False" IsVisible="{Binding IsLargeSizeVisibleInCart}">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding DecreaseLargeQtyCommand}"/>
                                            </Frame.GestureRecognizers>
                                            <ImageButton Source="down.png" WidthRequest="15" HeightRequest="15" BackgroundColor="Transparent" Command="{Binding DecreaseLargeQtyCommand}"/>
                                        </Frame>
                                        <Frame Grid.Row="2" Grid.Column="2" BackgroundColor="#E7E3DE" Padding="8,2" HasShadow="False" IsVisible="{Binding IsLargeSizeVisibleInCart}">
                                            <Label Text="{Binding SelectedProduct.LargeQuantity}" TextColor="Black" FontSize="12" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Frame>
                                        <Frame Grid.Row="2" Grid.Column="3" BackgroundColor="#C5AD98" CornerRadius="8" Padding="6,2" HasShadow="False" IsVisible="{Binding IsLargeSizeVisibleInCart}">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding IncreaseLargeQtyCommand}"/>
                                            </Frame.GestureRecognizers>
                                            <ImageButton Source="up.png" WidthRequest="10" HeightRequest="10" BackgroundColor="Transparent" Command="{Binding IncreaseLargeQtyCommand}"/>
                                        </Frame>
                                    </Grid>


                                    <!-- Size Summary -->
                                <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="18" HorizontalOptions="Center" Margin="25,6,0,0" >
                                    <Label Grid.Column="0" TextColor="Black" Text="{Binding SelectedProduct.SmallQuantity, StringFormat='Small: {0} pcs'}" 
                                           IsVisible="{Binding IsSmallSizeVisibleInCart}" HorizontalOptions="Center"/>
                                    <Label Grid.Column="1" TextColor="Black" Text="{Binding SelectedProduct.MediumQuantity, StringFormat='Medium: {0} pcs'}" 
                                           IsVisible="{Binding IsMediumSizeVisibleInCart}" HorizontalOptions="Center"/>
                                     <Label Grid.Column="2" TextColor="Black" Text="{Binding SelectedProduct.LargeQuantity, StringFormat='Large: {0} pcs'}" 
                                           IsVisible="{Binding IsLargeSizeVisibleInCart}" HorizontalOptions="Center"/>
                                </Grid>
                                <!-- Add-ons Summary (match style with size summary) -->
                                <Grid ColumnDefinitions="*" HorizontalOptions="Center" Margin="25,6,0,0">
                                    <Label Grid.Column="0" TextColor="Black" Text="{Binding SelectedAddons, Converter={StaticResource NotificationTextIconConverter}}" />
                                </Grid>
                                <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Total:" TextColor="Black" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                                    <Label Text="{Binding SelectedProduct.TotalPrice, StringFormat='₱ {0:F2}'}" TextColor="Black" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                                </StackLayout>

                                <!-- Action Buttons -->
                                <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center" Margin="0,15,0,0">
                                    <Button Text="Cancel Order" Command="{Binding RemoveFromCartCommand}" TextColor="White" FontSize="16" 
                                        CommandParameter="{Binding SelectedProduct}" WidthRequest="130" HeightRequest="50"
                                        HorizontalOptions="FillAndExpand" FontAttributes="Bold">
                                        <Button.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#A57C5C" Offset="0.0" />
                                                <GradientStop Color="#5B4F45" Offset="1.0" />
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <Button.CornerRadius>25</Button.CornerRadius>
                                    </Button>
                                    <Button Text="Add Order" Command="{Binding AddToCartCommand}" CommandParameter="{Binding SelectedProduct}" WidthRequest="130" FontAttributes="Bold"
