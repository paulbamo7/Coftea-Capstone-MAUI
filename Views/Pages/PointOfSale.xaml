<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Pages.PointOfSale"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel"
             xmlns:view="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             Shell.NavBarIsVisible="False"      
             Shell.TabBarIsVisible="False"
             x:Name="POS"
             BackgroundColor="#D6BCA8">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:RadioButtonItemSize x:Key="RadioButtonItemSize"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <converters:NotificationIconConverter x:Key="NotificationIconConverter"/>
            <converters:NotificationTextIconConverter x:Key="NotificationTextIconConverter"/>
            <converters:NotificationColorConverter x:Key="NotificationColorConverter"/>
            <converters:IsPositiveConverter x:Key="IsPositiveConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:CollectionCountToHeightConverter x:Key="CollectionCountToHeightConverter" CompactHeight="100" ExpandedHeight="200"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <view:NavigationBar x:Name="Sidebar" Grid.Column="0" />

        <!-- Main Content -->
        <Grid Grid.Column="1" Padding="20" RowDefinitions="Auto, Auto, *">

            <!-- Top Bar -->
            <Grid ColumnDefinitions="*, Auto, Auto, Auto, Auto" VerticalOptions="Center" ColumnSpacing="15" Grid.Row="0">
                <Label Text="Point Of Sale" FontSize="28" FontAttributes="Bold" FontFamily="MontserratBlack" VerticalOptions="Center" TextColor="Black"/>
                <Label x:Name="TimerLabel" Grid.Column="1" VerticalOptions="Center" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                <!-- Connectivity Status Indicator -->
                <otherViews:ConnectivityStatusIndicator Grid.Column="2" VerticalOptions="Center"/>
                <!-- Notification with badge -->
                <Grid Grid.Column="3">
                    <ImageButton Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Command="{Binding ShowNotificationBellCommand}"/>
                    <Frame Padding="0" BackgroundColor="#D9534F" CornerRadius="10" HasShadow="False"
                           HorizontalOptions="End" VerticalOptions="Start" TranslationX="10" TranslationY="-8"
                           IsVisible="{Binding NotificationPopup.NotificationCount, Converter={StaticResource IsPositiveConverter}}">
                        <Label Text="{Binding NotificationPopup.NotificationCount}" FontSize="10" TextColor="White" Margin="4,0"/>
                    </Frame>
                </Grid>
                
                <Grid Grid.Column="4" WidthRequest="35" HeightRequest="35">
                    <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                           WidthRequest="35" 
                           HeightRequest="35" 
                           Aspect="AspectFill" 
                           ZIndex="1" />
                    <ImageButton Source="usericon.png" 
                                 WidthRequest="35" 
                                 HeightRequest="35" 
                                 BackgroundColor="Transparent"
                                 ZIndex="0"
                                 Command="{Binding ShowProfileCommand}"/>
                </Grid>
            </Grid>

            <!-- Menu Categories + History/Cart -->
            <Grid Grid.Row="1" ColumnDefinitions="*, Auto" VerticalOptions="Center" Margin="70,10,0,0">
                <!-- Categories -->
                <ScrollView Orientation="Horizontal" HorizontalOptions="Center">
                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="25,0,0,0">
                        <!-- Subcategories for Coffee (leftmost) -->
                        <Button Text="Americano" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="#5B4F45" FontSize="14"
                                BackgroundColor="#E8D5C4" WidthRequest="100" HeightRequest="40" 
                                Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Americano"
                                IsVisible="{Binding IsCoffeeSubcategoryVisible}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Americano">
                                    <Setter Property="BackgroundColor" Value="#C5AD98" />
                                    <Setter Property="TextColor" Value="#2B2B2B" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Latte" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="#5B4F45" FontSize="14"
                                BackgroundColor="#E8D5C4" WidthRequest="100" HeightRequest="40" 
                                Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Latte"
                                IsVisible="{Binding IsCoffeeSubcategoryVisible}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Latte">
                                    <Setter Property="BackgroundColor" Value="#C5AD98" />
                                    <Setter Property="TextColor" Value="#2B2B2B" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        
                        <!-- Subcategories for Fruit/Soda -->
                        <Button Text="Fruit" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="#5B4F45" FontSize="14"
                                BackgroundColor="#E8D5C4" WidthRequest="100" HeightRequest="40" 
                                Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Fruit"
                                IsVisible="{Binding IsFruitSodaSubcategoryVisible}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Fruit">
                                    <Setter Property="BackgroundColor" Value="#C5AD98" />
                                    <Setter Property="TextColor" Value="#2B2B2B" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Soda" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="#5B4F45" FontSize="14"
                                BackgroundColor="#E8D5C4" WidthRequest="100" HeightRequest="40" 
                                Command="{Binding FilterBySubcategoryCommand}" CommandParameter="Soda"
                                IsVisible="{Binding IsFruitSodaSubcategoryVisible}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedSubcategory}" Value="Soda">
                                    <Setter Property="BackgroundColor" Value="#C5AD98" />
                                    <Setter Property="TextColor" Value="#2B2B2B" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        
                        <Button Text="All" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14" 
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"  
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="All">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="All">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        
                        <Button Text="Frappe" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14" 
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"  
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Frappe">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Frappe">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Fruit/Soda" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Fruit/Soda">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Fruit/Soda">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Milktea" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Milktea">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Milktea">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Coffee" FontAttributes="Bold" FontFamily="OpenSansSemibold" TextColor="Black" FontSize="14" 
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40" 
                                Command="{Binding FilterByCategoryCommand}" CommandParameter="Coffee">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedMainCategory}" Value="Coffee">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackLayout>
                </ScrollView>

                <!-- History + Cart (far right) -->
                <StackLayout Orientation="Horizontal" Grid.Column="1" Spacing="15" HorizontalOptions="End" VerticalOptions="Center">
                    
                    <!-- History button -->
                    <Button Text="ðŸ“" 
                            BackgroundColor="#D4A574" 
                            TextColor="White" 
                            BorderColor="#8B7355"
                            BorderWidth="2"
                            CornerRadius="25"
                            WidthRequest="48"
                            HeightRequest="48"
                            FontSize="20"
                            Padding="0"
                            Command="{Binding ShowHistoryCommand}" />
                    
                    <!-- Replace button (formerly To Prepare) -->
                    <Button Text="â°"
                            BackgroundColor="#BDAEA2"
                            TextColor="#5B4F45"
                            BorderColor="#8B7355"
                            BorderWidth="2"
                            CornerRadius="25"
                            WidthRequest="48"
                            HeightRequest="48"
                            FontSize="20"
                            Padding="0"
                            Command="{Binding ShowProcessingQueueCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="BackgroundColor" Value="#BDAEA2" />
                                <Setter Property="TextColor" Value="#5B4F45" />
                                <Setter Property="BorderColor" Value="#8B7355" />
                                <Style.Triggers>
                                    <DataTrigger TargetType="Button" Binding="{Binding ProcessingQueueHasItems}" Value="True">
                                        <Setter Property="BackgroundColor" Value="#8FA68E" />
                                        <Setter Property="TextColor" Value="White" />
                                        <Setter Property="BorderColor" Value="#7A9479" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Cart icon with badge -->
                    <Grid>
                        <Border BackgroundColor="White" 
                               Stroke="#8B7355"
                               StrokeThickness="2"
                               StrokeShape="RoundRectangle 25"
                               WidthRequest="48"
                               HeightRequest="48"
                               Padding="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowCartCommand}"/>
                            </Border.GestureRecognizers>
                            <Image Source="carticon.png" 
                                   WidthRequest="28" 
                                   HeightRequest="28" 
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BackgroundColor" Value="White" />
                                    <Setter Property="Stroke" Value="#8B7355" />
                                    <Style.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding CartHasItems}" Value="True">
                                            <Setter Property="BackgroundColor" Value="#9DB5B0" />
                                            <Setter Property="Stroke" Value="#8BA59F" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Frame Padding="0" BackgroundColor="#D9534F" CornerRadius="10" HasShadow="False"
                               HorizontalOptions="End" VerticalOptions="Start" TranslationX="10" TranslationY="-8"
                               IsVisible="{Binding CartCount, Converter={StaticResource IsPositiveConverter}}">
                            <Label Text="{Binding CartCount}" FontSize="10" TextColor="White" Margin="4,0"/>
                        </Frame>
                    </Grid>
                </StackLayout>
            </Grid>

            <!-- Products + Cart -->
            <Grid RowDefinitions="*" ColumnSpacing="15" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <!-- Products -->
                <Border Grid.Column="0" StrokeShape="RoundRectangle 20" BackgroundColor="White" Margin="0,15,0,0"
                        VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Grid>
                        <!-- Loading Indicator - Centered -->
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding IsLoading}">
                            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" 
                                             Color="#5B4F45" WidthRequest="50" HeightRequest="50" />
                            <Label Text="Loading products..." FontSize="16" TextColor="Black" 
                                   HorizontalOptions="Center" Margin="0,10,0,0" />
                        </VerticalStackLayout>
                        
                        <!-- Products Collection -->
                        <CollectionView x:Name="ProductsCollectionView" ItemsSource="{Binding FilteredProducts}" IsVisible="{Binding IsLoading, Converter={StaticResource InvertBoolConverter}}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="3" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="20" Margin="10" Padding="5" VerticalOptions="Fill" HorizontalOptions="Fill"
                                       BackgroundColor="#D9C3B0"
                                       BorderColor="Transparent">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame" Binding="{Binding Source={x:Reference ProductsCollectionView}, Path=BindingContext.SelectedProduct.ProductId, Converter={StaticResource NullToBoolConverter}}" Value="{Binding ProductId}">
                                            <Setter Property="BackgroundColor" Value="#F5E6D8" />
                                            <Setter Property="BorderColor" Value="#D4A574" />
                                        </DataTrigger>
                                    </Frame.Triggers>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectProductCommand, Source={x:Reference POS}}" 
                                                             CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                    <Grid>
                                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                            <Frame CornerRadius="20" Padding="0" HeightRequest="120" WidthRequest="120">
                                                <Image Source="{Binding ImageSource}" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectProductCommand, Source={x:Reference POS}}" 
                                                                             CommandParameter="{Binding .}" />
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Frame>
                                            <Label Text="{Binding ProductName}" 
                                                   FontAttributes="Bold" 
                                                   FontSize="14" 
                                                   HorizontalOptions="Center" 
                                                   VerticalOptions="Center" 
                                                   TextColor="#2B2B2B"
                                                   FontFamily="OpenSansSemibold"
                                                   Margin="0,8,0,0"/>
                                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="6" Margin="0,4,0,0">
                                                <Label Text="{Binding SmallPrice, StringFormat='â‚±{0:F2}'}" 
                                                       FontSize="12" 
                                                       TextColor="#3C3C3C" 
                                                       FontFamily="OpenSansSemibold"
                                                       IsVisible="False">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding Category}" Value="Coffee">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Label Text="â€¢" 
                                                       FontSize="12" 
                                                       TextColor="#3C3C3C" 
                                                       IsVisible="False">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding Category}" Value="Coffee">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Label Text="{Binding MediumPrice, StringFormat='â‚±{0:F2}'}" 
                                                       FontSize="12" 
                                                       TextColor="#3C3C3C"
                                                       FontFamily="OpenSansSemibold"/>
                                                <Label Text="â€¢" 
                                                       FontSize="12" 
                                                       TextColor="#3C3C3C"/>
                                                <Label Text="{Binding LargePrice, StringFormat='â‚±{0:F2}'}" 
                                                       FontSize="12" 
                                                       TextColor="#3C3C3C"
                                                       FontFamily="OpenSansSemibold"/>
                                            </StackLayout>
                                        </VerticalStackLayout>
                                        
                                        <!-- Low Stock Overlay -->
                                        <Frame BackgroundColor="#80FF0000" CornerRadius="20" IsVisible="{Binding IsLowStock}" 
                                               VerticalOptions="Fill" HorizontalOptions="Fill">
                                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                                                <Label Text="UNAVAILABLE" FontSize="12" FontAttributes="Bold" TextColor="White" 
                                                       HorizontalOptions="Center"/>
                                                <Label Text="Insufficient inventory" FontSize="10" TextColor="White" 
                                                       HorizontalOptions="Center"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Border>

                <!-- Cart -->
                <Grid Grid.Column="1" RowDefinitions="*,Auto" Margin="0,15,0,0">
                    <Frame CornerRadius="20" BackgroundColor="White" 
                           VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <Grid RowDefinitions="Auto, *">

                            <!-- Cart Content -->
                            <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" VerticalScrollBarVisibility="Default">
                                <Grid>
                                    <VerticalStackLayout IsVisible="{Binding SelectedProduct, Converter={StaticResource NullToBoolConverter}}" Spacing="10" Padding="10">
                                        <Frame CornerRadius="20" Padding="0" HeightRequest="120" WidthRequest="120" HorizontalOptions="Center">
                                            <Image Source="{Binding SelectedProduct.ImageSource}" Aspect="AspectFill" />
                                        </Frame>

                                        <Label Text="{Binding SelectedProduct.ProductName, StringFormat='Product Name: {0}'}"
                                               FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" TextColor="Black"/>

                                        <!-- Select Size Section -->
                                        <Label Text="Select Size:" TextColor="Black" FontSize="20" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,15,0,0"/>

                                        <!-- DYNAMIC SIZE BLOCKS - NO OVERLAP -->
                                        <VerticalStackLayout Spacing="20" Margin="25,0,0,0">

                                            <!-- SMALL SIZE BLOCK -->
                                            <VerticalStackLayout IsVisible="{Binding IsSmallSizeVisibleInCart}" Spacing="8">
                                                <Grid ColumnDefinitions="Auto,32,70,32" ColumnSpacing="8">
                                                    <Label Text="Small:" TextColor="Black" Grid.Column="0" VerticalOptions="Center" FontSize="14"/>
                                                    <Frame Grid.Column="1" BackgroundColor="#C5AD98" CornerRadius="10" Padding="0" HasShadow="False" WidthRequest="32" HeightRequest="32">
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding DecreaseSmallQtyCommand}"/>
                                                        </Frame.GestureRecognizers>
                                                        <Label Text="âˆ’" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    </Frame>
                                                    <Frame Grid.Column="2" BackgroundColor="#E7E3DE" Padding="0" HasShadow="False" HeightRequest="40">
                                                        <Entry Text="{Binding SelectedProduct.SmallQuantity, Mode=TwoWay}" 
                                                               TextColor="Black" FontSize="12" FontAttributes="Bold" 
                                                               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                                                               Keyboard="Numeric" Placeholder="0" PlaceholderColor="#666666"/>
                                                    </Frame>
                                                    <Frame Grid.Column="3" BackgroundColor="#C5AD98" CornerRadius="10" Padding="0" HasShadow="False" WidthRequest="32" HeightRequest="32">
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding IncreaseSmallQtyCommand}"/>
                                                        </Frame.GestureRecognizers>
                                                        <Label Text="+" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    </Frame>
                                                </Grid>

                                                <!-- Small Add-ons -->
                                                <VerticalStackLayout Spacing="5" Margin="0,10,0,0">
                                                    <Label Text="Add-ons â–¼" TextColor="#5B4F45" FontSize="12" FontAttributes="Bold"
                                                           HeightRequest="24">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding ToggleSmallAddonsDropdownCommand}"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Frame IsVisible="{Binding SelectedProduct.IsSmallAddonsDropdownVisible}"
                                                           BackgroundColor="#F5E6D8" CornerRadius="10" Padding="6" HasShadow="True"
                                                           BorderColor="#D4A574" MaximumHeightRequest="200">
                                                        <ScrollView MaximumHeightRequest="200">
                                                            <CollectionView ItemsSource="{Binding SelectedProduct.SmallAddons}" SelectionMode="None">
                                                                <CollectionView.ItemsLayout>
                                                                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                                                                </CollectionView.ItemsLayout>
                                                                <CollectionView.EmptyView>
                                                                    <Label Text="No add-ons available" TextColor="Gray" FontSize="12"/>
                                                                </CollectionView.EmptyView>
                                                                <CollectionView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Frame Padding="3" Margin="3" BackgroundColor="White" CornerRadius="6" BorderColor="#E0E0E0" WidthRequest="135" HeightRequest="65">
                                                                            <Grid RowDefinitions="Auto,Auto" RowSpacing="4">
                                                                                <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="4">
                                                                                    <CheckBox IsChecked="{Binding IsSelected}" Color="#2B2B2B" WidthRequest="16" HeightRequest="16" VerticalOptions="Center" />
                                                                                    <Label Text="{Binding itemName}" TextColor="Black" FontSize="11" FontAttributes="Bold" LineBreakMode="TailTruncation" VerticalOptions="Center" HorizontalOptions="StartAndExpand" />
                                                                                </StackLayout>
                                                                                <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto,Auto,*,Auto" ColumnSpacing="3">
                                                                                    <Frame Grid.Column="0" BackgroundColor="#C5AD98" CornerRadius="5" Padding="3" HasShadow="False" WidthRequest="20" HeightRequest="20">
                                                                                        <Frame.GestureRecognizers>
                                                                                            <TapGestureRecognizer Command="{Binding DecreaseAddonQtyCommand}" />
                                                                                        </Frame.GestureRecognizers>
                                                                                        <Label Text="âˆ’" TextColor="White" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                                                                                    </Frame>
                                                                                    <Frame Grid.Column="1" BackgroundColor="#E7E3DE" CornerRadius="5" Padding="4,2" HasShadow="False" WidthRequest="24" HeightRequest="20">
                                                                                        <Label Text="{Binding AddonQuantity}" TextColor="Black" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                                                                                    </Frame>
                                                                                    <Frame Grid.Column="2" BackgroundColor="#C5AD98" CornerRadius="5" Padding="3" HasShadow="False" WidthRequest="20" HeightRequest="20">
                                                                                        <Frame.GestureRecognizers>
                                                                                            <TapGestureRecognizer Command="{Binding IncreaseAddonQtyCommand}" />
                                                                                        </Frame.GestureRecognizers>
                                                                                        <Label Text="+" TextColor="White" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                                                                                    </Frame>
                                                                                    <Label Grid.Column="4" Text="{Binding AddonTotalPrice, StringFormat='â‚±{0:F0}'}" TextColor="#666" FontSize="10" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="End" />
                                                                                </Grid>
                                                                            </Grid>
                                                                        </Frame>
                                                                    </DataTemplate>
                                                                </CollectionView.ItemTemplate>
                                                            </CollectionView>
                                                        </ScrollView>
                                                    </Frame>
                                                </VerticalStackLayout>
                                            </VerticalStackLayout>

                                            <!-- MEDIUM SIZE BLOCK -->
                                            <VerticalStackLayout IsVisible="{Binding IsMediumSizeVisibleInCart}" Spacing="8">
                                                <Grid ColumnDefinitions="Auto,32,70,32" ColumnSpacing="8">
                                                    <Label Text="Medium:" TextColor="Black" Grid.Column="0" VerticalOptions="Center" FontSize="14"/>
                                                    <Frame Grid.Column="1" BackgroundColor="#C5AD98" CornerRadius="10" Padding="0" HasShadow="False" WidthRequest="32" HeightRequest="32">
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding DecreaseMediumQtyCommand}"/>
                                                        </Frame.GestureRecognizers>
                                                        <Label Text="âˆ’" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    </Frame>
                                                    <Frame Grid.Column="2" BackgroundColor="#E7E3DE" Padding="0" HasShadow="False" HeightRequest="40">
                                                        <Entry Text="{Binding SelectedProduct.MediumQuantity, Mode=TwoWay}" 
                                                               TextColor="Black" FontSize="12" FontAttributes="Bold" 
                                                               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                                                               Keyboard="Numeric" Placeholder="0" PlaceholderColor="#666666"/>
                                                    </Frame>
                                                    <Frame Grid.Column="3" BackgroundColor="#C5AD98" CornerRadius="10" Padding="0" HasShadow="False" WidthRequest="32" HeightRequest="32">
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding IncreaseMediumQtyCommand}"/>
                                                        </Frame.GestureRecognizers>
                                                        <Label Text="+" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    </Frame>
                                                </Grid>

                                                <!-- Medium Add-ons -->
                                                <VerticalStackLayout Spacing="5" Margin="0,10,0,0">
                                                    <Label Text="Add-ons â–¼" TextColor="#5B4F45" FontSize="12" FontAttributes="Bold"
                                                           HeightRequest="24">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding ToggleMediumAddonsDropdownCommand}"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Frame IsVisible="{Binding SelectedProduct.IsMediumAddonsDropdownVisible}"
