                                                            <CollectionView ItemsSource="{Binding SelectedProduct.LargeAddons}" SelectionMode="None">
                                                                <CollectionView.ItemsLayout>
                                                                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                                                                </CollectionView.ItemsLayout>
                                                                <CollectionView.EmptyView>
                                                                    <Label Text="No add-ons available" TextColor="Gray" FontSize="12"/>
                                                                </CollectionView.EmptyView>
                                                                <CollectionView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Frame Padding="3" Margin="3" BackgroundColor="White" CornerRadius="6" BorderColor="#E0E0E0" WidthRequest="135" HeightRequest="65">
                                                                            <Grid RowDefinitions="Auto,Auto" RowSpacing="4">
                                                                                <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="4">
                                                                                    <CheckBox IsChecked="{Binding IsSelected}" Color="#2B2B2B" WidthRequest="16" HeightRequest="16" VerticalOptions="Center" />
                                                                                    <Label Text="{Binding itemName}" TextColor="Black" FontSize="11" FontAttributes="Bold" LineBreakMode="TailTruncation" VerticalOptions="Center" HorizontalOptions="StartAndExpand" />
