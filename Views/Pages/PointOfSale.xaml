                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding DecreaseLargeQtyCommand}"/>
                                                        </Frame.GestureRecognizers>
                                                        <Label Text="âˆ’" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    </Frame>
                                                    <Frame Grid.Column="2" BackgroundColor="#E7E3DE" Padding="0" HasShadow="False" HeightRequest="40">
                                                        <Entry Text="{Binding SelectedProduct.LargeQuantity, Mode=TwoWay}" 
                                                               TextColor="Black" FontSize="12" FontAttributes="Bold" 
                                                               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                                                               Keyboard="Numeric" Placeholder="0" PlaceholderColor="#666666"/>
                                                    </Frame>
                                                    <Frame Grid.Column="3" BackgroundColor="#C5AD98" CornerRadius="10" Padding="0" HasShadow="False" WidthRequest="32" HeightRequest="32">
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding IncreaseLargeQtyCommand}"/>
                                                        </Frame.GestureRecognizers>
                                                        <Label Text="+" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
