                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Frame IsVisible="{Binding SelectedProduct.IsLargeAddonsDropdownVisible}"
                                                           BackgroundColor="#F5E6D8" CornerRadius="10" Padding="6" HasShadow="True"
                                                           BorderColor="#D4A574" MaximumHeightRequest="200">
