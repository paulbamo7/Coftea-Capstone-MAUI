<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Coftea_Capstone.Views.Pages.SalesReport" 
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel" 
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:charts="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls" 
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             Shell.TabBarIsVisible="False" 
             BackgroundColor="#C1A892">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <converters:StringToColorConverter x:Key="StringToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <views:NavigationBar x:Name="Sidebar" Grid.Column="0" />

        <!-- Main Content -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="20" Spacing="16">

                <!-- Top Bar -->
                <Grid ColumnDefinitions="*,Auto,Auto" Padding="0,10" VerticalOptions="Center" ColumnSpacing="16">
                    <Label Text="Sales Report" FontSize="32" FontAttributes="Bold" FontFamily="MontserratBlack" VerticalOptions="Center" TextColor="Black"/>
                    <ImageButton Grid.Column="1" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                    <Grid Grid.Column="2" WidthRequest="40" HeightRequest="40">
                        <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                               WidthRequest="40" 
                               HeightRequest="40" 
                               Aspect="AspectFill" 
                               ZIndex="1" />
                        <ImageButton Source="usericon.png" 
                                     WidthRequest="40" 
                                     HeightRequest="40" 
                                     BackgroundColor="Transparent"
                                     CornerRadius="20"
                                     Clicked="OnProfileClicked"
                                     ZIndex="0"/>
                    </Grid>
                </Grid>

                <!-- Categories - Centered above pie chart and KPI cards -->
                <ScrollView Orientation="Horizontal" HorizontalOptions="Center">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Button Text="Overview" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Overview">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Overview">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Frappe" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Frappe">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Frappe">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Fruit/Soda" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Fruit/Soda">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Fruit/Soda">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Milktea" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Milktea">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Milktea">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Coffee" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Coffee">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Coffee">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackLayout>
                </ScrollView>

                <!-- KPI Cards, Pie Chart, and Total Accumulated - Three column layout -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    <!-- Left Column: KPI Cards -->
                    <VerticalStackLayout Grid.Column="0" Spacing="12" VerticalOptions="Start">
                        <Frame BackgroundColor="#F5E6D8" CornerRadius="12" HeightRequest="110" Padding="12" HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="Overall Most Bought Today" FontAttributes="Bold" FontSize="14" TextColor="#5B4F45"/>
                                <Label Text="{Binding MostBoughtToday}" FontSize="20" TextColor="#5B4F45"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Payment Method Breakdown -->
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                            <!-- Cash Payment -->
                            <Frame BackgroundColor="#E8F5E8" CornerRadius="12" HeightRequest="100" Padding="12" HasShadow="True" Grid.Column="0">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Text="💵" FontSize="24" VerticalOptions="Center" Grid.Column="0"/>
                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <Label Text="Cash" FontAttributes="Bold" FontSize="14" TextColor="#2E7D32"/>
                                        <Label Text="{Binding CashTotal, StringFormat='₱{0:N2}'}" FontSize="18" TextColor="#2E7D32" FontAttributes="Bold"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>

                            <!-- GCash Payment -->
                            <Frame BackgroundColor="#E3F2FD" CornerRadius="12" HeightRequest="100" Padding="12" HasShadow="True" Grid.Column="1">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Text="📱" FontSize="24" VerticalOptions="Center" Grid.Column="0"/>
                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <Label Text="GCash" FontAttributes="Bold" FontSize="14" TextColor="#1976D2"/>
                                        <Label Text="{Binding GCashTotal, StringFormat='₱{0:N2}'}" FontSize="18" TextColor="#1976D2" FontAttributes="Bold"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>

                            <!-- Bank Payment -->
                            <Frame BackgroundColor="#F3E5F5" CornerRadius="12" HeightRequest="100" Padding="12" HasShadow="True" Grid.Column="2">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Text="🏦" FontSize="24" VerticalOptions="Center" Grid.Column="0"/>
                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <Label Text="Bank" FontAttributes="Bold" FontSize="14" TextColor="#7B1FA2"/>
                                        <Label Text="{Binding BankTotal, StringFormat='₱{0:N2}'}" FontSize="18" TextColor="#7B1FA2" FontAttributes="Bold"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Middle Column: Top 3 Picks Today - Pie Chart -->
                    <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="12" Padding="12" HasShadow="True" HeightRequest="230" VerticalOptions="Start">
                        <Grid RowDefinitions="Auto,*,Auto">
                            <!-- Header -->
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Top 3 Picks Today" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                                <Label Text="{Binding FilteredTodayOrders, StringFormat='{0} Orders'}" Grid.Column="1" FontSize="14" TextColor="Gray"/>
                            </Grid>

                            <!-- Pie left, Names right -->
                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="16" VerticalOptions="Start">
                                <otherViews:SimplePieChart Grid.Column="0"
                                                          HorizontalOptions="Start"
                                                          VerticalOptions="Center"
                                                          HeightRequest="160"
                                                          WidthRequest="160"
                                                          ShowLegend="False"
                                                          ItemsSource="{Binding TopItemsToday}" 
                                                          Item1Name="{Binding Item1Name}" 
                                                          Item2Name="{Binding Item2Name}" 
                                                          Item3Name="{Binding Item3Name}"
                                                          Item1Count="{Binding Item1Count}"
                                                          Item2Count="{Binding Item2Count}"
                                                          Item3Count="{Binding Item3Count}"
                                                          Item1HasTrend="{Binding Item1HasTrend}"
                                                          Item2HasTrend="{Binding Item2HasTrend}"
                                                          Item3HasTrend="{Binding Item3HasTrend}"/>

                                <VerticalStackLayout Grid.Column="1" Spacing="12" HorizontalOptions="End" VerticalOptions="Start" Margin="0,20,8,0">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="6">
                                        <BoxView WidthRequest="10" HeightRequest="10" VerticalOptions="Center" Color="#66BB6A"/>
                                        <Label Grid.Column="1" Text="{Binding Item1Name}" FontSize="14" TextColor="#5B4F45"/>
                                        <Label Grid.Column="2" Text="{Binding Item1Count, StringFormat='{0} orders'}" FontSize="12" TextColor="Gray"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="6">
                                        <BoxView WidthRequest="10" HeightRequest="10" VerticalOptions="Center" Color="#8D6E63"/>
                                        <Label Grid.Column="1" Text="{Binding Item2Name}" FontSize="14" TextColor="#5B4F45"/>
                                        <Label Grid.Column="2" Text="{Binding Item2Count, StringFormat='{0} orders'}" FontSize="12" TextColor="Gray"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="6">
                                        <BoxView WidthRequest="10" HeightRequest="10" VerticalOptions="Center" Color="#795548"/>
                                        <Label Grid.Column="1" Text="{Binding Item3Name}" FontSize="14" TextColor="#5B4F45"/>
                                        <Label Grid.Column="2" Text="{Binding Item3Count, StringFormat='{0} orders'}" FontSize="12" TextColor="Gray"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Frame>

                    <!-- Right Column: Total Cash Accumulated -->
                    <Frame Grid.Column="2" BackgroundColor="#2E7D32" CornerRadius="12" Padding="20" HasShadow="True" HeightRequest="230" VerticalOptions="Start">
                        <VerticalStackLayout Spacing="12" HorizontalOptions="Fill">
                            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                <Label Text="💰 Total Sales" FontAttributes="Bold" FontSize="18" TextColor="White" HorizontalOptions="Center"/>
                                <Label Text="{Binding SelectedTimePeriod, StringFormat='{0} sales totals'}" FontSize="12" TextColor="#E8F5E8" HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                            
                            <!-- Time Period Filter Buttons -->
                            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="3">
                                <Button Text="Yesterday" 
                                        Padding="0"
                                        Grid.Column="0"
                                        FontSize="9" 
                                        TextColor="White" 
                                        BackgroundColor="#4CAF50" 
                                        HeightRequest="25" 
                                        CornerRadius="4"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="Yesterday">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding SelectedTimePeriod}" Value="Yesterday">
                                            <Setter Property="BackgroundColor" Value="#81C784" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button Text="Weekly" 
                                        FontSize="9" 
                                        Padding="0"
                                        Grid.Column="1"
                                        TextColor="White" 
                                        BackgroundColor="#4CAF50" 
                                        HeightRequest="25" 
                                        CornerRadius="4"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="Weekly">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding SelectedTimePeriod}" Value="Weekly">
                                            <Setter Property="BackgroundColor" Value="#81C784" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button Text="Monthly" 
                                        FontSize="9"
                                        Padding="0"
                                        Grid.Column="2"
                                        TextColor="White" 
                                        BackgroundColor="#4CAF50" 
                                        HeightRequest="25" 
                                        CornerRadius="4"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="Monthly">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding SelectedTimePeriod}" Value="Monthly">
                                            <Setter Property="BackgroundColor" Value="#81C784" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button Text="All" 
                                        FontSize="9" 
                                        Padding="0"
                                        Grid.Column="3"
                                        TextColor="White" 
                                        BackgroundColor="#4CAF50" 
                                        HeightRequest="25" 
                                        CornerRadius="4"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="All">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding SelectedTimePeriod}" Value="All">
                                            <Setter Property="BackgroundColor" Value="#81C784" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                            
                            <Label Text="{Binding DisplayTotalSales, StringFormat='₱{0:N2}'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold" 
                                   TextColor="White" 
                                   HorizontalOptions="Center"/>
                            
                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="4">
                                    <Label Text="Cash" FontSize="10" TextColor="#E8F5E8" HorizontalOptions="Center"/>
                                    <Label Text="{Binding DisplayCashTotal, StringFormat='₱{0:N2}'}" 
                                           FontSize="14" 
                                           FontAttributes="Bold" 
                                           TextColor="White" 
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="4">
                                    <Label Text="GCash" FontSize="10" TextColor="#E8F5E8" HorizontalOptions="Center"/>
                                    <Label Text="{Binding DisplayGCashTotal, StringFormat='₱{0:N2}'}" 
                                           FontSize="14" 
                                           FontAttributes="Bold" 
                                           TextColor="White" 
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" Spacing="4">
                                    <Label Text="Bank" FontSize="10" TextColor="#E8F5E8" HorizontalOptions="Center"/>
                                    <Label Text="{Binding DisplayBankTotal, StringFormat='₱{0:N2}'}" 
                                           FontSize="14" 
                                           FontAttributes="Bold" 
                                           TextColor="White" 
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Weekly and Monthly Picks - Two-column layout -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <!-- Weekly Picks -->
                    <Frame BackgroundColor="White" CornerRadius="12" Padding="12" HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Text="Weekly Picks" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                            <Label Text="{Binding FilteredWeeklyOrders, StringFormat='{0} Orders'}" Grid.Column="1" FontSize="14" TextColor="Gray"/>
                            <!-- Bar chart for Weekly items -->
                            <CollectionView Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding TopItemsWeekly}" HeightRequest="180" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <VerticalStackLayout HorizontalOptions="Center" WidthRequest="90" VerticalOptions="End" Spacing="6">
                                            <Grid HeightRequest="150" VerticalOptions="End" RowDefinitions="*,Auto">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <BoxView VerticalOptions="End" HeightRequest="{Binding ScaledCount}" WidthRequest="45" Color="{Binding ColorCode, Converter={StaticResource StringToColorConverter}}" CornerRadius="8"/>
                                                </Grid>
                                                <Label Grid.Row="1" Text="{Binding Name}" TextColor="Gray" FontSize="10" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <CollectionView ItemsSource="{Binding TopItemsWeekly}" HeightRequest="100" Grid.Row="2" Grid.ColumnSpan="2">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding Name}" FontSize="12" TextColor="Gray"/>
                                            <Label Text="{Binding Count, StringFormat='{0} sold'}" FontSize="12" TextColor="Gray" Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </Frame>

                    <!-- Monthly Picks -->
                    <Frame BackgroundColor="White" CornerRadius="12" Padding="12" HasShadow="True" Grid.Column="1">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Text="Monthly Picks" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                            <Label Text="{Binding MonthlyOrders, StringFormat='{0} Orders'}" Grid.Column="1" FontSize="14" TextColor="Gray"/>
                            <!-- Bar chart for Monthly items -->
                            <CollectionView Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding TopItemsMonthly}" HeightRequest="180" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <VerticalStackLayout HorizontalOptions="Center" WidthRequest="90" VerticalOptions="End" Spacing="6">
                                            <Grid HeightRequest="150" VerticalOptions="End" RowDefinitions="*,Auto">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <BoxView VerticalOptions="End" HeightRequest="{Binding ScaledCount}" WidthRequest="45" Color="{Binding ColorCode, Converter={StaticResource StringToColorConverter}}" CornerRadius="8"/>
                                                </Grid>
                                                <Label Grid.Row="1" Text="{Binding Name}" TextColor="Gray" FontSize="10" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <CollectionView ItemsSource="{Binding TopItemsMonthly}" HeightRequest="100" Grid.Row="2" Grid.ColumnSpan="2">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding Name}" FontSize="12" TextColor="Gray"/>
                                            <Label Text="{Binding Count, StringFormat='{0} sold'}" FontSize="12" TextColor="Gray" Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </Frame>
                </Grid>

                
            </VerticalStackLayout>
        </ScrollView>

        <!-- All Global Popups -->
        <views:Settings BindingContext="{Binding SettingsPopup}" Grid.ColumnSpan="2"/>
        <otherViews:ManagePOSOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditProductPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup.EditProductPopupVM}" Grid.ColumnSpan="2" ZIndex="1900"/>
        <otherViews:ManageInventoryOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditInventoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=EditInventoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:AddItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2"/>
        <otherViews:UpdateInventoryDetails BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:AddItemToPOS BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup}" Grid.ColumnSpan="2"/>
        <otherViews:ConnectPOSItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1100"/>
        <otherViews:InputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200"/>
        <otherViews:PreviewPOSItem BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1300"/>
        <otherViews:AddonsSelectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.AddonsPopup}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:CartPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=POSVM.CartPopup}" Grid.ColumnSpan="2"/>
        <otherViews:HistoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=HistoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:PaymentPopup x:Name="PaymentPopupControl" Grid.ColumnSpan="2"/>
        <!-- Removed OrderCompletePopup here; it should only appear on POS -->
        <otherViews:OrderConfirmedPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=OrderConfirmedPopup}" Grid.ColumnSpan="2" ZIndex="2000"/>
        <otherViews:SuccessCardPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=SuccessCardPopup}" Grid.ColumnSpan="2" ZIndex="1200"/>
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
        <otherViews:PasswordResetPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=PasswordResetPopup}" Grid.ColumnSpan="2" ZIndex="1700"/>
    </Grid>
</ContentPage>
