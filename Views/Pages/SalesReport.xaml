<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Coftea_Capstone.Views.Pages.SalesReport" 
             x:Name="Root"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel" 
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             xmlns:charts="clr-namespace:Coftea_Capstone.Views.Controls"
             xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls" 
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             xmlns:controls="clr-namespace:Coftea_Capstone.Views.Controls"
             Shell.TabBarIsVisible="False" 
             BackgroundColor="#C1A892">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <converters:StringToColorConverter x:Key="StringToColorConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            
            <!-- Style for Time Period Buttons -->
            <Style x:Key="TimePeriodButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#2E7D32"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="HeightRequest" Value="32"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="BorderColor" Value="#C8E6C9"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="Padding" Value="3,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <views:NavigationBar x:Name="Sidebar" Grid.Column="0" />

        <!-- Main Content -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="20" Spacing="16">

                <!-- Top Bar -->
                <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto" Padding="0,10" VerticalOptions="Center" ColumnSpacing="16">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Sales Report" FontSize="32" FontAttributes="Bold" FontFamily="MontserratBlack" VerticalOptions="Center" TextColor="Black"/>
                        <Label Text="{Binding LastRefreshedText}" 
                               FontSize="10" 
                               TextColor="#666666" 
                               FontFamily="OpenSansSemibold"
                               IsVisible="{Binding LastRefreshedText, Converter={StaticResource StringToBoolConverter}}"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1" 
                            Text="{Binding DateFilterText}" 
                            FontSize="12" 
                            FontAttributes="Bold"
                            TextColor="#2E7D32" 
                            BackgroundColor="White"
                            BorderColor="#C8E6C9"
                            BorderWidth="1"
                            CornerRadius="8"
                            Padding="12,8"
                            HeightRequest="36"
                            Command="{Binding SelectDateFilterCommand}"/>
                    <ImageButton Grid.Column="2" Source="notification.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" Clicked="OnBellClicked"/>
                    <Grid Grid.Column="3" WidthRequest="40" HeightRequest="40">
                        <Image Source="{Binding Source={x:Static Application.Current}, Path=ProfilePopup.ProfileImageSource}" 
                               WidthRequest="40" 
                               HeightRequest="40" 
                               Aspect="AspectFill" 
                               ZIndex="1" />
                        <ImageButton Source="usericon.png" 
                                     WidthRequest="40" 
                                     HeightRequest="40" 
                                     BackgroundColor="Transparent"
                                     CornerRadius="20"
                                     Clicked="OnProfileClicked"
                                     ZIndex="0"/>
                    </Grid>
                </Grid>

                <!-- Categories - Centered above pie chart and KPI cards -->
                <ScrollView Orientation="Horizontal" HorizontalOptions="Center">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Button Text="Overview" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Overview">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Overview">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Frappe" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Frappe">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Frappe">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Fruit/Soda" FontAttributes="Bold" TextColor="Black" FontSize="13"
                                BackgroundColor="#FFEAD6" WidthRequest="140" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Fruit/Soda">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Fruit/Soda">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Milktea" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Milktea">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Milktea">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Text="Coffee" FontAttributes="Bold" TextColor="Black" FontSize="14"
                                BackgroundColor="#FFEAD6" WidthRequest="120" HeightRequest="40"
                                Command="{Binding SelectCategoryCommand}" CommandParameter="Coffee">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedCategory}" Value="Coffee">
                                    <Setter Property="BackgroundColor" Value="#D4A574" />
                                    <Setter Property="TextColor" Value="#2b2b2b" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackLayout>
                </ScrollView>

                <!-- KPI Cards, Pie Chart, and Total Accumulated - Three column layout -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    <!-- Left Column: KPI Cards -->
                    <VerticalStackLayout Grid.Column="0" Spacing="12" VerticalOptions="Start">
                        <Frame BackgroundColor="#F5E6D8" CornerRadius="12" HeightRequest="110" Padding="12" HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="Overall Most Bought Today" FontAttributes="Bold" FontSize="14" TextColor="#5B4F45"/>
                                <Label Text="{Binding MostBoughtToday}" FontSize="20" TextColor="#5B4F45"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Payment Method Breakdown -->
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                            <!-- Cash Payment -->
                            <Frame BackgroundColor="#E8F5E8" CornerRadius="12" HeightRequest="115" Padding="8" HasShadow="True" Grid.Column="0">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ShowCashProductsCommand}"/>
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Cash" FontAttributes="Bold" FontSize="14" TextColor="#2E7D32"/>
                                    <Label Text="{Binding DisplayCashTotal, StringFormat='â‚±{0:N2}'}" FontSize="18" TextColor="#2E7D32" FontAttributes="Bold" LineBreakMode="NoWrap"/>
                                    <Label Text="{Binding CashPercentageText}" FontSize="12" TextColor="#558B2F" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- GCash Payment -->
                            <Frame BackgroundColor="#E3F2FD" CornerRadius="12" HeightRequest="115" Padding="8" HasShadow="True" Grid.Column="1">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ShowGCashProductsCommand}"/>
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="GCash" FontAttributes="Bold" FontSize="14" TextColor="#1976D2"/>
                                    <Label Text="{Binding DisplayGCashTotal, StringFormat='â‚±{0:N2}'}" FontSize="18" TextColor="#1976D2" FontAttributes="Bold" LineBreakMode="NoWrap"/>
                                    <Label Text="{Binding GCashPercentageText}" FontSize="12" TextColor="#1565C0" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Bank Payment -->
                            <Frame BackgroundColor="#F3E5F5" CornerRadius="12" HeightRequest="115" Padding="8" HasShadow="True" Grid.Column="2">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ShowBankProductsCommand}"/>
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Bank" FontAttributes="Bold" FontSize="14" TextColor="#7B1FA2"/>
                                    <Label Text="{Binding DisplayBankTotal, StringFormat='â‚±{0:N2}'}" FontSize="18" TextColor="#7B1FA2" FontAttributes="Bold" LineBreakMode="NoWrap"/>
                                    <Label Text="{Binding BankPercentageText}" FontSize="12" TextColor="#6A1B9A" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Middle Column: Top 3 Picks Today - Pie Chart -->
                    <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="12" Padding="12" HasShadow="True" VerticalOptions="Start">
                        <Grid RowDefinitions="Auto,*,Auto">
                            <!-- Header -->
                            <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Top 3 Picks Today" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                            <Label Text="{Binding FilteredTodayOrders, StringFormat='{0} Orders'}" Grid.Column="1" FontSize="14" TextColor="Gray"/>
                            </Grid>

                            <!-- Pie left, Names right -->
                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="16" VerticalOptions="Start">
                                <otherViews:SimplePieChart Grid.Column="0"
                                                          HorizontalOptions="Start"
                                                          VerticalOptions="Center"
                                                          HeightRequest="160"
                                                          WidthRequest="160"
                                                          ShowLegend="False"
                                                          ItemsSource="{Binding TopItemsToday}" 
                                                      Item1Name="{Binding Item1Name}" 
                                                      Item2Name="{Binding Item2Name}" 
                                                      Item3Name="{Binding Item3Name}"
                                                      Item1Count="{Binding Item1Count}"
                                                      Item2Count="{Binding Item2Count}"
                                                      Item3Count="{Binding Item3Count}"
                                                      Item1HasTrend="{Binding Item1HasTrend}"
                                                      Item2HasTrend="{Binding Item2HasTrend}"
                                                      Item3HasTrend="{Binding Item3HasTrend}"/>

                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="10"
                                                     HorizontalOptions="Start"
                                                     VerticalOptions="Start"
                                                     Margin="8,10,8,10">
                                    <Grid ColumnDefinitions="Auto,*"
                                          RowDefinitions="Auto,Auto"
                                          ColumnSpacing="8"
                                          RowSpacing="2">
                                        <BoxView Grid.RowSpan="2"
                                                 WidthRequest="10"
                                                 HeightRequest="10"
                                                 VerticalOptions="Start"
                                                 Color="#66BB6A"/>
                                        <Label Grid.Column="1"
                                               Grid.Row="0"
                                               Text="{Binding Item1Name}"
                                               FontSize="14"
                                               TextColor="#5B4F45"
                                               LineBreakMode="WordWrap"
                                               MaxLines="2"
                                               HorizontalOptions="Start"/>
                                        <Label Grid.Column="1"
                                               Grid.Row="1"
                                               Text="{Binding Item1Count, StringFormat='{0} orders'}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               HorizontalOptions="Start"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*"
                                          RowDefinitions="Auto,Auto"
                                          ColumnSpacing="8"
                                          RowSpacing="2">
                                        <BoxView Grid.RowSpan="2"
                                                 WidthRequest="10"
                                                 HeightRequest="10"
                                                 VerticalOptions="Start"
                                                 Color="#8D6E63"/>
                                        <Label Grid.Column="1"
                                               Grid.Row="0"
                                               Text="{Binding Item2Name}"
                                               FontSize="14"
                                               TextColor="#5B4F45"
                                               LineBreakMode="WordWrap"
                                               MaxLines="2"
                                               HorizontalOptions="Start"/>
                                        <Label Grid.Column="1"
                                               Grid.Row="1"
                                               Text="{Binding Item2Count, StringFormat='{0} orders'}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               HorizontalOptions="Start"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*"
                                          RowDefinitions="Auto,Auto"
                                          ColumnSpacing="8"
                                          RowSpacing="2"
                                          VerticalOptions="Start">
                                        <BoxView Grid.RowSpan="2"
                                                 WidthRequest="10"
                                                 HeightRequest="10"
                                                 VerticalOptions="Start"
                                                 Color="#795548"/>
                                        <Label Grid.Column="1"
                                               Grid.Row="0"
                                               Text="{Binding Item3Name}"
                                               FontSize="14"
                                               TextColor="#5B4F45"
                                               LineBreakMode="WordWrap"
                                               MaxLines="2"
                                               HorizontalOptions="Start"
                                               VerticalOptions="Start"/>
                                        <Label Grid.Column="1"
                                               Grid.Row="1"
                                               Text="{Binding Item3Count, StringFormat='{0} orders'}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               HorizontalOptions="Start"
                                               VerticalOptions="Start"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Frame>

                    <!-- Right Column: Total Cash Accumulated -->
                    <Frame Grid.Column="2" BackgroundColor="#C8E6C9" CornerRadius="15" Padding="20" HasShadow="True" HeightRequest="240" VerticalOptions="Start" BorderColor="#81C784">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Fill">
                            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                                <Label Text="Total Sales" FontAttributes="Bold" FontSize="20" FontFamily="Montserrat-Black" TextColor="#2E7D32" HorizontalOptions="Center"/>
                                <Label Text="{Binding SelectedTimePeriod, StringFormat='{0} sales totals'}" FontSize="13" TextColor="#558B2F" HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                            
                            <!-- Time Period Filter Buttons -->
                            <Grid ColumnDefinitions="*,*,*,*,*" ColumnSpacing="2">
                                <Button Text="Today" 
                                        Style="{StaticResource TimePeriodButtonStyle}"
                                        Grid.Column="0"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="Today"/>
                                <Button Text="Yesterday" 
                                        Style="{StaticResource TimePeriodButtonStyle}"
                                        Grid.Column="1"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="Yesterday"/>
                                <Button Text="1 Week" 
                                        Style="{StaticResource TimePeriodButtonStyle}"
                                        Grid.Column="2"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="1 Week"/>
                                <Button Text="1 Month" 
                                        Style="{StaticResource TimePeriodButtonStyle}"
                                        Grid.Column="3"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="1 Month"/>
                                <Button Text="All Time" 
                                        Style="{StaticResource TimePeriodButtonStyle}"
                                        Grid.Column="4"
                                        Command="{Binding SelectTimePeriodCommand}" 
                                        CommandParameter="All Time"/>
                            </Grid>
                            
                            <Label Text="{Binding DisplayTotalSales, StringFormat='â‚±{0:N2}'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold" 
                                   FontFamily="Montserrat-Black"
                                   LineBreakMode="NoWrap"
                                   TextColor="#2E7D32" 
                                   HorizontalOptions="Center"/>
                            
                            <!-- Comparison details and payment breakdown removed per request -->
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Weekly and Monthly Picks - Two-column layout -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <!-- Weekly Picks -->
                    <Frame BackgroundColor="White" CornerRadius="12" Padding="12" HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
                                <Label Text="Weekly Picks" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                                <VerticalStackLayout Grid.Column="1" Spacing="0" HorizontalOptions="End">
                                    <Label Text="{Binding FilteredWeeklyOrders, StringFormat='{0} Orders'}" FontSize="14" TextColor="Gray" HorizontalOptions="End"/>
                                    <Label Text="{Binding WeeklyRangeText}" FontSize="12" TextColor="#8B7355" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Grid>
                            <!-- Bar chart for Weekly items -->
                            <Grid Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="180" ColumnDefinitions="35,*" RowDefinitions="*,Auto">
                                <!-- Y-axis labels -->
                                <Grid Grid.Column="0" Grid.Row="0" RowDefinitions="*,*,*,*,*" HeightRequest="150" VerticalOptions="End" Margin="0,0,4,0">
                                    <Label Grid.Row="0" 
                                           Text="{Binding WeeklyYAxisValues[0], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="1" 
                                           Text="{Binding WeeklyYAxisValues[1], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"
                                           />
                                    <Label Grid.Row="2" 
                                           Text="{Binding WeeklyYAxisValues[2], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="3" 
                                           Text="{Binding WeeklyYAxisValues[3], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="4" 
                                           Text="{Binding WeeklyYAxisValues[4], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                </Grid>
                                
                                <!-- Chart area with grid lines and bars -->
                                <Grid Grid.Column="1" Grid.Row="0" RowDefinitions="*,*,*,*,*" HeightRequest="150" VerticalOptions="End">
                                    <!-- Y-axis grid lines -->
                                    <BoxView Grid.Row="0" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="1" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="2" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="3" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="4" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    
                                    <!-- X-axis line -->
                                    <BoxView Grid.Row="4" Color="#999999" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="End"/>
                                    
                                    <!-- Bars -->
                                    <CollectionView Grid.RowSpan="5" 
                                                    ItemsSource="{Binding TopItemsWeekly}" 
                                                    ItemsLayout="HorizontalList"
                                                    BackgroundColor="Transparent"
                                                    VerticalOptions="FillAndExpand">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <VerticalStackLayout HorizontalOptions="Center" WidthRequest="90" Spacing="6" Padding="0">
                                                    <Grid HeightRequest="150" BackgroundColor="Transparent" VerticalOptions="FillAndExpand">
                                                        <Border VerticalOptions="End" HeightRequest="{Binding ScaledCount}" WidthRequest="50" BackgroundColor="{Binding ColorCode, Converter={StaticResource StringToColorConverter}}" StrokeThickness="0" StrokeShape="RoundRectangle 12,12,12,12"/>
                                                    </Grid>
                                                    <Label Text="{Binding Name}" TextColor="#8B7355" FontSize="11"  LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
                                                </VerticalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Grid>
                            <CollectionView ItemsSource="{Binding TopItemsWeekly}" HeightRequest="100" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,0">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding Name}" FontSize="12" TextColor="Gray"/>
                                            <Label Text="{Binding Count, StringFormat='{0} sold'}" FontSize="12" TextColor="Gray" Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <!-- PDF Download Button at bottom -->
                            <Button Grid.Row="3" 
                                    Grid.ColumnSpan="2"
                                    Text="ðŸ“„ Download Weekly Report" 
                                    FontSize="13" 
                                    FontAttributes="Bold"
                                    TextColor="#5B4F45" 
                                    BackgroundColor="#FFB3D9" 
                                    HeightRequest="40" 
                                    CornerRadius="12"
                                    BorderWidth="0"
                                    Margin="0,5,0,0"
                                    Command="{Binding ShowWeeklyReportDialogCommand}"/>
                        </Grid>
                    </Frame>

                    <!-- Monthly Picks -->
                    <Frame BackgroundColor="White" CornerRadius="12" Padding="12" HasShadow="True" Grid.Column="1">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
                                <Label Text="Monthly Picks" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                                <VerticalStackLayout Grid.Column="1" Spacing="0" HorizontalOptions="End">
                                    <Label Text="{Binding MonthlyOrders, StringFormat='{0} Orders'}" FontSize="14" TextColor="Gray" HorizontalOptions="End"/>
                                    <Label Text="{Binding MonthlyRangeText}" FontSize="12" TextColor="#8B7355" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Grid>
                            <!-- Bar chart for Monthly items -->
                            <Grid Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="180" ColumnDefinitions="35,*" RowDefinitions="*,Auto">
                                <!-- Y-axis labels -->
                                <Grid Grid.Column="0" Grid.Row="0" RowDefinitions="*,*,*,*,*" HeightRequest="150" VerticalOptions="End" Margin="0,0,4,0">
                                    <Label Grid.Row="0" 
                                           Text="{Binding MonthlyYAxisValues[0], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="1" 
                                           Text="{Binding MonthlyYAxisValues[1], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="2" 
                                           Text="{Binding MonthlyYAxisValues[2], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="3" 
                                           Text="{Binding MonthlyYAxisValues[3], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="4" 
                                           Text="{Binding MonthlyYAxisValues[4], StringFormat='{0}'}" 
                                           FontSize="9" 
                                           TextColor="#666666" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center"/>
                                </Grid>
                                
                                <!-- Chart area with grid lines and bars -->
                                <Grid Grid.Column="1" Grid.Row="0" RowDefinitions="*,*,*,*,*" HeightRequest="150" VerticalOptions="End">
                                    <!-- Y-axis grid lines -->
                                    <BoxView Grid.Row="0" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="1" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="2" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="3" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    <BoxView Grid.Row="4" Color="#B0B0B0" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                                    
                                    <!-- X-axis line -->
                                    <BoxView Grid.Row="4" Color="#999999" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="End"/>
                                    
                                    <!-- Bars -->
                                    <CollectionView Grid.RowSpan="5" 
                                                    ItemsSource="{Binding TopItemsMonthly}" 
                                                    ItemsLayout="HorizontalList"
                                                    BackgroundColor="Transparent"
                                                    VerticalOptions="FillAndExpand">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <VerticalStackLayout HorizontalOptions="Center" WidthRequest="90" Spacing="6" Padding="0">
                                                    <Grid HeightRequest="150" BackgroundColor="Transparent" VerticalOptions="FillAndExpand">
                                                        <Border VerticalOptions="End" HeightRequest="{Binding ScaledCount}" WidthRequest="50" BackgroundColor="{Binding ColorCode, Converter={StaticResource StringToColorConverter}}" StrokeThickness="0" StrokeShape="RoundRectangle 12,12,12,12"/>
                                                    </Grid>
                                                    <Label Text="{Binding Name}" TextColor="#8B7355" FontSize="11"  LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
                                                </VerticalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Grid>
                            <CollectionView ItemsSource="{Binding TopItemsMonthly}" HeightRequest="100" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,0">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding Name}" FontSize="12" TextColor="Gray"/>
                                            <Label Text="{Binding Count, StringFormat='{0} sold'}" FontSize="12" TextColor="Gray" Grid.Column="1"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <!-- PDF Download Button at bottom -->
                            <Button Grid.Row="3" 
                                    Grid.ColumnSpan="2"
                                    Text="ðŸ“„ Download Monthly Report" 
                                    FontSize="13" 
                                    FontAttributes="Bold"
                                    TextColor="#5B4F45" 
                                    BackgroundColor="#FFB3D9" 
                                    HeightRequest="40" 
                                    CornerRadius="12"
                                    BorderWidth="0"
                                    Margin="0,5,0,0"
                                    Command="{Binding ShowMonthlyReportDialogCommand}"/>
                        </Grid>
                    </Frame>
                </Grid>

                <!-- Sales Breakdown Table -->
                <Frame BackgroundColor="White" CornerRadius="12" Padding="16" HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Sales Breakdown" FontAttributes="Bold" FontSize="18" TextColor="#5B4F45"/>
                            <Button Grid.Column="1"
                                    Text="{Binding AggregateToggleText}"
                                    Command="{Binding ToggleAggregateSectionCommand}"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="#2E7D32"
                                    BackgroundColor="White"
                                    BorderColor="#C8E6C9"
                                    BorderWidth="1"
                                    CornerRadius="8"
                                    Padding="12,6"/>
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12" IsVisible="{Binding IsAggregateSectionVisible}">
                            <Label Text="Group by:" FontSize="12" TextColor="#5B4F45" VerticalOptions="Center"/>
                            <Button Grid.Column="1"
                                    Text="{Binding SelectedAggregateMode}"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="#2E7D32"
                                    BackgroundColor="White"
                                    BorderColor="#C8E6C9"
                                    BorderWidth="1"
                                    CornerRadius="8"
                                    Padding="12,6"
                                    Command="{Binding ShowAggregateModePickerCommand}"
                                    HorizontalOptions="Start"/>
                        </Grid>

                        <ActivityIndicator IsVisible="{Binding IsAggregateLoading}" IsRunning="{Binding IsAggregateLoading}" Color="#2E7D32"/>

                        <StackLayout IsVisible="{Binding IsAggregateSectionVisible}">
                            <StackLayout IsVisible="{Binding HasAggregateRows}">
                                <ScrollView Orientation="Horizontal">
                                    <VerticalStackLayout Spacing="8">
                                        <Button Text="Browse Products"
                                                BackgroundColor="#FFB3D9"
                                                TextColor="#5B4F45"
                                                FontAttributes="Bold"
                                                HeightRequest="36"
                                                CornerRadius="10"
                                                Padding="12,6"
                                                Command="{Binding BrowseProductsCommand}"
                                                HorizontalOptions="Start"/>
                                        <Border BackgroundColor="#FFF5EC" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="0">
                                            <Grid ColumnDefinitions="220,80,120,120,120,120" Padding="0,0,8,0" RowDefinitions="Auto">
                                                <Label Text="Group" FontAttributes="Bold" TextColor="#5B4F45" Padding="12,8"/>
                                                <BoxView Grid.Column="1" Color="#E8D9C7" WidthRequest="1" HorizontalOptions="End" Margin="0" InputTransparent="True"/>
                                                <Label Grid.Column="1" Text="Qty" FontAttributes="Bold" TextColor="#5B4F45" HorizontalTextAlignment="Center" Padding="12,8"/>
                                                <BoxView Grid.Column="2" Color="#E8D9C7" WidthRequest="1" HorizontalOptions="End" Margin="0" InputTransparent="True"/>
                                                <Label Grid.Column="2" Text="Revenue (â‚±)" FontAttributes="Bold" TextColor="#5B4F45" HorizontalTextAlignment="Center" Padding="12,8"/>
                                                <BoxView Grid.Column="3" Color="#E8D9C7" WidthRequest="1" HorizontalOptions="End" Margin="0" InputTransparent="True"/>
                                                <Label Grid.Column="3" Text="Cash" FontAttributes="Bold" TextColor="#5B4F45" HorizontalTextAlignment="Center" Padding="12,8"/>
                                                <BoxView Grid.Column="4" Color="#E8D9C7" WidthRequest="1" HorizontalOptions="End" Margin="0" InputTransparent="True"/>
                                                <Label Grid.Column="4" Text="GCash" FontAttributes="Bold" TextColor="#5B4F45" HorizontalTextAlignment="Center" Padding="12,8"/>
                                                <BoxView Grid.Column="5" Color="#E8D9C7" WidthRequest="1" HorizontalOptions="End" Margin="0" InputTransparent="True"/>
                                                <Label Grid.Column="5" Text="Bank" FontAttributes="Bold" TextColor="#5B4F45" HorizontalTextAlignment="Center" Padding="12,8"/>
                                            </Grid>
                                        </Border>

                                        <CollectionView ItemsSource="{Binding SalesAggregateRows}" HeightRequest="260" SelectionMode="None">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="4"/>
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Stroke="#EADCCD" StrokeThickness="1" BackgroundColor="{Binding RowBackgroundColor}" StrokeShape="RoundRectangle 8" Padding="0">
                                                        <Grid ColumnDefinitions="220,80,120,120,120,120" ColumnSpacing="0" Padding="10,10,10,10">
                                                            <Grid Padding="0" ColumnDefinitions="Auto,*">
                                                                <Label Text="{Binding GroupLabel}" TextColor="#4A90E2" FontSize="13" LineBreakMode="TailTruncation" Padding="0" FontAttributes="Bold"/>
                                                                <Button Grid.Column="1"
                                                                        Text="VIEW"
                                                                        FontSize="11"
                                                                        BackgroundColor="#FFB3D9"
                                                                        TextColor="#5B4F45"
                                                                        CornerRadius="10"
                                                                        HeightRequest="26"
                                                                        Padding="12,2"
                                                                        HorizontalOptions="End"
                                                                        Command="{Binding Source={x:Reference Root}, Path=BindingContext.ShowProductDetailsCommand}"
                                                                        CommandParameter="{Binding GroupLabel}"/>
                                                            </Grid>
                                                                <Label.GestureRecognizers>
                                                                    <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=BindingContext.ShowProductDetailsCommand}" CommandParameter="{Binding GroupLabel}"/>
                                                                </Label.GestureRecognizers>
                                                            <BoxView Grid.Column="1" Color="#F1E6D9" WidthRequest="1" HorizontalOptions="End" InputTransparent="True" Margin="0"/>
                                                            <Label Grid.Column="1" Text="{Binding TotalQuantityDisplay}" TextColor="#424242" FontSize="13" HorizontalTextAlignment="Center" Padding="12,0"/>
                                                            <BoxView Grid.Column="2" Color="#F1E6D9" WidthRequest="1" HorizontalOptions="End" InputTransparent="True" Margin="0"/>
                                                            <Label Grid.Column="2" Text="{Binding TotalRevenueDisplay}" TextColor="#2E7D32" FontSize="13" HorizontalTextAlignment="Center" Padding="12,0" FontAttributes="Bold"/>
                                                            <BoxView Grid.Column="3" Color="#F1E6D9" WidthRequest="1" HorizontalOptions="End" InputTransparent="True" Margin="0"/>
                                                            <VerticalStackLayout Grid.Column="3" Spacing="4" HorizontalOptions="Center" Padding="8,0">
                                                                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="6">
                                                                    <Border BackgroundColor="#E8F5E8" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="6,2">
                                                                        <Label Text="{Binding Cash.QuantityDisplay}" TextColor="#2E7D32" FontSize="11"/>
                                                                    </Border>
                                                                    <Border Grid.Column="1" BackgroundColor="#E8F5E8" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="6,2">
                                                                        <Label Text="{Binding Cash.RevenueDisplay}" TextColor="#2E7D32" FontSize="11"/>
                                                                    </Border>
                                                                </Grid>
                                                            </VerticalStackLayout>
                                                            <BoxView Grid.Column="4" Color="#F1E6D9" WidthRequest="1" HorizontalOptions="End" InputTransparent="True" Margin="0"/>
                                                            <VerticalStackLayout Grid.Column="4" Spacing="4" HorizontalOptions="Center" Padding="8,0">
                                                                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="6">
                                                                    <Border BackgroundColor="#E3F2FD" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="6,2">
                                                                        <Label Text="{Binding GCash.QuantityDisplay}" TextColor="#1976D2" FontSize="11"/>
                                                                    </Border>
                                                                    <Border Grid.Column="1" BackgroundColor="#E3F2FD" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="6,2">
                                                                        <Label Text="{Binding GCash.RevenueDisplay}" TextColor="#1976D2" FontSize="11"/>
                                                                    </Border>
                                                                </Grid>
                                                            </VerticalStackLayout>
                                                            <BoxView Grid.Column="5" Color="#F1E6D9" WidthRequest="1" HorizontalOptions="End" InputTransparent="True" Margin="0"/>
                                                            <VerticalStackLayout Grid.Column="5" Spacing="4" HorizontalOptions="Center" Padding="8,0">
                                                                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="6">
                                                                    <Border BackgroundColor="#F3E5F5" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="6,2">
                                                                        <Label Text="{Binding Bank.QuantityDisplay}" TextColor="#7B1FA2" FontSize="11"/>
                                                                    </Border>
                                                                    <Border Grid.Column="1" BackgroundColor="#F3E5F5" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="6,2">
                                                                        <Label Text="{Binding Bank.RevenueDisplay}" TextColor="#7B1FA2" FontSize="11"/>
                                                                    </Border>
                                                                </Grid>
                                                            </VerticalStackLayout>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </VerticalStackLayout>
                                </ScrollView>
                                <Label Text="Figures include all filtered transactions." FontSize="11" TextColor="#757575" Margin="0,4,0,0"/>
                            </StackLayout>
                            <Label Text="No sales data for this range yet." FontSize="13" TextColor="#757575" HorizontalTextAlignment="Center" Margin="0,12,0,0" IsVisible="{Binding HasAggregateRows, Converter={StaticResource InvertBoolConverter}}"/>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>

    </VerticalStackLayout>
        </ScrollView>

        <!-- Report Confirmation / Info Dialog -->
        <Grid Grid.ColumnSpan="2"
              BackgroundColor="#80000000"
              IsVisible="{Binding IsReportDialogVisible}"
              InputTransparent="False"
              Padding="20"
              ZIndex="3500">
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="24"
                   WidthRequest="420"
                   MinimumHeightRequest="220"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="True"
                   InputTransparent="False">
                <VerticalStackLayout Spacing="18">
                    <Label Text="{Binding ReportDialogTitle}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#5B4F45"
                           HorizontalOptions="Center"/>

                    <ScrollView HeightRequest="160">
                        <Label Text="{Binding ReportDialogMessage}"
                               FontSize="14"
                               TextColor="#4B3A2F"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </ScrollView>

                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Fill">
                        <Button Text="{Binding ReportDialogRejectText}"
                                BackgroundColor="#E0E0E0"
                                TextColor="#5B4F45"
                                CornerRadius="12"
                                HeightRequest="44"
                                Command="{Binding RejectReportDialogCommand}"
                                HorizontalOptions="FillAndExpand"
                                IsVisible="{Binding ReportDialogHasReject}"/>

                        <Button Text="{Binding ReportDialogAcceptText}"
                                BackgroundColor="#5B4F45"
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="44"
                                Command="{Binding AcceptReportDialogAsyncCommand}"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- All Global Popups -->
        <otherViews:ManagePOSOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditProductPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ManagePOSPopup.EditProductPopupVM}" Grid.ColumnSpan="2" ZIndex="1900"/>
        <otherViews:ManageInventoryOptions BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup}" Grid.ColumnSpan="2" ZIndex="1800"/>
        <otherViews:EditInventoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=EditInventoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:AddItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2"/>
        <otherViews:UpdateInventoryDetails BindingContext="{Binding Source={x:Static Application.Current}, Path=ManageInventoryPopup.AddItemToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:AddItemToPOS BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup}" Grid.ColumnSpan="2"/>
        <otherViews:ConnectPOSItemToInventory BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1100"/>
        <otherViews:InputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200" IsVisible="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.IsInputIngredientsAmountUsedVisible}"/>
        <otherViews:UpdateInputIngredientsAmountUsed BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1200" IsVisible="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.IsUpdateInputIngredientsAmountUsedVisible}"/>
        <otherViews:PreviewPOSItem BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM}" Grid.ColumnSpan="2" ZIndex="1300"/>
        <otherViews:AddonsSelectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=AddItemPopup.ConnectPOSToInventoryVM.AddonsPopup}" Grid.ColumnSpan="2" ZIndex="1400"/>
        <otherViews:CartPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=POSVM.CartPopup}" Grid.ColumnSpan="2"/>
        <otherViews:HistoryPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=HistoryPopup}" Grid.ColumnSpan="2"/>
        <otherViews:PaymentPopup x:Name="PaymentPopupControl" Grid.ColumnSpan="2"/>
        <!-- Removed OrderCompletePopup here; it should only appear on POS -->
        <otherViews:OrderConfirmedPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=OrderConfirmedPopup}" Grid.ColumnSpan="2" ZIndex="2000"/>
        <otherViews:SuccessCardPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=SuccessCardPopup}" Grid.ColumnSpan="2" ZIndex="1200"/>
        <otherViews:NotificationPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=NotificationPopup}" Grid.ColumnSpan="2" ZIndex="1500"/>
        <otherViews:ProfilePopup BindingContext="{Binding Source={x:Static Application.Current}, Path=ProfilePopup}" Grid.ColumnSpan="2" ZIndex="1600"/>
        <otherViews:PasswordResetPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=PasswordResetPopup}" Grid.ColumnSpan="2" ZIndex="1700"/>
        <otherViews:RetryConnectionPopup BindingContext="{Binding Source={x:Static Application.Current}, Path=RetryConnectionPopup}" Grid.ColumnSpan="2" ZIndex="2800"/>
        
        <!-- Date Filter Popup -->
        <controls:DateFilterPopup BindingContext="{Binding DateFilterPopup}" Grid.ColumnSpan="2" ZIndex="2900"/>
        
        <!-- Product Detail Popup -->
        <controls:ProductDetailPopup BindingContext="{Binding ProductDetailPopup}" Grid.ColumnSpan="2" ZIndex="3000"/>
        <!-- Product Picker Popup -->
        <controls:ProductPickerPopup BindingContext="{Binding ProductPickerPopup}" Grid.ColumnSpan="2" ZIndex="3000"/>
        
        <!-- Payment Method Products Popup -->
        <controls:PaymentMethodProductsPopup BindingContext="{Binding PaymentMethodProductsPopup}" Grid.ColumnSpan="2" ZIndex="3100"/>
    </Grid>
</ContentPage>
