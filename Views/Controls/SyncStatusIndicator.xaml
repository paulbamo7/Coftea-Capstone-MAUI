<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Controls.SyncStatusIndicator">
    
    <Frame BackgroundColor="#2B2B2B"
           CornerRadius="20"
           Padding="10,5"
           HasShadow="False"
           HorizontalOptions="End"
           VerticalOptions="Start"
           Margin="0,10,10,0">
        
        <HorizontalStackLayout Spacing="8">
            
            <!-- Online/Offline Icon -->
            <Label x:Name="ConnectionIcon"
                   Text="🌐"
                   FontSize="16"
                   VerticalOptions="Center"/>
            
            <!-- Status Text -->
            <Label x:Name="StatusText"
                   Text="Online"
                   TextColor="White"
                   FontSize="12"
                   VerticalOptions="Center"/>
            
            <!-- Sync Progress (visible only when syncing) -->
            <ActivityIndicator x:Name="SyncIndicator"
                             IsRunning="False"
                             IsVisible="False"
                             Color="White"
                             WidthRequest="16"
                             HeightRequest="16"
                             VerticalOptions="Center"/>
            
            <!-- Pending Count (visible when offline with pending ops) -->
            <Frame x:Name="PendingBadge"
                   BackgroundColor="#FF6B6B"
                   CornerRadius="10"
                   Padding="5,2"
                   HasShadow="False"
                   IsVisible="False"
                   VerticalOptions="Center">
                <Label x:Name="PendingCount"
                       Text="0"
                       TextColor="White"
                       FontSize="10"
                       FontAttributes="Bold"/>
            </Frame>
            
        </HorizontalStackLayout>
        
    </Frame>
    
</ContentView>

