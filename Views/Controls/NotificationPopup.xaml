<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.NotificationPopup"
    x:Name="NotificationPopupView"
    BackgroundColor="Transparent"
    IsVisible="{Binding IsNotificationVisible, FallbackValue=False}"
    InputTransparent="False">

    <!-- Full-screen transparent layer to allow outside tap to dismiss -->
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="False">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseNotificationCommand}" />
        </Grid.GestureRecognizers>

        <!-- Dropdown positioned below the bell (top-right) -->
        <Grid VerticalOptions="Start" HorizontalOptions="End" Margin="0,60,45,0" InputTransparent="False">
            <Frame Padding="12" BackgroundColor="#FFFFFF" CornerRadius="14" HasShadow="True" WidthRequest="250">
                <VerticalStackLayout Spacing="6">
                    <!-- Individual notification items (limited height, scrollable) -->
                    <CollectionView ItemsSource="{Binding Notifications}"
                                    SelectionMode="None"
                                    ItemsLayout="VerticalList"
                                    HeightRequest="240"
                                    VerticalScrollBarVisibility="Always">
                        <CollectionView.Triggers>
                            <DataTrigger TargetType="CollectionView" Binding="{Binding IsExpanded}" Value="False">
                                <Setter Property="HeightRequest" Value="240"/>
                            </DataTrigger>
                            <DataTrigger TargetType="CollectionView" Binding="{Binding IsExpanded}" Value="True">
                                <Setter Property="HeightRequest" Value="480"/>
                            </DataTrigger>
                        </CollectionView.Triggers>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#E9E1D9" CornerRadius="12" Padding="8" HasShadow="False" Margin="0,0,0,4">
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="2">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="13" FontFamily="MontserratBlack" TextColor="Black"/>
                                        <Label Grid.Row="1" Text="{Binding Message}" FontSize="11" FontFamily="MontserratBlack" TextColor="Black" LineBreakMode="TailTruncation" MaxLines="2"/>
                                        <Label Grid.Row="2" Text="{Binding Type}" FontSize="9" FontFamily="MontserratBlack" TextColor="Gray" HorizontalOptions="Start"/>
                                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding CreatedAt, StringFormat='{0:h:mm tt}'}" FontSize="9" FontFamily="MontserratBlack" TextColor="Gray" HorizontalOptions="End"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Action buttons -->
                    <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                        <Label TextDecorations="Underline" TextColor="#1F4E79" HorizontalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding IsExpanded}" Value="False">
                                    <Setter Property="Text" Value="Expand"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Label" Binding="{Binding IsExpanded}" Value="True">
                                    <Setter Property="Text" Value="Collapse"/>
                                </DataTrigger>
                            </Label.Triggers>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleExpandCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Clear All" TextDecorations="Underline" TextColor="#D9534F" HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClearAllNotificationsCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
