<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.NotificationPopup"
    x:Name="NotificationPopupView"
    BackgroundColor="Transparent"
    IsVisible="{Binding IsNotificationVisible, FallbackValue=False}"
    InputTransparent="False">

    <!-- Full-screen transparent layer to allow outside tap to dismiss -->
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="False">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseNotificationCommand}" />
        </Grid.GestureRecognizers>

        <!-- Dropdown positioned below the bell (top-right) -->
        <Grid VerticalOptions="Start" HorizontalOptions="End" Margin="0,60,45,0" InputTransparent="False">
            <Frame Padding="12" BackgroundColor="#FFFFFF" CornerRadius="14" HasShadow="True" WidthRequest="250">
                <VerticalStackLayout Spacing="10">
                    <!-- Individual notification items (limited height ~3 items, scrollable) -->
                    <CollectionView ItemsSource="{Binding Notifications}"
                                    SelectionMode="None"
                                    ItemsLayout="VerticalList"
                                    HeightRequest="240"
                                    VerticalScrollBarVisibility="Always">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#E9E1D9" CornerRadius="15" Padding="12" HasShadow="False">
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                                        <Label Grid.Row="1" Text="{Binding Message}" FontSize="13" TextColor="Black"/>
                                        <Label Grid.Row="2" Text="{Binding Type}" FontSize="11" TextColor="Gray" HorizontalOptions="Start"/>
                                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding CreatedAt, StringFormat='{0:HH:mm}'}" FontSize="11" TextColor="Gray" HorizontalOptions="End"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Action buttons -->
                    <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                        <Label Text="View All" TextDecorations="Underline" TextColor="#1F4E79" HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CloseNotificationCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Clear All" TextDecorations="Underline" TextColor="#D9534F" HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClearAllNotificationsCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
