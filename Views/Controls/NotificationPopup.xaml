<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.NotificationPopup"
    x:Name="NotificationPopupView"
    BackgroundColor="Transparent"
    IsVisible="{Binding IsNotificationVisible, FallbackValue=False}"
    InputTransparent="False">

    <!-- Full-screen transparent layer to allow outside tap to dismiss -->
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="False">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseNotificationCommand}" />
        </Grid.GestureRecognizers>

        <!-- Dropdown positioned below the bell (top-right) -->
        <Grid VerticalOptions="Start" HorizontalOptions="End" Margin="0,60,20,0" InputTransparent="False">
            <Frame Padding="12" BackgroundColor="#FFFFFF" CornerRadius="14" HasShadow="True" WidthRequest="360">
                <VerticalStackLayout Spacing="10">
                    <!-- Individual notification items -->
                    <CollectionView ItemsSource="{Binding Notifications}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#E9E1D9" CornerRadius="15" Padding="12" HasShadow="False">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16"/>
                                        <Label Grid.Row="1" Text="{Binding Message}" FontSize="13"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- View All link -->
                    <Label Text="View All" TextDecorations="Underline" TextColor="#1F4E79" HorizontalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CloseNotificationCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
