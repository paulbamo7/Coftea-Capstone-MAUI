<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.PurchaseOrderApprovalPopup"
    x:Name="PurchaseOrderApprovalPopupView"
    BackgroundColor="#80000000"
    IsVisible="{Binding IsVisible}"
    InputTransparent="False">

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="False">
        <!-- Background overlay that closes on tap -->
        <BoxView BackgroundColor="#80000000" InputTransparent="False">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Main popup content -->
        <Frame Grid.Row="0" 
               BackgroundColor="White" 
               CornerRadius="20" 
               Padding="0" 
               WidthRequest="900" 
               HeightRequest="600"
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               HasShadow="True"
               InputTransparent="False">
            
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Grid Grid.Row="0" BackgroundColor="#7E6D5F" Padding="10">
                    <Label Text="ðŸ“¦ Purchase Orders" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                    <ImageButton Source="close_icon.png" 
                                 WidthRequest="30" 
                                 HeightRequest="30"
                                 HorizontalOptions="End" 
                                 VerticalOptions="Center"
                                 Command="{Binding CloseCommand}"
                                 BackgroundColor="Transparent"/>
                </Grid>

                <!-- Content -->
                <ScrollView Grid.Row="1" Padding="10">
                    <VerticalStackLayout Spacing="10">
                        <!-- Loading indicator -->
                        <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                         IsVisible="{Binding IsLoading}"
                                         Color="#D4A574"
                                         HeightRequest="50"/>

                        <!-- No orders message -->
                        <Label Text="No purchase orders found"
                               IsVisible="{Binding HasNoPendingOrders}"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               Margin="0,50,0,0"/>

                        <!-- Purchase Orders List -->
                        <CollectionView ItemsSource="{Binding PendingOrders}"
                                      IsVisible="{Binding HasPendingOrders}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#F5F5F5"
                                           CornerRadius="8"
                                           Padding="8"
                                           Margin="0,0,0,6"
                                           HasShadow="True">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="6">
                                            <!-- Order Header -->
                                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding PurchaseOrderId, StringFormat='Purchase Order #{0}'}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#5B4F45"/>
                                                <Label Grid.Column="1"
                                                       Text="{Binding Status}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#D4A574"
                                                       Padding="5,3"
                                                       BackgroundColor="#FFF8E1"
                                                       HorizontalOptions="End"/>
                                            </Grid>

                                            <!-- Order Info -->
                                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="10" RowDefinitions="Auto,Auto,Auto" RowSpacing="5">
                                                <Label Grid.Row="0" Grid.Column="0" Text="Requested by:" FontSize="12" TextColor="Gray"/>
                                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding RequestedBy}" FontSize="12" TextColor="#333" FontAttributes="Bold"/>
                                                
                                                <Label Grid.Row="1" Grid.Column="0" Text="Date:" FontSize="12" TextColor="Gray"/>
                                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding CreatedAt, StringFormat='{0:yyyy-MM-dd HH:mm}'}" FontSize="12" TextColor="#333"/>
                                                
                                                <Label Grid.Row="2" Grid.Column="0" Text="Total:" FontSize="12" TextColor="Gray"/>
                                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding TotalAmount, StringFormat='â‚±{0:F2}'}" FontSize="12" TextColor="#333" FontAttributes="Bold"/>
                                            </Grid>

                                            <!-- Expandable Items Section -->
                                            <Grid Grid.Row="2" RowDefinitions="Auto,*" RowSpacing="8">
                                                <!-- Items Preview Header (Clickable to expand) -->
                                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                                    <Label Grid.Column="0"
                                                           Text="ðŸ“‹ Items in this order"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="#5B4F45"
                                                           VerticalOptions="Center"/>
                                                    <Label Grid.Column="1"
                                                           x:Name="ExpandIcon"
                                                           Text="â–¼"
                                                           FontSize="16"
                                                           TextColor="#7E6D5F"
                                                           VerticalOptions="Center"
                                                           HorizontalOptions="End"/>
                                                </Grid>

                                                <!-- Expandable Items List -->
                                                <VerticalStackLayout Grid.Row="1" 
                                                                     x:Name="ItemsContainer"
                                                                     Spacing="4"
                                                                     IsVisible="True">
                                                    <CollectionView ItemsSource="{Binding EditableItems}">
                                                        <CollectionView.ItemTemplate>
                                                            <DataTemplate>
                                                                <Frame BackgroundColor="#edeff0"
                                                                       CornerRadius="6"
                                                                       Padding="6"
                                                                       Margin="0,0,0,4"
                                                                       BorderColor="#D0D0D0"
                                                                       HasShadow="False">
                                                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="4" ColumnSpacing="8">
                                                                        <!-- Item Name and Status -->
                                                                        <Label Grid.Row="0" Grid.Column="0"
                                                                               Text="{Binding ItemName}"
                                                                               FontSize="12"
                                                                               FontAttributes="Bold"
                                                                               TextColor="#333"/>
                                                                        
                                                                        <!-- Status Badge -->
                                                                        <Frame Grid.Row="0" Grid.Column="1"
                                                                               BackgroundColor="{Binding ItemStatus, Converter={StaticResource StatusColorConverter}}"
                                                                               CornerRadius="8"
                                                                               Padding="4,1"
                                                                               HorizontalOptions="End"
                                                                               HeightRequest="18">
                                                                            <Label Text="{Binding ItemStatus}"
                                                                                   FontSize="9"
                                                                                   TextColor="White"
                                                                                   FontAttributes="Bold"
                                                                                   VerticalOptions="Center"
                                                                                   HorizontalOptions="Center"/>
                                                                        </Frame>
                                                                            
                                                                        <!-- Unit Amount and Quantity Input -->
                                                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                                              ColumnDefinitions="Auto,*,Auto,Auto,*,Auto,*" 
                                                                              ColumnSpacing="4"
                                                                              VerticalOptions="Center"
                                                                              IsEnabled="{Binding IsPending}">
                                                                            <!-- Amount Label -->
                                                                            <Label Grid.Column="0"
                                                                                   Text="Amount:"
                                                                                   FontSize="10"
                                                                                   TextColor="#333"
                                                                                   Padding="0"
                                                                                   VerticalOptions="Center"/>
                                                                            <!-- Amount Entry -->
                                                                            <Entry Grid.Column="1"
                                                                                   Text="{Binding ApprovedQuantity, Mode=TwoWay}"
                                                                                   Keyboard="Numeric"
                                                                                   Placeholder="0"
                                                                                   PlaceholderColor="#8B7355"
                                                                                   BackgroundColor="Transparent"
                                                                                   TextColor="#5B4F45"
                                                                                   FontSize="14"
                                                                                   FontAttributes="Bold"
                                                                                   HorizontalTextAlignment="Center"
                                                                                   VerticalTextAlignment="Center"
                                                                                   Margin="0"
                                                                                   HeightRequest="35"
                                                                                   IsEnabled="{Binding IsPending}"/>
                                                                            <!-- UoM Label -->
                                                                            <Label Grid.Column="2"
                                                                                   Text="UoM:"
                                                                                   FontSize="10"
                                                                                   TextColor="#333"
                                                                                   Padding="0"
                                                                                   VerticalOptions="Center"
                                                                                   Margin="4,0,0,0"/>
                                                                            <!-- UoM Picker -->
                                                                            <Picker Grid.Column="3"
                                                                                    ItemsSource="{Binding AvailableUoMs}"
                                                                                    SelectedItem="{Binding ApprovedUoM}"
                                                                                    BackgroundColor="Transparent"
                                                                                    TextColor="#5B4F45"
                                                                                    FontSize="12"
                                                                                    FontAttributes="Bold"
                                                                                    HorizontalOptions="Center"
                                                                                    VerticalOptions="Center"
                                                                                    HeightRequest="35"
                                                                                    WidthRequest="50"
                                                                                    Title=""
                                                                                    IsEnabled="{Binding IsPending}">
                                                                            </Picker>
                                                                            <!-- Quantity Label -->
                                                                            <Label Grid.Column="4"
                                                                                   Text="Quantity:"
                                                                                   FontSize="10"
                                                                                   Padding="0"
                                                                                   TextColor="#333"
                                                                                   VerticalOptions="Center"
                                                                                   Margin="4,0,0,0"/>
                                                                            <!-- Quantity Entry with +/- buttons -->
                                                                            <Grid Grid.Column="5"
                                                                                  ColumnDefinitions="Auto,*,Auto"
                                                                                  VerticalOptions="Center"
                                                                                  HeightRequest="35">
                                                                                <Button Grid.Column="0"
                                                                                        Text="âˆ’"
                                                                                        BackgroundColor="Transparent"
                                                                                        TextColor="#5B4F45"
                                                                                        FontSize="16"
                                                                                        FontAttributes="Bold"
                                                                                        Padding="0"
                                                                                        WidthRequest="22"
                                                                                        HeightRequest="35"
                                                                                        Command="{Binding BindingContext.DecreaseItemQuantityCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                                                        CommandParameter="{Binding .}"
                                                                                        IsEnabled="{Binding IsPending}"/>
                                                                                <Entry Grid.Column="1"
                                                                                       Text="{Binding Quantity, Mode=TwoWay}"
                                                                                       Keyboard="Numeric"
                                                                                       Placeholder="1"
                                                                                       PlaceholderColor="#8B7355"
                                                                                       BackgroundColor="Transparent"
                                                                                       TextColor="#5B4F45"
                                                                                       FontSize="12"
                                                                                       FontAttributes="Bold"
                                                                                       HorizontalTextAlignment="Center"
                                                                                       VerticalTextAlignment="Center"
                                                                                       HeightRequest="35"
                                                                                       Margin="6,0,6,0"
                                                                                       IsEnabled="{Binding IsPending}"/>
                                                                                <Button Grid.Column="2"
                                                                                        Text="+"
                                                                                        BackgroundColor="Transparent"
                                                                                        TextColor="#5B4F45"
                                                                                        FontSize="16"
                                                                                        FontAttributes="Bold"
                                                                                        Padding="0"
                                                                                        WidthRequest="22"
                                                                                        HeightRequest="35"
                                                                                        Command="{Binding BindingContext.IncreaseItemQuantityCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                                                        CommandParameter="{Binding .}"
                                                                                        IsEnabled="{Binding IsPending}"/>
                                                                            </Grid>
                                                                            <!-- Total Display -->
                                                                            <Label Grid.Column="6"
                                                                                   FontSize="10"
                                                                                   FontAttributes="Bold"
                                                                                   TextColor="#5B4F45"
                                                                                   VerticalOptions="Center"
                                                                                   Margin="4,0,0,0">
                                                                                <Label.FormattedText>
                                                                                    <FormattedString>
                                                                                        <Span Text="Total: " FontAttributes="None" TextColor="#333"/>
                                                                                        <Span Text="{Binding TotalAmount, StringFormat='{0:F1}'}" TextColor="#5B4F45" FontAttributes="Bold"/>
                                                                                        <Span Text=" " FontAttributes="None"/>
                                                                                        <Span Text="{Binding ApprovedUoM}" TextColor="#5B4F45"/>
                                                                                    </FormattedString>
                                                                                </Label.FormattedText>
                                                                            </Label>
                                                                        </Grid>

                                                                        <!-- Original UoM Display and Retract Button -->
                                                                        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                                              ColumnDefinitions="*,*,Auto"
                                                                              ColumnSpacing="10">
                                                                            <Label Grid.Column="0"
                                                                                   FontSize="9"
                                                                                   TextColor="#333"
                                                                                   VerticalOptions="Center">
                                                                                <Label.FormattedText>
                                                                                    <FormattedString>
                                                                                        <Span Text="Requested: " FontAttributes="None" TextColor="#666"/>
                                                                                        <Span Text="{Binding RequestedQuantity}" FontAttributes="Bold" TextColor="#333"/>
                                                                                        <Span Text=" " FontAttributes="None"/>
                                                                                        <Span Text="{Binding OriginalUoM}" FontAttributes="Bold" TextColor="#333"/>
                                                                                    </FormattedString>
                                                                                </Label.FormattedText>
                                                                            </Label>
                                                                            <Label Grid.Column="1"
                                                                                   FontSize="9"
                                                                                   TextColor="#333"
                                                                                   VerticalOptions="Center">
                                                                                <Label.FormattedText>
                                                                                    <FormattedString>
                                                                                        <Span Text="Approved: " FontAttributes="None" TextColor="#666"/>
                                                                                        <Span Text="{Binding ApprovedQuantity}" FontAttributes="Bold" TextColor="#333"/>
                                                                                        <Span Text=" " FontAttributes="None"/>
                                                                                        <Span Text="{Binding ApprovedUoM}" FontAttributes="Bold" TextColor="#333"/>
                                                                                    </FormattedString>
                                                                                </Label.FormattedText>
                                                                            </Label>
                                                                            <!-- Retract Button (for accepted items) -->
                                                                            <Button Grid.Column="2"
                                                                                    Text="RETRACT"
                                                                                    Padding="4,2"
                                                                                    BackgroundColor="#FF9800"
                                                                                    TextColor="White"
                                                                                    CornerRadius="6"
                                                                                    HeightRequest="26"
                                                                                    WidthRequest="75"
                                                                                    FontSize="9"
                                                                                    FontAttributes="Bold"
                                                                                    Command="{Binding BindingContext.RetractItemCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                                                    CommandParameter="{Binding .}"
                                                                                    IsVisible="{Binding IsAccepted}"/>
                                                                        </Grid>
                                                                    </Grid>
                                                                </Frame>
                                                            </DataTemplate>
                                                        </CollectionView.ItemTemplate>
                                                    </CollectionView>
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Action Buttons -->
                                            <Grid Grid.Row="3" ColumnDefinitions="*,*,Auto" ColumnSpacing="8" Margin="0,8,0,0">
                                                <Button Grid.Column="0"
                                                        Text="ACCEPT ALL"
                                                        BackgroundColor="#4CAF50"
                                                        TextColor="White"
                                                        FontSize="12"
                                                        FontAttributes="Bold"
                                                        CornerRadius="8"
                                                        HeightRequest="38"
                                                        Command="{Binding BindingContext.AcceptAllItemsCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                        CommandParameter="{Binding .}">
                                                    <Button.Triggers>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Approved">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Rejected">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                    </Button.Triggers>
                                                </Button>
                                                <Button Grid.Column="1"
                                                        Text="REJECT ALL"
                                                        BackgroundColor="#F44336"
                                                        TextColor="White"
                                                        FontSize="12"
                                                        FontAttributes="Bold"
                                                        CornerRadius="8"
                                                        HeightRequest="38"
                                                        Command="{Binding BindingContext.RejectOrderCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                        CommandParameter="{Binding .}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="IsEnabled" Value="True" />
                                                            <Setter Property="IsVisible" Value="True" />
                                                            <Style.Triggers>
                                                                <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Approved">
                                                                    <Setter Property="IsVisible" Value="False" />
                                                                </DataTrigger>
                                                                <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Rejected">
                                                                    <Setter Property="IsVisible" Value="False" />
                                                                </DataTrigger>
                                                                <!-- Disable if any items are accepted -->
                                                                <DataTrigger TargetType="Button" Binding="{Binding HasAcceptedItems}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="False" />
                                                                    <Setter Property="BackgroundColor" Value="#CCCCCC" />
                                                                    <Setter Property="TextColor" Value="#666666" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Grid.Column="2"
                                                        Text="ðŸ“„ PDF"
                                                        BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                        FontSize="12"
                                                        FontAttributes="Bold"
                                                        CornerRadius="8"
                                                        HeightRequest="38"
                                                        WidthRequest="90"
                                                        Command="{Binding BindingContext.ExportPurchaseOrderPDFCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                        CommandParameter="{Binding .}"/>
                                            </Grid>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Footer -->
                <Grid Grid.Row="2" BackgroundColor="#F5F5F5" Padding="10" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                    <!-- Close Button -->
                    <Button Grid.Column="0"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Text="CLOSE" 
                            BackgroundColor="#BDAEA2"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            WidthRequest="150"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Command="{Binding CloseCommand}"/>
                    
                    <!-- Pagination Controls - Bottom Right -->
                    <HorizontalStackLayout Grid.Column="1"
                                           Grid.Row="1"
                                           IsVisible="{Binding BindingContext.HasPendingOrders, Source={x:Reference PurchaseOrderApprovalPopupView}}" 
                                           Spacing="10"
                                           HorizontalOptions="End"
                                           VerticalOptions="Center">
                        <Button Text="â—€ Previous"
                                BackgroundColor="#BDAEA2"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="38"
                                WidthRequest="100"
                                Padding="8,0"
                                Command="{Binding BindingContext.PreviousPageCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                IsEnabled="{Binding BindingContext.HasPreviousPage, Source={x:Reference PurchaseOrderApprovalPopupView}}"/>
                        <Label Text="{Binding BindingContext.PageInfo, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#5B4F45"
                               VerticalOptions="Center"
                               VerticalTextAlignment="Center"
                               Margin="0"/>
                        <Button Text="Next â–¶"
                                BackgroundColor="#BDAEA2"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="38"
                                WidthRequest="100"
                                Padding="8,0"
                                Command="{Binding BindingContext.NextPageCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                IsEnabled="{Binding BindingContext.HasNextPage, Source={x:Reference PurchaseOrderApprovalPopupView}}"/>
                    </HorizontalStackLayout>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentView>

