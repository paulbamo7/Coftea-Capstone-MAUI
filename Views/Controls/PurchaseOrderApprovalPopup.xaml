<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.PurchaseOrderApprovalPopup"
    x:Name="PurchaseOrderApprovalPopupView"
    BackgroundColor="#80000000"
    IsVisible="{Binding IsVisible}"
    InputTransparent="False">

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="False">
        <!-- Background overlay that closes on tap -->
        <BoxView BackgroundColor="#80000000" InputTransparent="False">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Main popup content -->
        <Frame Grid.Row="0" 
               BackgroundColor="White" 
               CornerRadius="20" 
               Padding="0" 
               WidthRequest="900" 
               HeightRequest="600"
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               HasShadow="True"
               InputTransparent="False">
            
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Grid Grid.Row="0" BackgroundColor="#7E6D5F" Padding="10">
                    <Label Text="📦 Purchase Orders" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                    <ImageButton Source="close_icon.png" 
                                 WidthRequest="30" 
                                 HeightRequest="30"
                                 HorizontalOptions="End" 
                                 VerticalOptions="Center"
                                 Command="{Binding CloseCommand}"
                                 BackgroundColor="Transparent"/>
                </Grid>

                <!-- Content -->
                <ScrollView Grid.Row="1" Padding="10">
                    <VerticalStackLayout Spacing="10">
                        <!-- Loading indicator -->
                        <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                         IsVisible="{Binding IsLoading}"
                                         Color="#D4A574"
                                         HeightRequest="50"/>

                        <!-- No orders message -->
                        <Label Text="No purchase orders found"
                               IsVisible="{Binding HasNoPendingOrders}"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               Margin="0,50,0,0"/>

                        <!-- Purchase Orders List -->
                        <CollectionView ItemsSource="{Binding PendingOrders}"
                                      IsVisible="{Binding HasPendingOrders}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#F5F5F5"
                                           CornerRadius="10"
                                           Padding="10"
                                           Margin="0,0,0,10"
                                           HasShadow="True">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                                            <!-- Order Header -->
                                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding PurchaseOrderId, StringFormat='Purchase Order #{0}'}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#5B4F45"/>
                                                <Label Grid.Column="1"
                                                       Text="{Binding Status}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#D4A574"
                                                       Padding="5,3"
                                                       BackgroundColor="#FFF8E1"
                                                       HorizontalOptions="End"/>
                                            </Grid>

                                            <!-- Order Info -->
                                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="10" RowDefinitions="Auto,Auto,Auto" RowSpacing="5">
                                                <Label Grid.Row="0" Grid.Column="0" Text="arp by:" FontSize="12" TextColor="Gray"/>
                                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding RequestedBy}" FontSize="12" TextColor="#333" FontAttributes="Bold"/>
                                                
                                                <Label Grid.Row="1" Grid.Column="0" Text="Date:" FontSize="12" TextColor="Gray"/>
                                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding CreatedAt, StringFormat='{0:yyyy-MM-dd HH:mm}'}" FontSize="12" TextColor="#333"/>
                                                
                                                <Label Grid.Row="2" Grid.Column="0" Text="Total:" FontSize="12" TextColor="Gray"/>
                                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding TotalAmount, StringFormat='₱{0:F2}'}" FontSize="12" TextColor="#333" FontAttributes="Bold"/>
                                            </Grid>

                                            <!-- Expandable Items Section -->
                                            <Grid Grid.Row="2" RowDefinitions="Auto,*" RowSpacing="8">
                                                <!-- Items Preview Header (Clickable to expand) -->
                                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                                    <Label Grid.Column="0"
                                                           Text="📋 Items in this order"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="#5B4F45"
                                                           VerticalOptions="Center"/>
                                                    <Label Grid.Column="1"
                                                           x:Name="ExpandIcon"
                                                           Text="▼"
                                                           FontSize="16"
                                                           TextColor="#7E6D5F"
                                                           VerticalOptions="Center"
                                                           HorizontalOptions="End"/>
                                                </Grid>

                                                <!-- Expandable Items List -->
                                                <VerticalStackLayout Grid.Row="1" 
                                                                     x:Name="ItemsContainer"
                                                                     Spacing="8"
                                                                     IsVisible="True">
                                                    <CollectionView ItemsSource="{Binding EditableItems}">
                                                        <CollectionView.ItemTemplate>
                                                            <DataTemplate>
                                                                <Frame BackgroundColor="White"
                                                                       CornerRadius="8"
                                                                       Padding="8"
                                                                       Margin="0,0,0,8"
                                                                       BorderColor="#E0E0E0"
                                                                       HasShadow="False">
                                                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                                                                        <!-- Item Name and Status -->
                                                                        <Label Grid.Row="0" Grid.Column="0"
                                                                               Text="{Binding ItemName}"
                                                                               FontSize="14"
                                                                               FontAttributes="Bold"
                                                                               TextColor="#333"/>
                                                                        
                                                                        <!-- Status Badge -->
                                                                        <Frame Grid.Row="0" Grid.Column="1"
                                                                               BackgroundColor="{Binding ItemStatus, Converter={StaticResource StatusColorConverter}}"
                                                                               CornerRadius="12"
                                                                               Padding="5,2"
                                                                               HorizontalOptions="End"
                                                                               HeightRequest="20">
                                                                            <Label Text="{Binding ItemStatus}"
                                                                                   FontSize="10"
                                                                                   TextColor="White"
                                                                                   FontAttributes="Bold"
                                                                                   VerticalOptions="Center"
                                                                                   HorizontalOptions="Center"/>
                                                                        </Frame>
                                                                        
                                                                        <!-- Requested Info -->
                                                                        <Label Grid.Row="1" Grid.Column="0"
                                                                               Text="{Binding RequestedQuantity, StringFormat='Requested: {0}'}"
                                                                               FontSize="11"
                                                                               TextColor="#999"/>
                                                                        
                                                                        <!-- Quantity Input -->
                                                                        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                                              ColumnDefinitions="Auto,*,Auto,*" 
                                                                              ColumnSpacing="8"
                                                                              VerticalOptions="Center"
                                                                              IsEnabled="{Binding IsPending}">
                                                                            <Label Grid.Column="0"
                                                                                   Text="Approved Amount:"
                                                                                   FontSize="12"
                                                                                   TextColor="#666"
                                                                                   Padding="0"
                                                                                   VerticalOptions="Center"/>
                                                                            <Entry Grid.Column="1"
                                                                                   Text="{Binding ApprovedQuantity, Mode=TwoWay}"
                                                                                   Keyboard="Numeric"
                                                                                   Placeholder="0"
                                                                                   BackgroundColor="#F8F8F8"
                                                                                   TextColor="#333"
                                                                                   FontSize="14"
                                                                                   HeightRequest="35"
                                                                                   IsEnabled="{Binding IsPending}"/>
                                                                            <Label Grid.Column="2"
                                                                                   Text="UoM:"
                                                                                   FontSize="12"
                                                                                   Padding="0"
                                                                                   TextColor="#666"
                                                                                   VerticalOptions="Center"
                                                                                   Margin="8,0,0,0"/>
                                                                            <Picker Grid.Column="3"
                                                                                    ItemsSource="{Binding AvailableUoMs}"
                                                                                    SelectedItem="{Binding ApprovedUoM}"
                                                                                    BackgroundColor="#F8F8F8"
                                                                                    TextColor="#333"
                                                                                    FontSize="14"
                                                                                    HeightRequest="35"
                                                                                    Title="Select UoM"
                                                                                    IsEnabled="{Binding IsPending}"/>
                                                                        </Grid>

                                                                        <!-- Original UoM Display and Action Buttons -->
                                                                        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                                              ColumnDefinitions="*,Auto,Auto"
                                                                              ColumnSpacing="8">
                                                                            <Label Grid.Column="0"
                                                                                   FontSize="11"
                                                                                   TextColor="#999"
                                                                                   VerticalOptions="Center">
                                                                                <Label.FormattedText>
                                                                                    <FormattedString>
                                                                                        <Span Text="Original: " FontAttributes="None"/>
                                                                                        <Span Text="{Binding RequestedQuantity}"/>
                                                                                        <Span Text=" " FontAttributes="None"/>
                                                                                        <Span Text="{Binding OriginalUoM}"/>
                                                                                    </FormattedString>
                                                                                </Label.FormattedText>
                                                                            </Label>
                                                                            
                                                                            <!-- Accept Button -->
                                                                            <Button Grid.Column="1"
                                                                                    Text="✅ Accept"
                                                                                    BackgroundColor="#4CAF50"
                                                                                    TextColor="White"
                                                                                    CornerRadius="8"
                                                                                    HeightRequest="35"
                                                                                    WidthRequest="90"
                                                                                    FontSize="12"
                                                                                    Command="{Binding BindingContext.AcceptItemCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                                                    CommandParameter="{Binding .}"
                                                                                    IsVisible="{Binding IsPending}"/>
                                                                            
                                                                            <!-- Cancel Button -->
                                                                            <Button Grid.Column="2"
                                                                                    Text="❌ Cancel"
                                                                                    BackgroundColor="#F44336"
                                                                                    TextColor="White"
                                                                                    CornerRadius="8"
                                                                                    HeightRequest="35"
                                                                                    WidthRequest="90"
                                                                                    FontSize="12"
                                                                                    Command="{Binding BindingContext.CancelItemCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                                                    CommandParameter="{Binding .}"
                                                                                    IsVisible="{Binding IsPending}"/>
                                                                        </Grid>
                                                                    </Grid>
                                                                </Frame>
                                                            </DataTemplate>
                                                        </CollectionView.ItemTemplate>
                                                    </CollectionView>
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Action Buttons -->
                                            <Grid Grid.Row="3" ColumnDefinitions="*,*,Auto" ColumnSpacing="10" Margin="0,15,0,0">
                                                <Button Grid.Column="0"
                                                        Text="✅ Approve"
                                                        BackgroundColor="#4CAF50"
                                                        TextColor="White"
                                                        CornerRadius="10"
                                                        HeightRequest="40"
                                                        Command="{Binding BindingContext.ApproveOrderCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                        CommandParameter="{Binding .}">
                                                    <Button.Triggers>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Approved">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Rejected">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                    </Button.Triggers>
                                                </Button>
                                                <Button Grid.Column="1"
                                                        Text="❌ Reject"
                                                        BackgroundColor="#F44336"
                                                        TextColor="White"
                                                        CornerRadius="10"
                                                        HeightRequest="40"
                                                        Command="{Binding BindingContext.RejectOrderCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                        CommandParameter="{Binding .}">
                                                    <Button.Triggers>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Approved">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Rejected">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                    </Button.Triggers>
                                                </Button>
                                                <Button Grid.Column="2"
                                                        Text="📄 PDF"
                                                        BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                        CornerRadius="10"
                                                        HeightRequest="40"
                                                        WidthRequest="80"
                                                        Command="{Binding BindingContext.ExportPurchaseOrderPDFCommand, Source={x:Reference PurchaseOrderApprovalPopupView}}"
                                                        CommandParameter="{Binding .}"/>
                                            </Grid>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Footer -->
                <Grid Grid.Row="2" BackgroundColor="#F5F5F5" Padding="10">
                    <Button Text="CLOSE" 
                            BackgroundColor="#BDAEA2"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            WidthRequest="150"
                            HorizontalOptions="Center"
                            Command="{Binding CloseCommand}"/>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentView>

