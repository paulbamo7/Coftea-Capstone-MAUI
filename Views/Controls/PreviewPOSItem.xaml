<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Coftea_Capstone.Views.Controls"
             x:Class="Coftea_Capstone.Views.Controls.PreviewPOSItem"
             x:Name="Root"
             BackgroundColor="#80000000"
             IsVisible="{Binding IsPreviewVisible}"
             ZIndex="1500">

    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Frame Style="{StaticResource CenteredPopupFrame}" 
               WidthRequest="600" 
               HeightRequest="500" 
               MaximumWidthRequest="700" 
               MaximumHeightRequest="600">
            <ScrollView>
                <VerticalStackLayout Spacing="10">
                    <!-- Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Preview Product" FontAttributes="Bold" FontSize="20" Grid.Column="0" TextColor="Black"/>
                        <ImageButton Source="close.png"
                                 WidthRequest="25" HeightRequest="25"
                                 Grid.Column="1"
                                 Command="{Binding ClosePreviewCommand}"/>
                    </Grid>

                    <!-- Product Image (frame removed as requested) -->
                    <Image Source="{Binding SelectedImageSource}" Aspect="AspectFit" HeightRequest="100"/>


                    <!-- Product Info -->
                    <Label Text="{Binding ProductName}" FontAttributes="Bold" FontSize="18" TextColor="Black" />
                    <Label Text="Add-ons Used" FontAttributes="Bold" TextColor="Black"/>
                    <!-- Show only selected addons: Name - ₱Price (no quantity controls in preview) -->
                    <CollectionView ItemsSource="{Binding SelectedAddons}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*" Padding="6" Margin="0,4">
                                    <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                                        <Label Text="•" FontSize="12" VerticalOptions="Center" TextColor="Black"/>
                                        <Label Text="{Binding itemName}" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                        <Label Text="-" FontSize="14" TextColor="Black"/>
                                        <Label Text="{Binding AddonPrice, StringFormat='₱{0:F0}'}" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <HorizontalStackLayout Spacing="12">

                        <Label Text="Category:" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="{Binding SelectedCategory}" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="20">
                        <Label Text="Prices:" FontAttributes="Bold"/>
                        <VerticalStackLayout IsVisible="{Binding IsSmallPriceVisible}">
                            <Label Text="Small Price" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding SmallPrice, StringFormat='₱{0:F2}'}" FontSize="18" TextColor="Black"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout IsVisible="{Binding IsMediumPriceVisible}">
                            <Label Text="Medium Price" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding MediumPrice, StringFormat='₱{0:F2}'}" FontSize="18" TextColor="Black"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout IsVisible="{Binding IsLargePriceVisible}">
                            <Label Text="Large Price" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding LargePrice, StringFormat='₱{0:F2}'}" FontSize="18" TextColor="Black"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Label Text="Description" FontAttributes="Bold" TextColor="Black"/>
                    <ScrollView HeightRequest="60">
                        <Label Text="{Binding ProductDescription}" FontSize="14" TextColor="Black"/>
                    </ScrollView>
                    <!-- Inline Addons section removed; selection will be via popup -->

                    <!-- Buttons -->
                    <HorizontalStackLayout HorizontalOptions="End" Spacing="20">
                        <Button Text="Close" BackgroundColor="#D3D3D3" TextColor="Black"
                            Command="{Binding ClosePreviewCommand}"/>
                        <!-- Single working Add Addons button -->
                        <Button Text="Add Addons" BackgroundColor="#D3D3D3" TextColor="Black"
                                Command="{Binding OpenAddonPopupCommand}"/>
                        <Button Text="Confirm" BackgroundColor="#E6DE9D" TextColor="Black"
                            Command="{Binding ConfirmPreviewCommand}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentView>
