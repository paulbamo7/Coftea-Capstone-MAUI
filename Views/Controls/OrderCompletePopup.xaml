<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.OrderCompletePopup"
    x:Name="OrderCompletePopupView"
    IsVisible="{Binding IsVisible, FallbackValue=False, TargetNullValue=False}"
    Opacity="{Binding Opacity}"
    InputTransparent="True"
    VerticalOptions="End"
    HorizontalOptions="End"
    Margin="20">

    <Frame BackgroundColor="#4CAF50"
           CornerRadius="12"
           Padding="14"
           HasShadow="True"
           WidthRequest="240"
           HeightRequest="110"
           VerticalOptions="End"
           HorizontalOptions="End">
        <VerticalStackLayout Spacing="6" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="âœ“ Order Complete!"
                   FontSize="18" FontFamily="MontserratBlack"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
            <Label Text="Thanks For The Purchase"
                   FontSize="14" FontFamily="MontserratBlack"
                   TextColor="White"
                   HorizontalOptions="Center" />
            <Label Text="{Binding OrderDetails, StringFormat='Order ID: {0}'}"
                   FontSize="12" FontFamily="MontserratBlack"
                   TextColor="White"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Frame>
</ContentView>


