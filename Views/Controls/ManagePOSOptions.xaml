<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:otherViews="clr-namespace:Coftea_Capstone.Views.Controls"
    x:Class="Coftea_Capstone.Views.Controls.ManagePOSOptions"
    BackgroundColor="#80000000"
    x:Name="PopupRoot"
    IsVisible="{Binding IsPOSManagementPopupVisible}"
    InputTransparent="False">

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="False">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding ClosePOSManagementPopupCommand}" />
        </Grid.GestureRecognizers>

        <!-- Popup Frame -->
        <Frame VerticalOptions="Center"
               HorizontalOptions="Center"
               Padding="30"
               BackgroundColor="#FFF9F4"
               CornerRadius="28"
               WidthRequest="450"
               HeightRequest="350"
               HasShadow="True"
               InputTransparent="False">

            <VerticalStackLayout Spacing="30">

                <!-- Title -->
                <Label Text="Manage POS Menu"
                       FontSize="24" FontFamily="MontserratBlack"
                       FontAttributes="Bold"
                       TextColor="#4A3F35"
                       HorizontalOptions="Center" />

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

                    <Button Text="Add Menu"
                            WidthRequest="220"
                            HeightRequest="55"
                            FontSize="16" FontFamily="MontserratBlack"
                            Command="{Binding AddItemCommand}"
                            BackgroundColor="#A57C5C"
                            TextColor="White"
                            CornerRadius="25"
                            />

                    <Button Text="Edit Menu"
                            WidthRequest="220"
                            HeightRequest="55"
                            FontSize="16" FontFamily="MontserratBlack"
                            Command="{Binding EditItemCommand}"
                            BackgroundColor="#A57C5C"
                            TextColor="White"
                            CornerRadius="25"
                            />

                </VerticalStackLayout>

                <!-- Close Button -->
                <Button Text="Close"
                        WidthRequest="120"
                        HeightRequest="45"
                        FontSize="16" FontFamily="MontserratBlack"
                        BackgroundColor="#A57C5C"
                        TextColor="White"
                        CornerRadius="22"
                        HorizontalOptions="Center"
              
                        Command="{Binding ClosePOSManagementPopupCommand}" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentView>
