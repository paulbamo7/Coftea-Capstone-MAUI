<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Controls.ProcessingQueuePopup"
             x:Name="Root"
             IsVisible="{Binding IsVisible}"
             BackgroundColor="#80000000">
    <Grid RowDefinitions="Auto,*" Padding="20" HorizontalOptions="Fill" VerticalOptions="Fill">
        <Frame Grid.Row="0" BackgroundColor="White" CornerRadius="16" Padding="16" HasShadow="True">
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label Text="To Prepare" FontAttributes="Bold" FontSize="20" TextColor="#2B2B2B"/>
                <Button Grid.Column="1" Text="âœ•" BackgroundColor="#E0E0E0" TextColor="#333" Command="{Binding CloseCommand}"/>
            </Grid>
        </Frame>
        <Frame Grid.Row="1" BackgroundColor="White" CornerRadius="16" Padding="16" HasShadow="True">
            <CollectionView ItemsSource="{Binding PendingItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" Padding="8" Margin="0,4">
                            <StackLayout Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="10">
                                <Label Text="{Binding ProductName}" FontAttributes="Bold" FontSize="16" TextColor="#2B2B2B"/>
                                <Label Text="{Binding Size}" FontSize="14" TextColor="#666"/>
                                <Label Text="x{Binding Quantity}" FontSize="14" TextColor="#666"/>
                            </StackLayout>
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding AddOnsDisplay}" FontSize="12" TextColor="#666"/>
                            <Button Grid.Row="1" Grid.Column="1" Text="Completed" BackgroundColor="#5B4F45" TextColor="White"
                                    Command="{Binding BindingContext.CompleteItemCommand, Source={x:Reference Root}}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>
    </Grid>
</ContentView>


