<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Coftea_Capstone.ViewModel.Others"
             x:Class="Coftea_Capstone.Views.Controls.ProcessingQueuePopup"
             x:Name="Root"
             IsVisible="{Binding IsVisible}"
             BackgroundColor="#80000000">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:IsPositiveConverter x:Key="IsPositiveConverter"/>
            <converters:IndexOfInCollectionMultiConverter x:Key="IndexOfConverter" />
            <converters:SelectedCountToHeightConverter x:Key="SelectedCountToHeightConverter" />
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid HorizontalOptions="Center" VerticalOptions="Center" Padding="30">
        <Frame BackgroundColor="White" CornerRadius="24" Padding="0" HasShadow="True"
               WidthRequest="750" MaximumHeightRequest="800"
               HorizontalOptions="Center" VerticalOptions="Center">
            <Grid RowDefinitions="Auto,*" RowSpacing="0">
                <!-- Header -->
                <Grid Grid.Row="0" BackgroundColor="#5B4F45" Padding="20,15" ColumnDefinitions="*,Auto,Auto">
                    <Label Text="ðŸ“‹ To Prepare" FontAttributes="Bold" FontSize="18" TextColor="White" VerticalOptions="Center"/>
                    <Button Grid.Column="1" Text="âœ“ Accept All" FontSize="14" FontAttributes="Bold" BackgroundColor="#66BB6A" TextColor="White" 
                            CornerRadius="15" Padding="15,8" Margin="0,0,10,0"
                            Command="{Binding AcceptAllCommand}" HeightRequest="35"/>
                    <Button Grid.Column="2" Text="âœ•" FontSize="18" BackgroundColor="Transparent" TextColor="White" 
                            Command="{Binding CloseCommand}" WidthRequest="35" HeightRequest="35" Padding="0"/>
                </Grid>
                
                <!-- Orders List -->
                <ScrollView Grid.Row="1" 
                            Orientation="Vertical"
                            MaximumHeightRequest="700">
                    <CollectionView ItemsSource="{Binding PendingOrders}"
                                    RemainingItemsThreshold="5"
                                    SelectionMode="None"
                                    ItemSizingStrategy="MeasureAllItems">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White"
                                       HasShadow="True"
                                       Padding="0"
                                       Margin="12,0"
                                       BorderColor="#E0E0E0"
                                       CornerRadius="12">
                                    <Grid RowDefinitions="Auto,*" RowSpacing="0">
                                        <!-- Order Header -->
                                        <Grid Grid.Row="0" 
                                              BackgroundColor="#5B4F45" 
                                              Padding="18,12" 
                                              ColumnDefinitions="Auto,*,Auto,Auto"
                                              ColumnSpacing="12">
                                            <!-- Order Number Badge -->
                                            <Frame Grid.Column="0"
                                                   BackgroundColor="#D4A574"
                                                   CornerRadius="20"
                                                   Padding="12,8"
                                                   HasShadow="False"
                                                   WidthRequest="48"
                                                   HeightRequest="48">
                                                <Label VerticalOptions="Center"
                                                       HorizontalOptions="Center"
                                                       TextColor="White"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       FontFamily="MontserratBlack">
                                                    <Label.Text>
                                                        <MultiBinding Converter="{StaticResource IndexOfConverter}">
                                                            <Binding Path="BindingContext.PendingOrders" Source="{x:Reference Root}" />
                                                            <Binding />
                                                        </MultiBinding>
                                                    </Label.Text>
                                                </Label>
                                            </Frame>
                                            
                                            <!-- Product Name -->
                                            <VerticalStackLayout Grid.Column="1" 
                                                                 Spacing="4"
                                                                 VerticalOptions="Center">
                                                <Label Text="{Binding ProductName}"
                                                       FontAttributes="Bold"
                                                       FontSize="17"
                                                       FontFamily="MontserratBlack"
                                                       TextColor="White"
                                                       VerticalOptions="Center"/>
                                                <Label Text="{Binding TotalQuantity, StringFormat='Total Quantity: {0}'}"
                                                       FontSize="13"
                                                       FontFamily="OpenSansSemibold"
                                                       TextColor="#E0E0E0"
                                                       VerticalOptions="Center"/>
                                            </VerticalStackLayout>
                                            
                                            <!-- Complete Order Button -->
                                            <Button Grid.Column="2"
                                                    Text="âœ“ Complete"
                                                    FontSize="13"
                                                    FontAttributes="Bold"
                                                    FontFamily="MontserratBlack"
                                                    BackgroundColor="#66BB6A"
                                                    TextColor="White"
                                                    CornerRadius="20"
                                                    Padding="16,10"
                                                    HeightRequest="42"
                                                    Command="{Binding BindingContext.CompleteOrderCommand, Source={x:Reference Root}}"
                                                    CommandParameter="{Binding .}"/>
                                            
                                            <!-- Close/Remove Button (if needed) -->
                                        </Grid>
                                        
                                        <!-- Order Items -->
                                        <VerticalStackLayout Grid.Row="1" 
                                                             Padding="18,12" 
                                                             Spacing="10"
                                                             BindableLayout.ItemsSource="{Binding Items}">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate>
                                                    <Frame BackgroundColor="#F8F8F8"
                                                           CornerRadius="10"
                                                           Padding="14"
                                                           HasShadow="False"
                                                           BorderColor="#E0E0E0"
                                                           Margin="0,0,0,8">
                                                        <Grid RowDefinitions="Auto,Auto,Auto"
                                                              ColumnDefinitions="*,Auto"
                                                              RowSpacing="10">
                                                            <!-- Size and Quantity Row -->
                                                            <Grid Grid.Row="0" 
                                                                  ColumnDefinitions="Auto,*,Auto"
                                                                  ColumnSpacing="12">
                                                                <Frame Grid.Column="0"
                                                                       BackgroundColor="#D4A574"
                                                                       CornerRadius="8"
                                                                       Padding="10,6"
                                                                       HasShadow="False">
                                                                    <Label Text="{Binding Size}"
                                                                           FontAttributes="Bold"
                                                                           FontSize="14"
                                                                           FontFamily="MontserratBlack"
                                                                           TextColor="White"/>
                                                                </Frame>
                                                                <Label Grid.Column="1"
                                                                       Text="{Binding Quantity, StringFormat='Quantity: {0}'}"
                                                                       FontSize="14"
                                                                       FontAttributes="Bold"
                                                                       FontFamily="OpenSansSemibold"
                                                                       TextColor="#5B4F45"
                                                                       VerticalOptions="Center"/>
                                                                <Button Grid.Column="2"
                                                                        Text="âœ“ Done"
                                                                        FontSize="12"
                                                                        FontAttributes="Bold"
                                                                        FontFamily="MontserratBlack"
                                                                        BackgroundColor="#66BB6A"
                                                                        TextColor="White"
                                                                        CornerRadius="16"
                                                                        Padding="14,8"
                                                                        HeightRequest="36"
                                                                        Command="{Binding BindingContext.CompleteItemCommand, Source={x:Reference Root}}"
                                                                        CommandParameter="{Binding .}"/>
                                                            </Grid>
                                                            
                                                            <!-- Ingredients -->
                                                            <VerticalStackLayout Grid.Row="1"
                                                                                 Grid.ColumnSpan="2"
                                                                                 Spacing="6"
                                                                                 IsVisible="{Binding Ingredients.Count, Converter={StaticResource IsPositiveConverter}}">
                                                                <Label Text="ðŸ§ª Ingredients:"
                                                                       FontAttributes="Bold"
                                                                       FontSize="13"
                                                                       FontFamily="MontserratBlack"
                                                                       TextColor="#5B4F45"/>
                                                                <Frame BackgroundColor="White"
                                                                       CornerRadius="8"
                                                                       Padding="12,8"
                                                                       HasShadow="False"
                                                                       BorderColor="#E0E0E0">
                                                                    <VerticalStackLayout Spacing="4">
                                                                        <CollectionView ItemsSource="{Binding Ingredients}"
                                                                                        SelectionMode="None">
                                                                            <CollectionView.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Label FontSize="12"
                                                                                           FontFamily="OpenSansSemibold"
                                                                                           TextColor="#444"
                                                                                           Margin="0,2"
                                                                                           Padding="8,4">
                                                                                        <Label.Text>
                                                                                            <MultiBinding StringFormat="â€¢ {0}: {1} {2}">
                                                                                                <Binding Path="IngredientName"/>
                                                                                                <Binding Path="Amount"/>
                                                                                                <Binding Path="Unit"/>
                                                                                            </MultiBinding>
                                                                                        </Label.Text>
                                                                                    </Label>
                                                                                </DataTemplate>
                                                                            </CollectionView.ItemTemplate>
                                                                        </CollectionView>
                                                                    </VerticalStackLayout>
                                                                </Frame>
                                                            </VerticalStackLayout>
                                                            
                                                            <!-- Add-ons -->
                                                            <VerticalStackLayout Grid.Row="2"
                                                                                 Grid.ColumnSpan="2"
                                                                                 Spacing="6"
                                                                                 IsVisible="{Binding Addons.Count, Converter={StaticResource IsPositiveConverter}}">
                                                                <Label Text="âž• Add-ons:"
                                                                       FontAttributes="Bold"
                                                                       FontSize="13"
                                                                       FontFamily="MontserratBlack"
                                                                       TextColor="#5B4F45"/>
                                                                <Frame BackgroundColor="White"
                                                                       CornerRadius="8"
                                                                       Padding="12,8"
                                                                       HasShadow="False"
                                                                       BorderColor="#E0E0E0">
                                                                    <VerticalStackLayout Spacing="4">
                                                                        <CollectionView ItemsSource="{Binding Addons}"
                                                                                        SelectionMode="None">
                                                                            <CollectionView.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Label FontSize="12"
                                                                                           FontFamily="OpenSansSemibold"
                                                                                           TextColor="#666"
                                                                                           Margin="0,2"
                                                                                           Padding="8,4">
                                                                                        <Label.Text>
                                                                                            <MultiBinding StringFormat="â€¢ {0} (x{1}): {2} {3} per serving">
                                                                                                <Binding Path="AddonName"/>
                                                                                                <Binding Path="Quantity"/>
                                                                                                <Binding Path="Amount"/>
                                                                                                <Binding Path="Unit"/>
                                                                                            </MultiBinding>
                                                                                        </Label.Text>
                                                                                    </Label>
                                                                                </DataTemplate>
                                                                            </CollectionView.ItemTemplate>
                                                                        </CollectionView>
                                                                    </VerticalStackLayout>
                                                                </Frame>
                                                            </VerticalStackLayout>
                                                        </Grid>
                                                    </Frame>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </Frame>
    </Grid>
</ContentView>


