<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.ManageInventoryOptions"
    BackgroundColor="#80000000"
    x:Name="PopupRoot"
    IsVisible="{Binding IsInventoryManagementPopupVisible}">

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseInventoryManagementPopupCommand}" />
        </Grid.GestureRecognizers>

        <!-- Popup Frame -->
        <Frame VerticalOptions="Center"
               HorizontalOptions="Center"
               Padding="30"
               BackgroundColor="#FFF9F4"
               CornerRadius="28"
               WidthRequest="450"
               HeightRequest="350"
               HasShadow="True">

            <VerticalStackLayout Spacing="30">

                <!-- Title -->
                <Label Text="Manage Inventory Items"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#4A3F35"
                       HorizontalOptions="Center" />

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

                    <Button Text="Add Item"
                            WidthRequest="220"
                            HeightRequest="55"
                            FontSize="16"
                            Command="{Binding AddItemCommand}"
                            BackgroundColor="#A57C5C"
                            TextColor="White"
                            CornerRadius="25"
                            />

                    <Button Text="Edit Item"
                            WidthRequest="220"
                            HeightRequest="55"
                            FontSize="16"
                            Command="{Binding EditItemCommand}"
                            BackgroundColor="#897564"
                            TextColor="White"
                            CornerRadius="25"
                             />

                </VerticalStackLayout>

                <!-- Close Button -->
                <Button Text="Close"
                        WidthRequest="120"
                        HeightRequest="45"
                        FontSize="16"
                        BackgroundColor="#F28C8C"
                        TextColor="White"
                        CornerRadius="22"
                        HorizontalOptions="Center"            
                        Command="{Binding CloseInventoryManagementPopupCommand}" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentView>
