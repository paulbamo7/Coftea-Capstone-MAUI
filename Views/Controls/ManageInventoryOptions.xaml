<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.ManageInventoryOptions"
    BackgroundColor="#80000000"
    x:Name="PopupRoot"
    IsVisible="{Binding IsInventoryManagementPopupVisible}">

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseInventoryManagementPopupCommand}" />
        </Grid.GestureRecognizers>

        <!-- Popup Frame -->
        <Frame VerticalOptions="Center"
               HorizontalOptions="Center"
               Padding="30"
               BackgroundColor="#F8E8D7"
               CornerRadius="20"
               WidthRequest="450"
               HeightRequest="350"
               HasShadow="True">

            <VerticalStackLayout Spacing="30">

                <!-- Title -->
                <Label Text="Manage Inventory Items"
                       FontSize="28"
                       FontAttributes="Bold"
                       FontFamily="Montserrat-Black"
                       TextColor="#5B4F45"
                       HorizontalOptions="Center" />

                <!-- Action Buttons -->
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">

                    <Button Text="Add Item"
                            WidthRequest="240"
                            HeightRequest="55"
                            FontSize="16"
                            FontAttributes="Bold"
                            FontFamily="OpenSansSemibold"
                            Command="{Binding AddItemCommand}"
                            BackgroundColor="#5B4F45"
                            TextColor="White"
                            CornerRadius="20"
                            BorderWidth="0"
                            />

                    <Button Text="Edit Item"
                            WidthRequest="240"
                            HeightRequest="55"
                            FontSize="16"
                            FontAttributes="Bold"
                            FontFamily="OpenSansSemibold"
                            Command="{Binding EditItemCommand}"
                            BackgroundColor="#D4A574"
                            TextColor="White"
                            CornerRadius="20"
                            BorderWidth="0"
                            />

                </VerticalStackLayout>

                <!-- Close Button -->
                <Button Text="Close"
                        WidthRequest="140"
                        HeightRequest="50"
                        FontSize="15"
                        FontAttributes="Bold"
                        BackgroundColor="#BDAEA2"
                        TextColor="#5B4F45"
                        BorderColor="#8B7355"
                        BorderWidth="2"
                        CornerRadius="20"
                       HorizontalOptions="Center"            
                       Command="{Binding CloseInventoryManagementPopupCommand}" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentView>
