<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Controls.ConnectivityStatusIndicator"
             x:Name="ConnectivityIndicatorView">
    
    <Frame BackgroundColor="{Binding StatusBackgroundColor}"
           CornerRadius="20"
           Padding="12,6"
           HasShadow="True"
           HorizontalOptions="End"
           VerticalOptions="Start"
           Margin="0,10,20,0">
        <HorizontalStackLayout Spacing="8">
            <!-- Status Icon -->
            <Label Text="{Binding StatusIcon}"
                   FontSize="16"
                   VerticalOptions="Center"/>
            
            <!-- Status Text -->
            <Label Text="{Binding StatusText}"
                   FontSize="12"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"/>
            
            <!-- Pending Count Badge (only visible when offline with pending operations) -->
            <Frame BackgroundColor="#FF6B6B"
                   CornerRadius="10"
                   Padding="6,2"
                   HasShadow="False"
                   IsVisible="{Binding HasPendingOperations}"
                   VerticalOptions="Center">
                <Label Text="{Binding PendingCountText}"
                       FontSize="10"
                       FontAttributes="Bold"
                       TextColor="White"/>
            </Frame>
        </HorizontalStackLayout>
    </Frame>
</ContentView>

