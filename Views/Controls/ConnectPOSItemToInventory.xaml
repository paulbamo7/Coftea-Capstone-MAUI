<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Controls.ConnectPOSItemToInventory"
             xmlns:views="clr-namespace:Coftea_Capstone.Views.Pages"
             BackgroundColor="#80000000"
             IsVisible="{Binding IsAddItemToPOSVisible}">

    <!-- Add Item to POS Section -->
    <Grid ColumnDefinitions="200, *" RowDefinitions="*">

        <!-- Background Gradient -->
        <VerticalStackLayout Grid.Column="1" Padding="30,60,0,0">
            <HorizontalStackLayout Spacing="20">
                <Frame MaximumHeightRequest="550" HeightRequest="600" WidthRequest="500" BackgroundColor="#F8E8D7">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Product Details" FontAttributes="Bold" FontSize="30" Padding="0,0,0,25"/>
                        <Label Text="Product Name" FontSize="25"/>
                        <Entry Placeholder="Product Name" PlaceholderColor="Black" Text="{Binding ProductName}"/>

                        <Frame BorderColor="Gray" CornerRadius="10" HeightRequest="120" WidthRequest="455" BackgroundColor="#E0E0E0" 
                               HorizontalOptions="Start" Margin="0,30,0,30">
                            <Grid>
                                <Entry Placeholder="Enter Image" Margin="0,0,0,35" Text="{Binding ImagePath}"/>
                                <Label Text="Click to upload or drag and drop" HorizontalOptions="Center" VerticalOptions="Center" 
                                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black" FontAttributes="Bold"/>
                                <!-- <Image Source="uploadicon.png" WidthRequest="30" Margin="0,0,0,35"/>
                                <Button x:Name="UploadButton" BackgroundColor="Transparent" /> -->
                            </Grid>
                        </Frame>
                        <Label Text="Product Category" FontSize="25"/>
                        <Picker Title="Select Category" 
                                ItemsSource="{Binding Category}" 
                                SelectedItem="{Binding SelectedCategory}"
                                FontSize="14"
                                WidthRequest="200"
                                HorizontalOptions="Start"/>

                        <Label Text="Color Code" FontSize="25"/>
                        <Entry Placeholder="Product Category" Keyboard="Email" PlaceholderColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame MaximumHeightRequest="550" HeightRequest="600" WidthRequest="500" BackgroundColor="#F8E8D7">
                    <VerticalStackLayout>
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Product Size" FontAttributes="Bold" FontSize="30" VerticalOptions="Center" Grid.Column="0"/>
                            <ImageButton Source="close.png" WidthRequest="20" HeightRequest="20" Grid.Column="1" 
                                         VerticalOptions="Center" Command="{Binding CloseAddItemToPOSCommand}"/>
                        </Grid>

                        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,15,0,0">
                            <Label Text="Small Price" FontSize="25" HorizontalOptions="Center"/>
                            <Label Text="Large Price" FontSize="25" HorizontalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Entry Placeholder="Enter Small Price"
                               Keyboard="Numeric"
                               Text="{Binding SmallPrice}"
                               PlaceholderColor="Black" />
                        <Entry Placeholder="Enter Large Price"
                               Keyboard="Numeric"
                               Text="{Binding LargePrice}"
                               PlaceholderColor="Black" />

                        <Label Text="Description (Optional)" FontSize="25" Margin="0,25,0,0"/>
                        <Frame BackgroundColor="#FFFFFF" 
                               Margin="0,10,0,0"
                               CornerRadius="10" 
                               Padding="10"
                               HasShadow="False">
                            <Editor Placeholder="Enter product description..." 
                                HeightRequest="150" 
                                Text="{Binding ProductDescription}" 
                                BackgroundColor="Transparent"
                                TextColor="Black"/>
                        </Frame>

                        <Button Text="Next" WidthRequest="150" BackgroundColor="#E6DE9D" TextColor="Black" 
                                Command="{Binding AddProductCommand}" HorizontalOptions="End" Margin="0,20,0,0"/>
                        <Button Text="Next" WidthRequest="150" BackgroundColor="#E6DE9D" TextColor="Black" 
                                Command="{Binding ConnectPOSToInventoryCommand}" HorizontalOptions="End" Margin="0,20,0,0"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentView>