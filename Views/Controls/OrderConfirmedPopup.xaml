<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coftea_Capstone.Views.Controls.OrderConfirmedPopup"
    x:Name="OrderConfirmedPopupView"
    BackgroundColor="Transparent"
    IsVisible="{Binding IsVisible, FallbackValue=False, TargetNullValue=False}"
    InputTransparent="True">

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="True">
        
        <!-- Order Confirmation Card - Bottom Right -->
        <Frame VerticalOptions="End"
               HorizontalOptions="End"
               Margin="20,0,20,100"
               Padding="20"
               BackgroundColor="#4CAF50"
               CornerRadius="15"
               WidthRequest="380"
               MaximumHeightRequest="500"
               HasShadow="True"
               InputTransparent="True"
               Opacity="{Binding Opacity}">

            <Grid RowDefinitions="Auto, Auto, Auto">
                
                <!-- Success Icon -->
                <Grid Grid.Row="0" HorizontalOptions="Center" Margin="0,0,0,10">
                    <Label Text="✓"
                           FontSize="32" FontFamily="MontserratBlack"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Grid>

                <!-- Order Confirmed Text -->
                <Label Grid.Row="1" 
                       Text="Order Confirmed!"
                       FontSize="18" FontFamily="MontserratBlack"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,0,0,5" />

                <!-- Transaction Details -->
                <Grid Grid.Row="2">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding OrderDetails, StringFormat='Order #{0}'}"
                               FontSize="14" FontFamily="MontserratBlack"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Opacity="0.9" />
                        <Label Text="{Binding TotalAmount, StringFormat='Total: ₱{0:F2}'}"
                               FontSize="16" FontFamily="MontserratBlack"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        
                        <!-- Payment Breakdown -->
                        <Frame BackgroundColor="#45A049"
                               CornerRadius="8"
                               Padding="10"
                               HasShadow="False"
                               Margin="0,5,0,0"
                               IsVisible="{Binding HasMultiplePaymentMethods}">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Payment Breakdown"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       Margin="0,0,0,3" />
                                
                                <CollectionView ItemsSource="{Binding PaymentBreakdown}"
                                               HeightRequest="100">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="*, Auto" Margin="0,2">
                                                <Label Grid.Column="0"
                                                       Text="{Binding DisplayText}"
                                                       FontSize="11"
                                                       TextColor="White"
                                                       VerticalOptions="Center" />
                                                <HorizontalStackLayout Grid.Column="1" Spacing="5">
                                                    <Label Text="{Binding PaymentMethod}"
                                                           FontSize="10"
                                                           FontAttributes="Bold"
                                                           TextColor="#FFD700"
                                                           VerticalOptions="Center" />
                                                    <Label Text="{Binding FormattedAmount}"
                                                           FontSize="11"
                                                           FontAttributes="Bold"
                                                           TextColor="White"
                                                           VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Single Payment Method (when no breakdown needed) -->
                        <Label Text="{Binding PaymentMethod, StringFormat='Payment: {0}'}"
                               FontSize="12" FontFamily="MontserratBlack"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Opacity="0.8"
                               IsVisible="{Binding HasSinglePaymentMethod}" />
                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentView>
