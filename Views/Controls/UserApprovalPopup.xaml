<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Views.Controls.UserApprovalPopup"
             x:Name="PendingUsersPopupView"
             BackgroundColor="Transparent"
             IsVisible="{Binding IsUserApprovalPopupVisible, FallbackValue=False}">

    <!-- Popup Content -->
    <Frame Grid.Row="0" Grid.Column="0" 
           BackgroundColor="White" 
           CornerRadius="15" 
           Padding="0"
           Margin="50"
           HorizontalOptions="Center" 
           VerticalOptions="Center"
           WidthRequest="600"
           HeightRequest="500">

        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header -->
            <Grid Grid.Row="0" BackgroundColor="#BDAEA2" Padding="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
                       Text="Pending User Requests" 
                       FontSize="22" 
                       FontAttributes="Bold" 
                       FontFamily="Montserrat-Black"
                       TextColor="#5B4F45"
                       VerticalOptions="Center"/>

                <ImageButton Grid.Column="1" 
                             Source="close.png" 
                             WidthRequest="28" 
                             HeightRequest="28"
                             BackgroundColor="Transparent"
                             Command="{Binding CloseUserApprovalPopupCommand}"/>
            </Grid>

            <!-- Content -->
            <ScrollView Grid.Row="1" Padding="20">
                <CollectionView ItemsSource="{Binding PendingRequests}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#F8E8D7" 
                                   CornerRadius="12" 
                                   Padding="20" 
                                   Margin="0,8">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                                    <!-- User Basic Info -->
                                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                                        <Label FontSize="17" 
                                               FontAttributes="Bold" 
                                               FontFamily="Montserrat-Black"
                                               TextColor="#5B4F45">
                                            <Label.Text>
                                                <MultiBinding StringFormat="Name: {0} {1}">
                                                    <Binding Path="FirstName"/>
                                                    <Binding Path="LastName"/>
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>
                                        <Label Text="{Binding Email, StringFormat='Email: {0}'}" 
                                               FontSize="14" 
                                               FontFamily="OpenSans-Regular"
                                               TextColor="#8B7355"/>
                                    </VerticalStackLayout>

                                    <!-- Registration Details -->
                                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,8,0,0">
                                        <Label Text="{Binding PhoneNumber, StringFormat='Phone: {0}'}" 
                                               FontSize="13" 
                                               FontFamily="OpenSans-Regular"
                                               TextColor="#8B7355"/>
                                        <Label Text="{Binding Address, StringFormat='Address: {0}'}" 
                                               FontSize="13" 
                                               FontFamily="OpenSans-Regular"
                                               TextColor="#8B7355"/>
                                        <Label Text="{Binding Birthday, StringFormat='Birthday: {0:MMM dd, yyyy}'}" 
                                               FontSize="13" 
                                               FontFamily="OpenSans-Regular"
                                               TextColor="#8B7355"/>
                                        <Label Text="{Binding RegistrationDate, StringFormat='Registered: {0:MMM dd, yyyy HH:mm}'}" 
                                               FontSize="13" 
                                               FontFamily="OpenSans-Regular"
                                               TextColor="#8B7355"/>
                                    </VerticalStackLayout>

                                    <!-- Action Buttons -->
                                    <Button Grid.Row="2" Grid.Column="1" 
                                            Text="Accept" 
                                            BackgroundColor="#5B4F45" 
                                            TextColor="White"
                                            BorderWidth="0"
                                            CornerRadius="20"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            Padding="25,10"
                                            WidthRequest="120"
                                            HeightRequest="45"
                                            Command="{Binding Source={x:Reference PendingUsersPopupView}, Path=BindingContext.ApproveRequestCommand}"
                                            CommandParameter="{Binding .}"/>

                                    <Button Grid.Row="2" Grid.Column="2" 
                                            Text="Reject" 
                                            BackgroundColor="#D4A574" 
                                            TextColor="White"
                                            BorderWidth="0"
                                            CornerRadius="20"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            Padding="25,10"
                                            WidthRequest="120"
                                            HeightRequest="45"
                                            Command="{Binding Source={x:Reference PendingUsersPopupView}, Path=BindingContext.DenyRequestCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.EmptyView>
                        <Grid Padding="40" HorizontalOptions="Center">
                            <VerticalStackLayout Spacing="15">
                                <Label Text="No pending requests" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       FontFamily="Montserrat-Black"
                                       TextColor="#5B4F45" 
                                       HorizontalOptions="Center"/>
                                <Label Text="All user requests have been processed" 
                                       FontSize="14" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="#8B7355" 
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Grid>
                    </CollectionView.EmptyView>
                </CollectionView>
            </ScrollView>

            <!-- Footer -->
            <Grid Grid.Row="2" BackgroundColor="#F8E8D7" Padding="20,15">
                <Button Text="Close" 
                        BackgroundColor="#BDAEA2" 
                        TextColor="#5B4F45"
                        BorderColor="#8B7355"
                        BorderWidth="2"
                        CornerRadius="20"
                        FontSize="15"
                        FontAttributes="Bold"
                        Padding="30,10"
                        HorizontalOptions="End"
                        WidthRequest="120"
                        HeightRequest="45"
                        Command="{Binding CloseUserApprovalPopupCommand}"/>
            </Grid>
        </Grid>
    </Frame>
</ContentView>