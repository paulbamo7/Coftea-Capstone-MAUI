<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Coftea_Capstone.Pages.LoginPage" 
             Shell.NavBarIsVisible="False">

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#C1A892" Offset="0.25" />
            <GradientStop Color="#5B4F45" Offset="0.85" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Outer Grid to center content -->
    <Grid>
        <ScrollView VerticalOptions="Center" HorizontalOptions="Center">
            <Frame BackgroundColor="#C0BBB6"
                   CornerRadius="5"
                   Padding="45,0,45,0"
                   HasShadow="False"
                   WidthRequest="420"
                   HeightRequest="650">

                <VerticalStackLayout Spacing="15"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Fill">

                    <!-- Logo -->
                    <Image Source="coftea_logo.png"
                           HeightRequest="250"
                           HorizontalOptions="Center"/>

                    <!-- Email -->
                    <Label Text="Email:" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Start"/>
                    <Entry x:Name="EmailInput" 
                           Placeholder="Enter Email" 
                           PlaceholderColor="White"
                           BackgroundColor="Transparent"
                           HeightRequest="40"/>

                    <!-- Password -->
                    <Label Text="Enter Password:" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Start"/>
                    <Entry x:Name="PasswordInput" 
                           Placeholder="Enter Password"
                           PlaceholderColor="White"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           HeightRequest="40"/>

                    <!-- Register -->
                    <Label Text="No Account?  Register Now!" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" 
                           FontSize="12"
                           TextColor="Black"
                           Padding="10">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- Login Button -->
                    <Button Text="Login" 
                            x:Name="LoginBtn"
                            BackgroundColor="#5B4F45" 
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            WidthRequest="200"
                            HorizontalOptions="Center"
                            Clicked="LoginBtn_Clicked"/>

                    <!-- Admin Login -->
                    <Label Text="Admin Login" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           FontSize="12"
                           Padding="10,20,10,0"/>
                </VerticalStackLayout>
            </Frame>
        </ScrollView>
    </Grid>
</ContentPage>