<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coftea_Capstone.Pages.AdminDashboard"
             xmlns:views="clr-namespace:Coftea_Capstone.View"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#C1A892">

    <Grid ColumnDefinitions="200, *" RowDefinitions="*">

        <!-- Sidebar Navigation -->
        <views:NavigationBar Grid.Column="0"/>

        <!-- Main Content -->
        <VerticalStackLayout Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Top Bar -->
                <Grid ColumnDefinitions="*, Auto, Auto, Auto" VerticalOptions="Center">
                    <Label Text="Home" FontSize="32" FontAttributes="Bold" VerticalOptions="Center"/>
                    <SearchBar Placeholder="Search for something" Grid.Column="1" WidthRequest="300"/>
                    <ImageButton Source="settings.png" Grid.Column="2" WidthRequest="30" HeightRequest="30" />
                    <ImageButton Source="usericon.png" Grid.Column="3" WidthRequest="40" HeightRequest="40"/>
                </Grid>

                <!-- Top Metrics -->
                <Grid ColumnDefinitions="*,*,*" HeightRequest="200">
                    <Frame CornerRadius="20" Padding="20" BackgroundColor="#c8a47e" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="Total Sales Today:" FontAttributes="Bold" FontSize="24"/>
                            <Label Text="â‚± 2,500" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,25,0,0"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="20" Padding="20" BackgroundColor="#c8a47e" Margin="5" Grid.Column="1">
                        <VerticalStackLayout>
                            <Label Text="Number of Orders Today:" FontAttributes="Bold" FontSize="24"/>
                            <Label Text="50" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,25,0,0"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="20" Padding="20" BackgroundColor="#c8a47e" Margin="5" Grid.Column="2" >
                        <VerticalStackLayout>
                            <Label Text="Best Selling Today:" FontAttributes="Bold" FontSize="24"/>
                            <Image Source="drink.png" HeightRequest="85"/>
                            <Label Text="Java Chip" FontSize="20" HorizontalOptions="Center" Padding="0, 20, 0, 0"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Sales Report & Inventory -->
                <Grid ColumnDefinitions="2*, *" RowDefinitions="Auto, Auto">

                    <!-- Monthly Sales Report -->
                    <Frame Grid.Column="0" CornerRadius="20" Padding="10" BackgroundColor="White" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="Monthly Sales Report" FontAttributes="Bold"/>

                            <!-- Chart Placeholder -->
                            <BoxView HeightRequest="150" Color="#eee"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Inventory Alert -->
                    <Frame Grid.Column="1" CornerRadius="20" Padding="10" BackgroundColor="White" Margin="5">
                        <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                            <Label Text="Inventory Alert" FontAttributes="Bold"/>
                            <Label Text="Espresso - Out of Stock" TextColor="Red"/>
                            <Label Text="Pearl - Low of Stock" TextColor="Orange"/>
                            <Label Text="Yakult - Low of Stock" TextColor="Orange"/>
                            <Button Text="See More" BackgroundColor="#c8a47e" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Recent Actions + Today's Sales Report -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" Margin="0,10,0,0">

                    <!-- List of Recent Actions -->
                    <Frame Grid.Column="0" CornerRadius="20" Padding="10" BackgroundColor="White" Margin="5">
                        <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                            <Label Text="List of Recent Action" FontAttributes="Bold"/>
                            <Frame BackgroundColor="#f5f5f5" Padding="10">
                                <Label Text="Order #23 Completed"/>
                            </Frame>
                            <Frame BackgroundColor="#f5f5f5" Padding="10">
                                <Label Text="Order #24 Completed"/>
                            </Frame>
                            <Frame BackgroundColor="#f5f5f5" Padding="10">
                                <Label Text="Order #25 Completed"/>
                            </Frame>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Today's Sales Report -->
                    <Frame Grid.Column="1" CornerRadius="20" Padding="10" BackgroundColor="White" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="Today's Sales Report" FontAttributes="Bold"/>
                            <!-- Chart Placeholder -->
                            <BoxView HeightRequest="150" Color="#eee"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
