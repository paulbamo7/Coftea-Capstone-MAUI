<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Coftea_Capstone.Pages.LoginPage"
             xmlns:vm="clr-namespace:Coftea_Capstone.ViewModel"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:LoginPageViewModel />
    </ContentPage.BindingContext>

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#C1A892" Offset="0.25" />
            <GradientStop Color="#5B4F45" Offset="0.85" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Outer Grid to center content -->
    <Grid>
        <ScrollView VerticalOptions="Center" HorizontalOptions="Center">
            <Frame BackgroundColor="#C0BBB6"
                   CornerRadius="5"
                   Padding="45,0,45,0"
                   HasShadow="False"
                   WidthRequest="420"
                   HeightRequest="650">

                <VerticalStackLayout Spacing="15"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Fill">
                    
                    <!-- Logo -->
                    <Image Source="coftea_logo.png"
                           HeightRequest="250"
                           HorizontalOptions="Center"/>

                    <!-- Email -->
                    <Label Text="Email:" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Start"/>
     
                    <Entry x:Name="EmailInput" 
                           Text="{Binding Email}"
                           Placeholder="Enter Email" 
                           PlaceholderColor="White"
                           BackgroundColor="Transparent"
                           HeightRequest="40"/>

                    <!-- Password -->
                    <Label Text="Enter Password:" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Start"/>
                    <Entry x:Name="PasswordInput" 
                           Text="{Binding Password}"
                           Placeholder="Enter Password"
                           PlaceholderColor="White"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           HeightRequest="40"/>
                    
                    <HorizontalStackLayout VerticalOptions="Center" Margin="-10,-12,0,0">
                        <CheckBox IsChecked="False" VerticalOptions="Center" HorizontalOptions="Start"/>
                        <Label Text="Remember Me"
                            TextColor="White"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"/>
                    </HorizontalStackLayout>
                    
                    <!-- Register -->
                    <Label Text="No Account? Register Now!" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" 
                           FontSize="12"
                           TextColor="Black"
                           Padding="5">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- Login Button -->
                    <Button Text="Login" 
                            x:Name="LoginBtn"
                            BackgroundColor="#5B4F45" 
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            WidthRequest="200"
                            HorizontalOptions="Center"
                            Command="{Binding LoginCommand}"/>

                    <!-- Admin Login -->
                    <Label Text="Admin Login" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           FontSize="12"
                           Padding="10,5,10,0"/>
                </VerticalStackLayout>
            </Frame>
        </ScrollView>
    </Grid>
</ContentPage>